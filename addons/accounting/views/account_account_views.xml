<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Account Tree View -->
        <record id="view_account_account_tree" model="ocean.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <tree string="Chart of Accounts" create="true" edit="true" delete="true">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="account_type"/>
                    <field name="parent_id"/>
                    <field name="level"/>
                    <field name="currency_id"/>
                    <field name="balance"/>
                    <field name="credit"/>
                    <field name="debit"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Account Form View -->
        <record id="view_account_account_form" model="ocean.ui.view">
            <field name="name">account.account.form</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <form string="Account" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_view_moves" string="View Moves" type="object" class="btn-primary"/>
                        <button name="action_view_reconcile" string="Reconcile" type="object" class="btn-info"/>
                        <button name="action_view_balance" string="View Balance" type="object" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Account Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="account_type"/>
                                <field name="parent_id"/>
                                <field name="level"/>
                                <field name="currency_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="balance"/>
                                <field name="credit"/>
                                <field name="debit"/>
                                <field name="reconcile"/>
                                <field name="deprecated"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Account Search View -->
        <record id="view_account_account_search" model="ocean.ui.view">
            <field name="name">account.account.search</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <search string="Search Accounts">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="account_type"/>
                    <field name="parent_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Assets" name="assets" domain="[('account_type', '=', 'asset')]"/>
                    <filter string="Liabilities" name="liabilities" domain="[('account_type', '=', 'liability')]"/>
                    <filter string="Equity" name="equity" domain="[('account_type', '=', 'equity')]"/>
                    <filter string="Income" name="income" domain="[('account_type', '=', 'income')]"/>
                    <filter string="Expenses" name="expenses" domain="[('account_type', '=', 'expense')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Account Type" name="group_account_type" context="{'group_by': 'account_type'}"/>
                        <filter string="Parent" name="group_parent" context="{'group_by': 'parent_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Account Account Action -->
        <record id="action_account_account" model="ocean.actions.act_window">
            <field name="name">Chart of Accounts</field>
            <field name="res_model">account.account</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_account_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first account!
                </p>
                <p>
                    Accounts are used to organize your financial transactions.
                </p>
            </field>
        </record>
        
        <!-- Account Account Type Tree View -->
        <record id="view_account_account_type_tree" model="ocean.ui.view">
            <field name="name">account.account.type.tree</field>
            <field name="model">account.account.type</field>
            <field name="arch" type="xml">
                <tree string="Account Types" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="include_initial_balance"/>
                    <field name="internal_group"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Account Type Form View -->
        <record id="view_account_account_type_form" model="ocean.ui.view">
            <field name="name">account.account.type.form</field>
            <field name="model">account.account.type</field>
            <field name="arch" type="xml">
                <form string="Account Type" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Account Type Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="include_initial_balance"/>
                                <field name="internal_group"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="note"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Account Type Action -->
        <record id="action_account_account_type" model="ocean.actions.act_window">
            <field name="name">Account Types</field>
            <field name="res_model">account.account.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first account type!
                </p>
                <p>
                    Account types help categorize your accounts.
                </p>
            </field>
        </record>
        
    </data>
</ocean>