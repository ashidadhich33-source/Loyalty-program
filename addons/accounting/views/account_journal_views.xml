<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Journal Tree View -->
        <record id="view_account_journal_tree" model="ocean.ui.view">
            <field name="name">account.journal.tree</field>
            <field name="model">account.journal</field>
            <field name="arch" type="xml">
                <tree string="Journals" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
                    <field name="sequence"/>
                    <field name="currency_id"/>
                    <field name="show_on_dashboard"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Journal Form View -->
        <record id="view_account_journal_form" model="ocean.ui.view">
            <field name="name">account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="arch" type="xml">
                <form string="Journal" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_create_journal_entry" string="Create Journal Entry" type="object" class="btn-primary"/>
                        <button name="action_view_journal_entries" string="View Journal Entries" type="object" class="btn-info"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Journal Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="type"/>
                                <field name="sequence"/>
                                <field name="currency_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="show_on_dashboard"/>
                                <field name="restrict_mode_hash_table"/>
                                <field name="sequence_id"/>
                                <field name="refund_sequence_id"/>
                            </group>
                        </group>
                        <group string="Default Accounts">
                            <group>
                                <field name="default_account_id"/>
                                <field name="payment_debit_account_id"/>
                                <field name="payment_credit_account_id"/>
                            </group>
                            <group>
                                <field name="bank_id"/>
                                <field name="bank_account_id"/>
                                <field name="invoice_reference_type"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Journal Search View -->
        <record id="view_account_journal_search" model="ocean.ui.view">
            <field name="name">account.journal.search</field>
            <field name="model">account.journal</field>
            <field name="arch" type="xml">
                <search string="Search Journals">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Sales" name="sale" domain="[('type', '=', 'sale')]"/>
                    <filter string="Purchase" name="purchase" domain="[('type', '=', 'purchase')]"/>
                    <filter string="Cash" name="cash" domain="[('type', '=', 'cash')]"/>
                    <filter string="Bank" name="bank" domain="[('type', '=', 'bank')]"/>
                    <filter string="General" name="general" domain="[('type', '=', 'general')]"/>
                    <filter string="Show on Dashboard" name="dashboard" domain="[('show_on_dashboard', '=', True)]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Journal Type" name="group_type" context="{'group_by': 'type'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Account Journal Action -->
        <record id="action_account_journal" model="ocean.actions.act_window">
            <field name="name">Journals</field>
            <field name="res_model">account.journal</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_journal_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first journal!
                </p>
                <p>
                    Journals are used to record financial transactions.
                </p>
            </field>
        </record>
        
        <!-- Account Journal Template Tree View -->
        <record id="view_account_journal_template_tree" model="ocean.ui.view">
            <field name="name">account.journal.template.tree</field>
            <field name="model">account.journal.template</field>
            <field name="arch" type="xml">
                <tree string="Journal Templates" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="sequence"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Journal Template Form View -->
        <record id="view_account_journal_template_form" model="ocean.ui.view">
            <field name="name">account.journal.template.form</field>
            <field name="model">account.journal.template</field>
            <field name="arch" type="xml">
                <form string="Journal Template" create="true" edit="true" delete="true">
                    <header>
                        <button name="create_journal_from_template" string="Create Journal from Template" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Template Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="sequence"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Journal Template Action -->
        <record id="action_account_journal_template" model="ocean.actions.act_window">
            <field name="name">Journal Templates</field>
            <field name="res_model">account.journal.template</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first journal template!
                </p>
                <p>
                    Journal templates help you create journals quickly.
                </p>
            </field>
        </record>
        
    </data>
</ocean>