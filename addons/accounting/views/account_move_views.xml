<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Move Tree View -->
        <record id="view_account_move_tree" model="ocean.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree string="Journal Entries" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="ref"/>
                    <field name="journal_id"/>
                    <field name="state"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Move Form View -->
        <record id="view_account_move_form" model="ocean.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <form string="Journal Entry" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_post" string="Post" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', '=', 'posted')]}"/>
                        <button name="action_draft" string="Set to Draft" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                        <button name="action_reverse" string="Reverse" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'posted')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Entry Number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="ref"/>
                                <field name="journal_id"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="amount_total"/>
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Narration">
                            <field name="narration"/>
                        </group>
                        <group string="Move Lines">
                            <field name="line_ids" nolabel="1">
                                <tree string="Journal Entry Lines" create="true" edit="true" delete="true">
                                    <field name="sequence"/>
                                    <field name="account_id"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="partner_id"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="amount_currency"/>
                                    <field name="age_group"/>
                                    <field name="size"/>
                                    <field name="season"/>
                                    <field name="brand"/>
                                    <field name="color"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Move Search View -->
        <record id="view_account_move_search" model="ocean.ui.view">
            <field name="name">account.move.search</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <search string="Search Journal Entries">
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="journal_id"/>
                    <field name="state"/>
                    <field name="partner_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancel')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date', '>=', 'today'), ('date', '<=', 'today')]"/>
                    <filter string="This Week" name="this_week" domain="[('date', '>=', 'this_week'), ('date', '<=', 'this_week')]"/>
                    <filter string="This Month" name="this_month" domain="[('date', '>=', 'this_month'), ('date', '<=', 'this_month')]"/>
                    <filter string="This Year" name="this_year" domain="[('date', '>=', 'this_year'), ('date', '<=', 'this_year')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Journal" name="group_journal" context="{'group_by': 'journal_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Account Move Action -->
        <record id="action_account_move" model="ocean.actions.act_window">
            <field name="name">Journal Entries</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_move_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first journal entry!
                </p>
                <p>
                    Journal entries record financial transactions.
                </p>
            </field>
        </record>
        
        <!-- Account Move Line Tree View -->
        <record id="view_account_move_line_tree" model="ocean.ui.view">
            <field name="name">account.move.line.tree</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <tree string="Journal Entry Lines" create="true" edit="true" delete="true">
                    <field name="move_id"/>
                    <field name="account_id"/>
                    <field name="name"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="price_unit"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Move Line Form View -->
        <record id="view_account_move_line_form" model="ocean.ui.view">
            <field name="name">account.move.line.form</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <form string="Journal Entry Line" create="true" edit="true" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="move_id"/>
                                <field name="sequence"/>
                                <field name="account_id"/>
                                <field name="name"/>
                                <field name="debit"/>
                                <field name="credit"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                                <field name="amount_currency"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="ref"/>
                                <field name="tax_ids"/>
                                <field name="analytic_account_id"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Move Line Action -->
        <record id="action_account_move_line" model="ocean.actions.act_window">
            <field name="name">Journal Entry Lines</field>
            <field name="res_model">account.move.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    View journal entry lines!
                </p>
                <p>
                    Journal entry lines show the details of each transaction.
                </p>
            </field>
        </record>
        
    </data>
</ocean>