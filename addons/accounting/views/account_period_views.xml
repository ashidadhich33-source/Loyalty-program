<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Period Tree View -->
        <record id="view_account_period_tree" model="ocean.ui.view">
            <field name="name">account.period.tree</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <tree string="Accounting Periods" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="state"/>
                    <field name="fiscalyear_id"/>
                    <field name="special"/>
                    <field name="period_type"/>
                    <field name="move_count"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Period Form View -->
        <record id="view_account_period_form" model="ocean.ui.view">
            <field name="name">account.period.form</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <form string="Accounting Period" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_open" string="Open" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_close" string="Close" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <button name="action_reopen" string="Reopen" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'closed')]}"/>
                        <button name="action_view_moves" string="View Moves" type="object" class="btn-info"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Period Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
                                <field name="fiscalyear_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="special"/>
                                <field name="period_type"/>
                                <field name="move_count"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Period Search View -->
        <record id="view_account_period_search" model="ocean.ui.view">
            <field name="name">account.period.search</field>
            <field name="model">account.period</field>
            <field name="arch" type="xml">
                <search string="Search Accounting Periods">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="fiscalyear_id"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Open" name="open" domain="[('state', '=', 'open')]"/>
                    <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                    <separator/>
                    <filter string="Special Periods" name="special" domain="[('special', '=', True)]"/>
                    <filter string="Monthly" name="monthly" domain="[('period_type', '=', 'monthly')]"/>
                    <filter string="Quarterly" name="quarterly" domain="[('period_type', '=', 'quarterly')]"/>
                    <filter string="Yearly" name="yearly" domain="[('period_type', '=', 'yearly')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Fiscal Year" name="group_fiscalyear" context="{'group_by': 'fiscalyear_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Period Type" name="group_period_type" context="{'group_by': 'period_type'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Account Period Action -->
        <record id="action_account_period" model="ocean.actions.act_window">
            <field name="name">Accounting Periods</field>
            <field name="res_model">account.period</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_period_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first accounting period!
                </p>
                <p>
                    Accounting periods help you organize your financial data.
                </p>
            </field>
        </record>
        
        <!-- Account Fiscal Year Tree View -->
        <record id="view_account_fiscal_year_tree" model="ocean.ui.view">
            <field name="name">account.fiscal.year.tree</field>
            <field name="model">account.fiscal.year</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Years" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                    <field name="state"/>
                    <field name="period_count"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Fiscal Year Form View -->
        <record id="view_account_fiscal_year_form" model="ocean.ui.view">
            <field name="name">account.fiscal.year.form</field>
            <field name="model">account.fiscal.year</field>
            <field name="arch" type="xml">
                <form string="Fiscal Year" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_open" string="Open" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_close" string="Close" type="object" class="btn-danger" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <button name="action_reopen" string="Reopen" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'closed')]}"/>
                        <button name="generate_periods" string="Generate Periods" type="object" class="btn-info" attrs="{'invisible': [('period_count', '>', 0)]}"/>
                        <button name="action_view_periods" string="View Periods" type="object" class="btn-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Fiscal Year Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="date_start"/>
                                <field name="date_stop"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="period_count"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Fiscal Year Action -->
        <record id="action_account_fiscal_year" model="ocean.actions.act_window">
            <field name="name">Fiscal Years</field>
            <field name="res_model">account.fiscal.year</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first fiscal year!
                </p>
                <p>
                    Fiscal years help you organize your accounting periods.
                </p>
            </field>
        </record>
        
    </data>
</ocean>