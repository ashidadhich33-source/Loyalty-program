<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Tree View -->
        <record id="view_account_account_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <tree string="Chart of Accounts" decoration-muted="not is_active" decoration-success="account_type=='income'" decoration-info="account_type=='asset'" decoration-warning="account_type=='liability'" decoration-danger="account_type=='expense'">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="account_type"/>
                    <field name="current_balance"/>
                    <field name="is_active"/>
                    <field name="is_reconcilable"/>
                    <field name="gst_applicable"/>
                    <field name="tds_applicable"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Form View -->
        <record id="view_account_account_form" model="ir.ui.view">
            <field name="name">account.account.form</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <form string="Account">
                    <header>
                        <button name="action_view_entries" string="View Entries" type="object" class="btn-primary"/>
                        <button name="action_view_balance" string="View Balance" type="object" class="btn-info"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="is_active"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Account Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="account_type"/>
                                <field name="parent_id"/>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                                <field name="is_reconcilable"/>
                                <field name="is_depreciated"/>
                                <field name="opening_balance"/>
                                <field name="current_balance"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                            <group>
                                <h3>Indian Compliance</h3>
                                <field name="gst_applicable"/>
                                <field name="gst_rate" attrs="{'invisible': [('gst_applicable', '=', False)]}"/>
                                <field name="tds_applicable"/>
                                <field name="tds_rate" attrs="{'invisible': [('tds_applicable', '=', False)]}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Analytics</h3>
                                <field name="total_debit"/>
                                <field name="total_credit"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Search View -->
        <record id="view_account_account_search" model="ir.ui.view">
            <field name="name">account.account.search</field>
            <field name="model">account.account</field>
            <field name="arch" type="xml">
                <search string="Search Accounts">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="account_type"/>
                    <field name="company_id"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                    <field name="brand_focus"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Reconcilable" name="reconcilable" domain="[('is_reconcilable', '=', True)]"/>
                    <filter string="GST Applicable" name="gst_applicable" domain="[('gst_applicable', '=', True)]"/>
                    <filter string="TDS Applicable" name="tds_applicable" domain="[('tds_applicable', '=', True)]"/>
                    <separator/>
                    <filter string="Assets" name="assets" domain="[('account_type', '=', 'asset')]"/>
                    <filter string="Liabilities" name="liabilities" domain="[('account_type', '=', 'liability')]"/>
                    <filter string="Equity" name="equity" domain="[('account_type', '=', 'equity')]"/>
                    <filter string="Income" name="income" domain="[('account_type', '=', 'income')]"/>
                    <filter string="Expenses" name="expenses" domain="[('account_type', '=', 'expense')]"/>
                    <separator/>
                    <filter string="Kids Clothing" name="kids_clothing" domain="[('product_category', '=', 'clothing')]"/>
                    <filter string="Accessories" name="accessories" domain="[('product_category', '=', 'accessories')]"/>
                    <filter string="Shoes" name="shoes" domain="[('product_category', '=', 'shoes')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Account Type" name="group_account_type" context="{'group_by': 'account_type'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group_focus'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season_specialization'}"/>
                        <filter string="Product Category" name="group_product_category" context="{'group_by': 'product_category'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Account Action -->
        <record id="action_account_account" model="ir.actions.act_window">
            <field name="name">Chart of Accounts</field>
            <field name="res_model">account.account</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_account_search"/>
            <field name="context">{}</field>
        </record>
        
    </data>
</ocean>