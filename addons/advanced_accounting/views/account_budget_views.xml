<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Budget Tree View -->
        <record id="view_account_budget_tree" model="ir.ui.view">
            <field name="name">account.budget.tree</field>
            <field name="model">account.budget</field>
            <field name="arch" type="xml">
                <tree string="Budgets" decoration-muted="state=='cancelled'" decoration-success="state=='approved'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="fiscal_year_id"/>
                    <field name="total_budget"/>
                    <field name="total_actual"/>
                    <field name="variance"/>
                    <field name="variance_percentage"/>
                    <field name="state"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                </tree>
            </field>
        </record>
        
        <!-- Budget Form View -->
        <record id="view_account_budget_form" model="ir.ui.view">
            <field name="name">account.budget.form</field>
            <field name="model">account.budget</field>
            <field name="arch" type="xml">
                <form string="Budget">
                    <header>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" states="draft"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <button name="action_draft" string="Set to Draft" type="object" class="btn-info" states="cancelled"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Budget Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fiscal_year_id"/>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="total_budget"/>
                                <field name="total_actual"/>
                                <field name="variance"/>
                                <field name="variance_percentage"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Budget Lines" name="budget_lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="account_id"/>
                                        <field name="budget_amount"/>
                                        <field name="actual_amount"/>
                                        <field name="variance"/>
                                        <field name="variance_percentage"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Budget Action -->
        <record id="action_account_budget" model="ir.actions.act_window">
            <field name="name">Budgets</field>
            <field name="res_model">account.budget</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</ocean>