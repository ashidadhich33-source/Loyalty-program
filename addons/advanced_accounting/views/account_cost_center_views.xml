<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Cost Center Tree View -->
        <record id="view_account_cost_center_tree" model="ir.ui.view">
            <field name="name">account.cost.center.tree</field>
            <field name="model">account.cost.center</field>
            <field name="arch" type="xml">
                <tree string="Cost Centers" decoration-muted="not is_active">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="manager_id"/>
                    <field name="is_active"/>
                    <field name="total_expenses"/>
                    <field name="total_revenue"/>
                    <field name="profit_loss"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                </tree>
            </field>
        </record>
        
        <!-- Cost Center Form View -->
        <record id="view_account_cost_center_form" model="ir.ui.view">
            <field name="name">account.cost.center.form</field>
            <field name="model">account.cost.center</field>
            <field name="arch" type="xml">
                <form string="Cost Center">
                    <header>
                        <button name="action_view_expenses" string="View Expenses" type="object" class="btn-primary"/>
                        <button name="action_view_revenue" string="View Revenue" type="object" class="btn-info"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="is_active"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Cost Center Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="parent_id"/>
                                <field name="manager_id"/>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="is_active"/>
                                <field name="total_expenses"/>
                                <field name="total_revenue"/>
                                <field name="profit_loss"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Cost Center Action -->
        <record id="action_account_cost_center" model="ir.actions.act_window">
            <field name="name">Cost Centers</field>
            <field name="res_model">account.cost.center</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</ocean>