<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Journal Entry Tree View -->
        <record id="view_account_move_tree" model="ir.ui.view">
            <field name="name">account.move.tree</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <tree string="Journal Entries" decoration-muted="state=='cancelled'" decoration-success="state=='posted'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="date"/>
                    <field name="journal_id"/>
                    <field name="move_type"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                </tree>
            </field>
        </record>
        
        <!-- Journal Entry Form View -->
        <record id="view_account_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <form string="Journal Entry">
                    <header>
                        <button name="action_post" string="Post" type="object" class="btn-primary" states="draft"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <button name="action_draft" string="Set to Draft" type="object" class="btn-info" states="cancelled"/>
                        <button name="action_reverse" string="Reverse" type="object" class="btn-warning" states="posted"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Entry Number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="ref"/>
                                <field name="date"/>
                                <field name="journal_id"/>
                                <field name="move_type"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                                <field name="amount_total"/>
                                <field name="amount_debit"/>
                                <field name="amount_credit"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                            <group>
                                <h3>Indian Compliance</h3>
                                <field name="gst_applicable"/>
                                <field name="gst_amount" attrs="{'invisible': [('gst_applicable', '=', False)]}"/>
                                <field name="tds_applicable"/>
                                <field name="tds_amount" attrs="{'invisible': [('tds_applicable', '=', False)]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Entry Lines" name="entry_lines">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="account_id"/>
                                        <field name="partner_id"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <field name="balance"/>
                                        <field name="age_group_focus"/>
                                        <field name="season_specialization"/>
                                        <field name="product_category"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="narration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Journal Entry Search View -->
        <record id="view_account_move_search" model="ir.ui.view">
            <field name="name">account.move.search</field>
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <search string="Search Journal Entries">
                    <field name="name"/>
                    <field name="ref"/>
                    <field name="journal_id"/>
                    <field name="partner_id"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                    <field name="brand_focus"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Sales" name="sales" domain="[('move_type', '=', 'out_invoice')]"/>
                    <filter string="Purchase" name="purchase" domain="[('move_type', '=', 'in_invoice')]"/>
                    <filter string="Journal Entry" name="entry" domain="[('move_type', '=', 'entry')]"/>
                    <separator/>
                    <filter string="Kids Clothing" name="kids_clothing" domain="[('product_category', '=', 'clothing')]"/>
                    <filter string="Accessories" name="accessories" domain="[('product_category', '=', 'accessories')]"/>
                    <filter string="Shoes" name="shoes" domain="[('product_category', '=', 'shoes')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Journal" name="group_journal" context="{'group_by': 'journal_id'}"/>
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group_focus'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season_specialization'}"/>
                        <filter string="Product Category" name="group_product_category" context="{'group_by': 'product_category'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Journal Entry Action -->
        <record id="action_account_move" model="ir.actions.act_window">
            <field name="name">Journal Entries</field>
            <field name="res_model">account.move</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_move_search"/>
            <field name="context">{}</field>
        </record>
        
    </data>
</ocean>