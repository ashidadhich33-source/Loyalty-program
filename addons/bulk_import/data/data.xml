<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Template Actions -->
    <record id="action_import_template" model="ir.actions.act_window">
        <field name="name">Import Templates</field>
        <field name="res_model">import.template</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first import template!
            </p>
            <p>
                Import templates help you import data from Excel/CSV files into your ERP system.
            </p>
        </field>
    </record>

    <record id="action_import_job" model="ir.actions.act_window">
        <field name="name">Import Jobs</field>
        <field name="res_model">import.job</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_draft': 1}</field>
    </record>

    <record id="action_import_mapping" model="ir.actions.act_window">
        <field name="name">Field Mappings</field>
        <field name="res_model">import.mapping</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_import_history" model="ir.actions.act_window">
        <field name="name">Import History</field>
        <field name="res_model">import.history</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <record id="action_import_record" model="ir.actions.act_window">
        <field name="name">Import Records</field>
        <field name="res_model">import.record</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_import_statistics" model="ir.actions.act_window">
        <field name="name">Import Statistics</field>
        <field name="res_model">import.statistics</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <record id="action_import_statistics_graph" model="ir.actions.act_window">
        <field name="name">Import Statistics Graph</field>
        <field name="res_model">import.statistics</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_import_statistics_graph"/>
    </record>

    <record id="action_import_statistics_pivot" model="ir.actions.act_window">
        <field name="name">Import Statistics Pivot</field>
        <field name="res_model">import.statistics</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_import_statistics_pivot"/>
    </record>

    <!-- Default Import Templates -->
    <record id="template_products" model="import.template">
        <field name="name">Products Import Template</field>
        <field name="description">Template for importing products with variants</field>
        <field name="model_id" ref="model_product_template"/>
        <field name="template_type">excel</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="gender_validation">True</field>
        <field name="size_validation">True</field>
        <field name="is_default">True</field>
        <field name="required_fields">name,list_price</field>
        <field name="unique_fields">default_code</field>
    </record>

    <record id="template_categories" model="import.template">
        <field name="name">Categories Import Template</field>
        <field name="description">Template for importing product categories</field>
        <field name="model_id" ref="model_product_category"/>
        <field name="template_type">excel</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="gender_validation">True</field>
        <field name="is_default">True</field>
        <field name="required_fields">name,age_group,gender</field>
    </record>

    <record id="template_contacts" model="import.template">
        <field name="name">Contacts Import Template</field>
        <field name="description">Template for importing customers, suppliers, and vendors</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="template_type">excel</field>
        <field name="gstin_validation">True</field>
        <field name="pan_validation">True</field>
        <field name="mobile_validation">True</field>
        <field name="is_default">True</field>
        <field name="required_fields">name,email</field>
        <field name="unique_fields">email</field>
    </record>

    <record id="template_child_profiles" model="import.template">
        <field name="name">Child Profiles Import Template</field>
        <field name="description">Template for importing child profiles</field>
        <field name="model_id" ref="model_child_profile"/>
        <field name="template_type">excel</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="gender_validation">True</field>
        <field name="size_validation">True</field>
        <field name="is_default">True</field>
        <field name="required_fields">name,date_of_birth,gender</field>
    </record>

    <!-- Default Field Mappings for Products -->
    <record id="mapping_product_name" model="import.mapping">
        <field name="template_id" ref="template_products"/>
        <field name="source_field">name</field>
        <field name="target_field">name</field>
        <field name="data_type">char</field>
        <field name="required">True</field>
        <field name="sequence">10</field>
    </record>

    <record id="mapping_product_code" model="import.mapping">
        <field name="template_id" ref="template_products"/>
        <field name="source_field">code</field>
        <field name="target_field">default_code</field>
        <field name="data_type">char</field>
        <field name="sequence">20</field>
    </record>

    <record id="mapping_product_price" model="import.mapping">
        <field name="template_id" ref="template_products"/>
        <field name="source_field">price</field>
        <field name="target_field">list_price</field>
        <field name="data_type">float</field>
        <field name="required">True</field>
        <field name="sequence">30</field>
    </record>

    <record id="mapping_product_age_group" model="import.mapping">
        <field name="template_id" ref="template_products"/>
        <field name="source_field">age_group</field>
        <field name="target_field">age_group</field>
        <field name="data_type">selection</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="sequence">40</field>
    </record>

    <record id="mapping_product_gender" model="import.mapping">
        <field name="template_id" ref="template_products"/>
        <field name="source_field">gender</field>
        <field name="target_field">gender</field>
        <field name="data_type">selection</field>
        <field name="is_kids_specific">True</field>
        <field name="gender_validation">True</field>
        <field name="sequence">50</field>
    </record>

    <!-- Default Field Mappings for Categories -->
    <record id="mapping_category_name" model="import.mapping">
        <field name="template_id" ref="template_categories"/>
        <field name="source_field">name</field>
        <field name="target_field">name</field>
        <field name="data_type">char</field>
        <field name="required">True</field>
        <field name="sequence">10</field>
    </record>

    <record id="mapping_category_age_group" model="import.mapping">
        <field name="template_id" ref="template_categories"/>
        <field name="source_field">age_group</field>
        <field name="target_field">age_group</field>
        <field name="data_type">selection</field>
        <field name="required">True</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="sequence">20</field>
    </record>

    <record id="mapping_category_gender" model="import.mapping">
        <field name="template_id" ref="template_categories"/>
        <field name="source_field">gender</field>
        <field name="target_field">gender</field>
        <field name="data_type">selection</field>
        <field name="required">True</field>
        <field name="is_kids_specific">True</field>
        <field name="gender_validation">True</field>
        <field name="sequence">30</field>
    </record>

    <!-- Default Field Mappings for Contacts -->
    <record id="mapping_contact_name" model="import.mapping">
        <field name="template_id" ref="template_contacts"/>
        <field name="source_field">name</field>
        <field name="target_field">name</field>
        <field name="data_type">char</field>
        <field name="required">True</field>
        <field name="sequence">10</field>
    </record>

    <record id="mapping_contact_email" model="import.mapping">
        <field name="template_id" ref="template_contacts"/>
        <field name="source_field">email</field>
        <field name="target_field">email</field>
        <field name="data_type">char</field>
        <field name="required">True</field>
        <field name="validation_rule">email</field>
        <field name="sequence">20</field>
    </record>

    <record id="mapping_contact_mobile" model="import.mapping">
        <field name="template_id" ref="template_contacts"/>
        <field name="source_field">mobile</field>
        <field name="target_field">mobile</field>
        <field name="data_type">char</field>
        <field name="mobile_validation">True</field>
        <field name="sequence">30</field>
    </record>

    <record id="mapping_contact_gstin" model="import.mapping">
        <field name="template_id" ref="template_contacts"/>
        <field name="source_field">gstin</field>
        <field name="target_field">gstin</field>
        <field name="data_type">char</field>
        <field name="gstin_validation">True</field>
        <field name="sequence">40</field>
    </record>

    <!-- Default Field Mappings for Child Profiles -->
    <record id="mapping_child_name" model="import.mapping">
        <field name="template_id" ref="template_child_profiles"/>
        <field name="source_field">name</field>
        <field name="target_field">name</field>
        <field name="data_type">char</field>
        <field name="required">True</field>
        <field name="sequence">10</field>
    </record>

    <record id="mapping_child_dob" model="import.mapping">
        <field name="template_id" ref="template_child_profiles"/>
        <field name="source_field">date_of_birth</field>
        <field name="target_field">date_of_birth</field>
        <field name="data_type">date</field>
        <field name="required">True</field>
        <field name="sequence">20</field>
    </record>

    <record id="mapping_child_gender" model="import.mapping">
        <field name="template_id" ref="template_child_profiles"/>
        <field name="source_field">gender</field>
        <field name="target_field">gender</field>
        <field name="data_type">selection</field>
        <field name="required">True</field>
        <field name="is_kids_specific">True</field>
        <field name="gender_validation">True</field>
        <field name="sequence">30</field>
    </record>

    <record id="mapping_child_size" model="import.mapping">
        <field name="template_id" ref="template_child_profiles"/>
        <field name="source_field">clothing_size</field>
        <field name="target_field">clothing_size</field>
        <field name="data_type">selection</field>
        <field name="is_kids_specific">True</field>
        <field name="size_validation">True</field>
        <field name="sequence">40</field>
    </record>
</odoo>