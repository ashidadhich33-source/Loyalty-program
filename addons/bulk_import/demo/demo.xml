        <field name="accuracy_score">92.0</field>
        <field name="consistency_score">96.0</field>
        <field name="business_impact">high</field>
        <field name="cost_savings">5000.0</field>
        <field name="time_savings">8.0</field>
    </record>

    <record id="demo_import_history_categories" model="import.history">
        <field name="import_job_id" ref="demo_import_job_categories"/>
        <field name="import_date">2025-01-01 11:02:00</field>
