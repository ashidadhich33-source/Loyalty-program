    <!-- Demo Import Records -->
    <record id="demo_import_record_success" model="import.record">
        <field name="import_job_id" ref="demo_import_job_products"/>
        <field name="record_id">1</field>
        <field name="model_name">product.template</field>
        <field name="action">create</field>
        <field name="state">success</field>
        <field name="data">{"name": "Kids T-Shirt", "list_price": 299.0, "age_group": "4-6", "gender": "unisex"}</field>
        <field name="processing_time">2.5</field>
        <field name="record_name">Kids T-Shirt</field>
        <field name="record_code">KTS001</field>
    </record>

    <record id="demo_import_record_error" model="import.record">
        <field name="import_job_id" ref="demo_import_job_products"/>
        <field name="model_name">product.template</field>
        <field name="action">create</field>
        <field name="state">error</field>
        <field name="data">{"name": "Invalid Product", "list_price": -50.0, "age_group": "invalid", "gender": "unknown"}</field>
        <field name="error_message">Invalid price: -50.0. Price must be positive.</field>
        <field name="error_type">validation_error</field>
        <field name="error_code">INVALID_PRICE</field>
        <field name="processing_time">1.0</field>
    </record>

    <!-- Demo Import Mappings -->
    <record id="demo_mapping_product_color" model="import.mapping">
        <field name="template_id" ref="demo_template_products_advanced"/>
        <field name="source_field">color</field>
        <field name="target_field">color</field>
        <field name="data_type">selection</field>
        <field name="is_kids_specific">True</field>
        <field name="sequence">60</field>
    </record>

    <record id="demo_mapping_product_brand" model="import.mapping">
        <field name="template_id" ref="demo_template_products_advanced"/>
        <field name="source_field">brand</field>
        <field name="target_field">brand_id</field>
        <field name="data_type">many2one</field>
        <field name="related_model">product.brand</field>
        <field name="search_field">name</field>
        <field name="create_if_not_found">True</field>
        <field name="sequence">70</field>
    </record>

    <record id="demo_mapping_product_category" model="import.mapping">
        <field name="template_id" ref="demo_template_products_advanced"/>
        <field name="source_field">category</field>
        <field name="target_field">categ_id</field>
        <field name="data_type">many2one</field>
        <field name="related_model">product.category</field>
        <field name="search_field">name</field>
        <field name="create_if_not_found">True</field>
        <field name="sequence">80</field>
    </record>
</odoo>