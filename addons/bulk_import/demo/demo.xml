<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Demo Import Templates -->
    <record id="demo_template_products_advanced" model="import.template">
        <field name="name">Advanced Products Import Template</field>
        <field name="description">Advanced template for importing products with all variants and attributes</field>
        <field name="model_id" ref="model_product_template"/>
        <field name="template_type">excel</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="gender_validation">True</field>
        <field name="size_validation">True</field>
        <field name="required_fields">name,list_price,age_group,gender</field>
        <field name="unique_fields">default_code</field>
        <field name="version">2.0</field>
        <field name="parent_template_id" ref="template_products"/>
    </record>

    <record id="demo_template_categories_advanced" model="import.template">
        <field name="name">Advanced Categories Import Template</field>
        <field name="description">Advanced template for importing categories with hierarchy</field>
        <field name="model_id" ref="model_product_category"/>
        <field name="template_type">excel</field>
        <field name="is_kids_specific">True</field>
        <field name="age_group_validation">True</field>
        <field name="gender_validation">True</field>
        <field name="required_fields">name,age_group,gender,season</field>
        <field name="version">2.0</field>
        <field name="parent_template_id" ref="template_categories"/>
    </record>

    <!-- Demo Import Jobs -->
    <record id="demo_import_job_products" model="import.job">
        <field name="name">Demo Products Import</field>
        <field name="description">Demo import job for products</field>
        <field name="template_id" ref="template_products"/>
        <field name="state">completed</field>
        <field name="total_rows">100</field>
        <field name="processed_rows">100</field>
        <field name="success_rows">95</field>
        <field name="error_rows">5</field>
        <field name="start_time">2025-01-01 10:00:00</field>
        <field name="end_time">2025-01-01 10:05:00</field>
        <field name="duration">300</field>
    </record>

    <record id="demo_import_job_categories" model="import.job">
        <field name="name">Demo Categories Import</field>
        <field name="description">Demo import job for categories</field>
        <field name="template_id" ref="template_categories"/>
        <field name="state">completed</field>
        <field name="total_rows">50</field>
        <field name="processed_rows">50</field>
        <field name="success_rows">50</field>
        <field name="error_rows">0</field>
        <field name="start_time">2025-01-01 11:00:00</field>
        <field name="end_time">2025-01-01 11:02:00</field>
        <field name="duration">120</field>
    </record>

    <record id="demo_import_job_contacts" model="import.job">
        <field name="name">Demo Contacts Import</field>
        <field name="description">Demo import job for contacts</field>
        <field name="template_id" ref="template_contacts"/>
        <field name="state">failed</field>
        <field name="total_rows">200</field>
        <field name="processed_rows">150</field>
        <field name="success_rows">120</field>
        <field name="error_rows">30</field>
        <field name="start_time">2025-01-01 12:00:00</field>
        <field name="end_time">2025-01-01 12:10:00</field>
        <field name="duration">600</field>
    </record>

    <!-- Demo Import History -->
    <record id="demo_import_history_products" model="import.history">
        <field name="import_job_id" ref="demo_import_job_products"/>
        <field name="import_date">2025-01-01 10:05:00</field>
