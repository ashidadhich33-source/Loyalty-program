<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Bulk Import Security Groups -->
        <record id="group_import_manager" model="ocean.groups">
            <field name="name">Import Manager</field>
            <field name="category_id" ref="ocean.module_category_tools"/>
            <field name="comment">Can manage all import operations and templates"/>
        </record>
        
        <record id="group_import_user" model="ocean.groups">
            <field name="name">Import User</field>
            <field name="category_id" ref="ocean.module_category_tools"/>
            <field name="comment">Can use import templates and create import jobs"/>
        </record>
        
        <record id="group_import_analyst" model="ocean.groups">
            <field name="name">Import Analyst</field>
            <field name="category_id" ref="ocean.module_category_tools"/>
            <field name="comment">Can view import history and analytics"/>
        </record>
        
        <!-- Import Template Access Rules -->
        <record id="rule_import_template_own" model="ocean.rule">
            <field name="name">Import Template: Own Records</field>
            <field name="model_id" ref="model_import_template"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_import_user'))]"/>
        </record>
        
        <record id="rule_import_template_company" model="ocean.rule">
            <field name="name">Import Template: Company</field>
            <field name="model_id" ref="model_import_template"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_import_manager'))]"/>
        </record>
        
        <!-- Import Job Access Rules -->
        <record id="rule_import_job_own" model="ocean.rule">
            <field name="name">Import Job: Own Records</field>
            <field name="model_id" ref="model_import_job"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_import_user'))]"/>
        </record>
        
        <record id="rule_import_job_company" model="ocean.rule">
            <field name="name">Import Job: Company</field>
            <field name="model_id" ref="model_import_job"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_import_manager'))]"/>
        </record>
        
        <!-- Import History Access Rules -->
        <record id="rule_import_history_own" model="ocean.rule">
            <field name="name">Import History: Own Records</field>
            <field name="model_id" ref="model_import_history"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_import_analyst'))]"/>
        </record>
        
        <record id="rule_import_history_company" model="ocean.rule">
            <field name="name">Import History: Company</field>
            <field name="model_id" ref="model_import_history"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_import_manager'))]"/>
        </record>
        
    </data>
</ocean>