<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Import Groups -->
    <record id="group_bulk_import_manager" model="res.groups">
        <field name="name">Bulk Import Manager</field>
        <field name="category_id" ref="base.module_category_administration"/>
        <field name="comment">Full access to bulk import management</field>
    </record>

