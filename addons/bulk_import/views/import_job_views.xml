<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Import Jobs Tree View -->
        <record id="view_import_jobs_tree" model="ocean.ui.view">
            <field name="name">import.jobs.tree</field>
            <field name="model">import.job</field>
            <field name="arch" type="xml">
                <tree string="Import Jobs" decoration-muted="state=='draft'" decoration-success="state=='completed'" decoration-warning="state=='running'" decoration-danger="state=='failed'">
                    <field name="name"/>
                    <field name="template_id"/>
                    <field name="state"/>
                    <field name="total_records"/>
                    <field name="processed_records"/>
                    <field name="successful_records"/>
                    <field name="failed_records"/>
                    <field name="progress_percentage"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                </tree>
            </field>
        </record>
        
        <!-- Import Jobs Form View -->
        <record id="view_import_jobs_form" model="ocean.ui.view">
            <field name="name">import.jobs.form</field>
            <field name="model">import.job</field>
            <field name="arch" type="xml">
                <form string="Import Job">
                    <header>
                        <button name="action_start_import" string="Start Import" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel_import" string="Cancel Import" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'running')]}"/>
                        <button name="action_retry_import" string="Retry Import" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'failed')]}"/>
                        <button name="action_view_results" string="View Results" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'completed')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,running,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Job Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="template_id"/>
                                <field name="import_file"/>
                                <field name="batch_size"/>
                                <field name="skip_errors"/>
                                <field name="update_existing"/>
                            </group>
                            <group>
                                <field name="total_records" readonly="1"/>
                                <field name="processed_records" readonly="1"/>
                                <field name="successful_records" readonly="1"/>
                                <field name="failed_records" readonly="1"/>
                                <field name="progress_percentage" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Job description..."/>
                        </group>
                        <notebook>
                            <page string="Progress" name="progress">
                                <group>
                                    <group>
                                        <field name="start_time" readonly="1"/>
                                        <field name="end_time" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="progress_percentage" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Errors" name="errors">
                                <field name="error_log" readonly="1" nolabel="1"/>
                            </page>
                            <page string="Validation" name="validation">
                                <field name="validation_errors" readonly="1" nolabel="1"/>
                            </page>
                            <page string="Summary" name="summary">
                                <field name="import_summary" readonly="1" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Import Jobs Search View -->
        <record id="view_import_jobs_search" model="ocean.ui.view">
            <field name="name">import.jobs.search</field>
            <field name="model">import.job</field>
            <field name="arch" type="xml">
                <search string="Search Jobs">
                    <field name="name"/>
                    <field name="template_id"/>
                    <field name="state"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Running" name="running" domain="[('state', '=', 'running')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('create_date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                    <filter string="This Week" name="this_week" domain="[('create_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                    <filter string="This Month" name="this_month" domain="[('create_date', '>=', datetime.datetime.now().replace(day=1))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Template" name="group_template" context="{'group_by': 'template_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Import Jobs Action -->
        <record id="action_import_jobs" model="ocean.actions.act_window">
            <field name="name">Import Jobs</field>
            <field name="res_model">import.job</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_import_jobs_tree"/>
            <field name="search_view_id" ref="view_import_jobs_search"/>
            <field name="context">{'search_default_draft': 1}</field>
        </record>
        
    </data>
</ocean>