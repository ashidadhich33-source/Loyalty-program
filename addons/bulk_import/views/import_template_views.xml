<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Import Templates Tree View -->
        <record id="view_import_templates_tree" model="ocean.ui.view">
            <field name="name">import.templates.tree</field>
            <field name="model">import.template</field>
            <field name="arch" type="xml">
                <tree string="Import Templates" decoration-muted="not is_active" decoration-success="is_default">
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="template_type"/>
                    <field name="has_header"/>
                    <field name="max_rows"/>
                    <field name="batch_size"/>
                    <field name="usage_count"/>
                    <field name="last_used"/>
                    <field name="is_active"/>
                    <field name="is_default"/>
                </tree>
            </field>
        </record>
        
        <!-- Import Templates Form View -->
        <record id="view_import_templates_form" model="ocean.ui.view">
            <field name="name">import.templates.form</field>
            <field name="model">import.template</field>
            <field name="arch" type="xml">
                <form string="Import Template">
                    <header>
                        <button name="action_download_template" string="Download Template" type="object" class="btn-primary"/>
                        <button name="action_import_data" string="Start Import" type="object" class="btn-success"/>
                        <field name="is_active" widget="boolean_toggle"/>
                        <field name="is_default" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Template Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="model_name"/>
                                <field name="template_type"/>
                                <field name="has_header"/>
                                <field name="skip_empty_rows"/>
                            </group>
                            <group>
                                <field name="max_rows"/>
                                <field name="batch_size"/>
                                <field name="usage_count" readonly="1"/>
                                <field name="last_used" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Template description..."/>
                        </group>
                        <notebook>
                            <page string="Field Mapping" name="mapping">
                                <field name="field_mapping" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                            <page string="Validation Rules" name="validation">
                                <field name="validation_rules" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                            <page string="Template Content" name="content">
                                <field name="template_content" widget="ace"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Import Templates Search View -->
        <record id="view_import_templates_search" model="ocean.ui.view">
            <field name="name">import.templates.search</field>
            <field name="model">import.template</field>
            <field name="arch" type="xml">
                <search string="Search Templates">
                    <field name="name"/>
                    <field name="model_name"/>
                    <field name="template_type"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="Default Templates" name="default" domain="[('is_default', '=', True)]"/>
                    <separator/>
                    <filter string="Excel" name="excel" domain="[('template_type', '=', 'excel')]"/>
                    <filter string="CSV" name="csv" domain="[('template_type', '=', 'csv')]"/>
                    <filter string="JSON" name="json" domain="[('template_type', '=', 'json')]"/>
                    <filter string="XML" name="xml" domain="[('template_type', '=', 'xml')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Model" name="group_model" context="{'group_by': 'model_name'}"/>
                        <filter string="Template Type" name="group_type" context="{'group_by': 'template_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Import Templates Action -->
        <record id="action_import_templates" model="ocean.actions.act_window">
            <field name="name">Import Templates</field>
            <field name="res_model">import.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_import_templates_tree"/>
            <field name="search_view_id" ref="view_import_templates_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
    </data>
</ocean>