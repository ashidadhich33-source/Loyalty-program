<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Import Wizard Form View -->
        <record id="view_import_wizard_form" model="ocean.ui.view">
            <field name="name">import.wizard.form</field>
            <field name="model">import.wizard</field>
            <field name="arch" type="xml">
                <form string="Bulk Import Wizard">
                    <header>
                        <button name="action_load_template" string="Load Template" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_preview_data" string="Preview Data" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                        <button name="action_start_import" string="Start Import" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                        <button name="action_view_job" string="View Job" type="object" class="btn-primary" attrs="{'invisible': [('state', 'not in', ['importing', 'completed', 'failed'])]}"/>
                        <button name="action_view_results" string="View Results" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'completed')]}"/>
                        <button name="action_reset" string="Reset" type="object" class="btn-secondary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,preview,ready,importing,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Wizard Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="template_id" required="1"/>
                                <field name="import_file"/>
                                <field name="batch_size"/>
                                <field name="skip_errors"/>
                                <field name="update_existing"/>
                                <field name="validate_data"/>
                            </group>
                            <group>
                                <field name="show_preview"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Import description..."/>
                        </group>
                        <notebook>
                            <page string="Import Data" name="data">
                                <field name="import_data" widget="ace" options="{'mode': 'text'}" nolabel="1"/>
                            </page>
                            <page string="Preview" name="preview" attrs="{'invisible': [('show_preview', '=', False)]}">
                                <field name="preview_data" readonly="1" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Import Wizard Action -->
        <record id="action_import_wizard" model="ocean.actions.act_window">
            <field name="name">Bulk Import Wizard</field>
            <field name="res_model">import.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_wizard_form"/>
            <field name="target">new</field>
        </record>
        
    </data>
</ocean>