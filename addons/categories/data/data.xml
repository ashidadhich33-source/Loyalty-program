<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Category Actions -->
    <record id="action_category" model="ir.actions.act_window">
        <field name="name">Categories</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first category!
            </p>
            <p>
                Categories help organize your products by age group, gender, season, and brand type.
            </p>
        </field>
    </record>

    <record id="action_category_analytics" model="ir.actions.act_window">
        <field name="name">Category Analytics</field>
        <field name="res_model">category.analytics</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today': 1}</field>
    </record>

    <record id="action_category_analytics_dashboard" model="ir.actions.act_window">
        <field name="name">Category Analytics Dashboard</field>
        <field name="res_model">category.analytics</field>
        <field name="view_mode">dashboard</field>
        <field name="view_id" ref="view_category_analytics_dashboard"/>
    </record>

    <record id="action_category_attribute" model="ir.actions.act_window">
        <field name="name">Category Attributes</field>
        <field name="res_model">category.attribute</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_category_rule" model="ir.actions.act_window">
        <field name="name">Category Rules</field>
        <field name="res_model">category.rule</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Analytics Actions -->
    <record id="action_category_performance" model="ir.actions.act_window">
        <field name="name">Category Performance</field>
        <field name="res_model">category.analytics</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_category_performance_graph"/>
