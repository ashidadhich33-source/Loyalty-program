<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Categories -->
        <record id="category_babywear" model="product.category">
            <field name="name">Babywear</field>
            <field name="age_group">0-2</field>
            <field name="gender">unisex</field>
            <field name="season">all_season</field>
            <field name="brand_type">all</field>
            <field name="style_type">all</field>
            <field name="color_family">all</field>
            <field name="size_range">all</field>
            <field name="is_main_category">True</field>
            <field name="category_code">BABY</field>
            <field name="description">Clothing for babies aged 0-2 years</field>
            <field name="min_age_months">0</field>
            <field name="max_age_months">24</field>
            <field name="default_margin">40.0</field>
            <field name="min_margin">20.0</field>
            <field name="max_margin">60.0</field>
        </record>
        
        <record id="category_toddler" model="product.category">
            <field name="name">Toddler</field>
            <field name="age_group">2-4</field>
            <field name="gender">unisex</field>
            <field name="season">all_season</field>
            <field name="brand_type">all</field>
            <field name="style_type">all</field>
            <field name="color_family">all</field>
            <field name="size_range">all</field>
            <field name="is_main_category">True</field>
            <field name="category_code">TODDLER</field>
            <field name="description">Clothing for toddlers aged 2-4 years</field>
            <field name="min_age_months">24</field>
            <field name="max_age_months">48</field>
            <field name="default_margin">35.0</field>
            <field name="min_margin">20.0</field>
            <field name="max_margin">50.0</field>
        </record>
        
        <record id="category_teen" model="product.category">
            <field name="name">Teen</field>
            <field name="age_group">12-16</field>
            <field name="gender">unisex</field>
            <field name="season">all_season</field>
            <field name="brand_type">all</field>
            <field name="style_type">all</field>
            <field name="color_family">all</field>
            <field name="size_range">all</field>
            <field name="is_main_category">True</field>
            <field name="category_code">TEEN</field>
            <field name="description">Clothing for teens aged 12-16 years</field>
            <field name="min_age_months">144</field>
            <field name="max_age_months">192</field>
            <field name="default_margin">30.0</field>
            <field name="min_margin">15.0</field>
            <field name="max_margin">45.0</field>
        </record>
        
        <!-- Sub-categories for Babywear -->
        <record id="category_babywear_boys" model="product.category">
            <field name="name">Boys</field>
            <field name="parent_id" ref="category_babywear"/>
            <field name="age_group">0-2</field>
            <field name="gender">boys</field>
            <field name="season">all_season</field>
            <field name="brand_type">all</field>
            <field name="style_type">all</field>
            <field name="color_family">all</field>
            <field name="size_range">all</field>
            <field name="category_code">BABY_B</field>
            <field name="description">Boys clothing for babies aged 0-2 years</field>
            <field name="min_age_months">0</field>
            <field name="max_age_months">24</field>
            <field name="default_margin">40.0</field>
            <field name="min_margin">20.0</field>
            <field name="max_margin">60.0</field>
        </record>
        
        <record id="category_babywear_girls" model="product.category">
            <field name="name">Girls</field>
            <field name="parent_id" ref="category_babywear"/>
            <field name="age_group">0-2</field>
            <field name="gender">girls</field>
            <field name="season">all_season</field>
            <field name="brand_type">all</field>
            <field name="style_type">all</field>
            <field name="color_family">all</field>
            <field name="size_range">all</field>
            <field name="category_code">BABY_G</field>
            <field name="description">Girls clothing for babies aged 0-2 years</field>
            <field name="min_age_months">0</field>
            <field name="max_age_months">24</field>
            <field name="default_margin">40.0</field>
            <field name="min_margin">20.0</field>
            <field name="max_margin">60.0</field>
        </record>
        
        <!-- Default Category Tags -->
        <record id="tag_premium" model="product.category.tag">
            <field name="name">Premium</field>
            <field name="color">1</field>
            <field name="description">Premium quality products</field>
        </record>
        
        <record id="tag_budget" model="product.category.tag">
            <field name="name">Budget</field>
            <field name="color">2</field>
            <field name="description">Budget-friendly products</field>
        </record>
        
        <record id="tag_seasonal" model="product.category.tag">
            <field name="name">Seasonal</field>
            <field name="color">3</field>
            <field name="description">Seasonal products</field>
        </record>
        
        <record id="tag_trending" model="product.category.tag">
            <field name="name">Trending</field>
            <field name="color">4</field>
            <field name="description">Trending products</field>
        </record>
        
    </data>
</odoo>