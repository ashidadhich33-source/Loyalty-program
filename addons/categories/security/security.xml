<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Groups -->
        <record id="group_category_manager" model="res.groups">
            <field name="name">Category Manager</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="comment">Can manage product categories, templates, and rules</field>
        </record>
        
        <record id="group_category_user" model="res.groups">
            <field name="name">Category User</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="comment">Can view and use product categories</field>
        </record>
        
        <record id="group_category_analytics" model="res.groups">
            <field name="name">Category Analytics</field>
            <field name="category_id" ref="base.module_category_operations"/>
            <field name="comment">Can view category analytics and reports</field>
        </record>
        
        <!-- Record Rules -->
        <record id="category_rule_public" model="ir.rule">
            <field name="name">Category: Public Access</field>
            <field name="model_id" ref="model_product_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="global" eval="True"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="category_rule_user" model="ir.rule">
            <field name="name">Category: User Access</field>
            <field name="model_id" ref="model_product_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_category_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="category_rule_manager" model="ir.rule">
            <field name="name">Category: Manager Access</field>
            <field name="model_id" ref="model_product_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_category_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- Template Rules -->
        <record id="template_rule_user" model="ir.rule">
            <field name="name">Category Template: User Access</field>
            <field name="model_id" ref="model_product_category_template"/>
