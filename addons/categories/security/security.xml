<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Category Management Security Groups -->
        <record id="group_category_manager" model="ocean.groups">
            <field name="name">Category Manager</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can manage all product categories and analytics"/>
        </record>
        
        <record id="group_category_user" model="ocean.groups">
            <field name="name">Category User</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can view and use product categories"/>
        </record>
        
        <record id="group_category_analyst" model="ocean.groups">
            <field name="name">Category Analyst</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can view category analytics and reports"/>
        </record>
        
        <!-- Category Access Rules -->
        <record id="rule_product_category_own" model="ocean.rule">
            <field name="name">Product Category: Own Records</field>
            <field name="model_id" ref="model_product_category"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_category_user'))]"/>
        </record>
        
        <record id="rule_product_category_company" model="ocean.rule">
            <field name="name">Product Category: Company</field>
            <field name="model_id" ref="model_product_category"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_category_manager'))]"/>
        </record>
        
        <!-- Category Analytics Access Rules -->
        <record id="rule_category_analytics_own" model="ocean.rule">
            <field name="name">Category Analytics: Own Records</field>
            <field name="model_id" ref="model_category_analytics"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_category_analyst'))]"/>
        </record>
        
        <record id="rule_category_analytics_company" model="ocean.rule">
            <field name="name">Category Analytics: Company</field>
            <field name="model_id" ref="model_category_analytics"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_category_manager'))]"/>
        </record>
        
    </data>
</ocean>