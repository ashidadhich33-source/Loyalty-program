<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Category Rule Tree View -->
        <record id="view_product_category_rule_tree" model="ir.ui.view">
            <field name="name">product.category.rule.tree</field>
            <field name="model">product.category.rule</field>
            <field name="arch" type="xml">
                <tree string="Category Rules" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="condition_type"/>
                    <field name="condition_operator"/>
                    <field name="condition_value"/>
                    <field name="action_type"/>
                    <field name="target_category_id"/>
                    <field name="target_template_id"/>
                    <field name="apply_to"/>
                    <field name="last_execution"/>
                    <field name="execution_count"/>
                    <field name="success_count"/>
                    <field name="error_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Category Rule Form View -->
        <record id="view_product_category_rule_form" model="ir.ui.view">
            <field name="name">product.category.rule.form</field>
            <field name="model">product.category.rule</field>
            <field name="arch" type="xml">
                <form string="Category Rule">
                    <header>
                        <button name="test_rule" string="Test Rule" type="object" class="btn-secondary"/>
                        <button name="execute_rule" string="Execute Rule" type="object" class="btn-primary"/>
                        <button name="reset_statistics" string="Reset Statistics" type="object" class="btn-secondary"/>
                        <button name="duplicate_rule" string="Duplicate" type="object" class="btn-secondary"/>
                        <button name="archive" string="Archive" type="object" class="btn-secondary" attrs="{'invisible': [('active', '=', False)]}"/>
                        <button name="unarchive" string="Unarchive" type="object" class="btn-primary" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="get_execution_stats" type="object" class="oe_stat_button" icon="fa-bar-chart">
                                <field name="execution_count" widget="statinfo" string="Executions"/>
                            </button>
                            <button name="get_success_stats" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="success_count" widget="statinfo" string="Success"/>
                            </button>
                            <button name="get_error_stats" type="object" class="oe_stat_button" icon="fa-times">
                                <field name="error_count" widget="statinfo" string="Errors"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Rule Name"/>
                            </h1>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="description"/>
                                <field name="sequence"/>
                                <field name="apply_to"/>
                            </group>
                            <group name="execution_stats">
                                <field name="last_execution"/>
                                <field name="execution_count"/>
                                <field name="success_count"/>
                                <field name="error_count"/>
                            </group>
                        </group>
                        <group>
                            <group name="condition">
                                <field name="condition_type"/>
                                <field name="condition_operator"/>
                                <field name="condition_value"/>
                                <field name="condition_value_2"/>
                            </group>
                            <group name="action">
                                <field name="action_type"/>
                                <field name="target_category_id"/>
                                <field name="target_template_id"/>
                                <field name="margin_value"/>
                                <field name="price_value"/>
                                <field name="tag_ids"/>
                                <field name="notification_message"/>
                                <field name="task_description"/>
                            </group>
                        </group>
                        <group>
                            <field name="company_id"/>
                        </group>
                        <notebook>
                            <page string="Test Results" name="test_results">
                                <group>
                                    <group name="test_stats">
                                        <field name="execution_count"/>
                                        <field name="success_count"/>
                                        <field name="error_count"/>
                                    </group>
                                    <group name="test_performance">
                                        <field name="last_execution"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Category Rule Search View -->
        <record id="view_product_category_rule_search" model="ir.ui.view">
            <field name="name">product.category.rule.search</field>
            <field name="model">product.category.rule</field>
            <field name="arch" type="xml">
                <search string="Category Rules">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="condition_type"/>
                    <field name="condition_operator"/>
                    <field name="condition_value"/>
                    <field name="action_type"/>
                    <field name="target_category_id"/>
                    <field name="target_template_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                    <filter string="Age Group" name="age_group" domain="[('condition_type', '=', 'age_group')]"/>
                    <filter string="Gender" name="gender" domain="[('condition_type', '=', 'gender')]"/>
                    <filter string="Season" name="season" domain="[('condition_type', '=', 'season')]"/>
                    <filter string="Brand Type" name="brand_type" domain="[('condition_type', '=', 'brand_type')]"/>
                    <filter string="Style Type" name="style_type" domain="[('condition_type', '=', 'style_type')]"/>
                    <filter string="Color Family" name="color_family" domain="[('condition_type', '=', 'color_family')]"/>
                    <filter string="Size Range" name="size_range" domain="[('condition_type', '=', 'size_range')]"/>
                    <filter string="Price Range" name="price_range" domain="[('condition_type', '=', 'price_range')]"/>
                    <filter string="Margin Range" name="margin_range" domain="[('condition_type', '=', 'margin_range')]"/>
                    <filter string="Custom Condition" name="custom" domain="[('condition_type', '=', 'custom')]"/>
                    <filter string="Assign Category" name="assign_category" domain="[('action_type', '=', 'assign_category')]"/>
                    <filter string="Assign Template" name="assign_template" domain="[('action_type', '=', 'assign_template')]"/>
                    <filter string="Set Margin" name="set_margin" domain="[('action_type', '=', 'set_margin')]"/>
                    <filter string="Set Price" name="set_price" domain="[('action_type', '=', 'set_price')]"/>
                    <filter string="Set Tag" name="set_tag" domain="[('action_type', '=', 'set_tag')]"/>
                    <filter string="Send Notification" name="send_notification" domain="[('action_type', '=', 'send_notification')]"/>
                    <filter string="Create Task" name="create_task" domain="[('action_type', '=', 'create_task')]"/>
                    <filter string="Custom Action" name="custom_action" domain="[('action_type', '=', 'custom')]"/>
                    <filter string="New Products Only" name="new_products" domain="[('apply_to', '=', 'new_products')]"/>
                    <filter string="Existing Products Only" name="existing_products" domain="[('apply_to', '=', 'existing_products')]"/>
                    <filter string="All Products" name="all_products" domain="[('apply_to', '=', 'all_products')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Condition Type" name="group_condition_type" context="{'group_by': 'condition_type'}"/>
                        <filter string="Action Type" name="group_action_type" context="{'group_by': 'action_type'}"/>
                        <filter string="Apply To" name="group_apply_to" context="{'group_by': 'apply_to'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Category Rule Kanban View -->
        <record id="view_product_category_rule_kanban" model="ir.ui.view">
            <field name="name">product.category.rule.kanban</field>
            <field name="model">product.category.rule</field>
            <field name="arch" type="xml">
                <kanban string="Category Rules" default_group_by="condition_type">
                    <field name="name"/>
                    <field name="condition_type"/>
                    <field name="action_type"/>
                    <field name="execution_count"/>
                    <field name="success_count"/>
                    <field name="error_count"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong class="oe_kanban_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="oe_kanban_tags">
                                            <span class="oe_kanban_tag oe_kanban_tag_color_1">
                                                <field name="condition_type"/>
                                            </span>
                                            <span class="oe_kanban_tag oe_kanban_tag_color_2">
                                                <field name="action_type"/>
                                            </span>
                                        </div>
                                        <div class="oe_kanban_footer">
                                            <div class="oe_kanban_footer_left">
                                                <span class="oe_kanban_footer_text">
                                                    <field name="execution_count"/> executions
                                                </span>
                                            </div>
                                            <div class="oe_kanban_footer_right">
                                                <span class="oe_kanban_footer_text">
                                                    <field name="success_count"/> success
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    </data>
</odoo>