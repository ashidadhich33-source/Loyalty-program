<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Category Tree View -->
        <record id="view_product_category_tree" model="ir.ui.view">
            <field name="name">product.category.tree</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <tree string="Product Categories" default_order="sequence,name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="complete_name"/>
                    <field name="parent_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="brand_type"/>
                    <field name="style_type"/>
                    <field name="color_family"/>
                    <field name="size_range"/>
                    <field name="is_main_category"/>
                    <field name="is_leaf_category"/>
                    <field name="category_code"/>
                    <field name="product_count"/>
                    <field name="total_sales"/>
                    <field name="avg_rating"/>
                    <field name="default_margin"/>
                    <field name="min_margin"/>
                    <field name="max_margin"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Category Form View -->
        <record id="view_product_category_form" model="ir.ui.view">
            <field name="name">product.category.form</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <form string="Product Category">
                    <header>
                        <button name="duplicate" string="Duplicate" type="object" class="btn-secondary"/>
                        <button name="archive" string="Archive" type="object" class="btn-secondary" attrs="{'invisible': [('active', '=', False)]}"/>
                        <button name="unarchive" string="Unarchive" type="object" class="btn-primary" attrs="{'invisible': [('active', '=', True)]}"/>
                        <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="get_products" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                                <field name="product_count" widget="statinfo" string="Products"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Category Name"/>
                            </h1>
                            <h2>
                                <field name="complete_name" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group name="basic_info">
                                <field name="parent_id"/>
                                <field name="category_code"/>
                                <field name="sequence"/>
                                <field name="is_main_category"/>
                                <field name="is_leaf_category"/>
                                <field name="display_type"/>
                            </group>
                            <group name="kids_clothing">
                                <field name="age_group"/>
                                <field name="gender"/>
                                <field name="season"/>
                                <field name="brand_type"/>
                                <field name="style_type"/>
                                <field name="color_family"/>
                                <field name="size_range"/>
                            </group>
                        </group>
                        <group>
                            <group name="business_rules">
                                <field name="min_age_months"/>
                                <field name="max_age_months"/>
                                <field name="min_height_cm"/>
                                <field name="max_height_cm"/>
                                <field name="min_weight_kg"/>
                                <field name="max_weight_kg"/>
                            </group>
                            <group name="pricing_rules">
                                <field name="default_margin"/>
                                <field name="min_margin"/>
                                <field name="max_margin"/>
                            </group>
                        </group>
                        <group>
                            <group name="analytics">
                                <field name="product_count"/>
                                <field name="total_sales"/>
                                <field name="avg_rating"/>
                            </group>
                            <group name="company">
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <group name="seo">
                                <field name="meta_title"/>
                                <field name="meta_description"/>
                                <field name="meta_keywords"/>
                            </group>
                            <group name="images">
                                <field name="image" widget="image" class="oe_avatar"/>
                                <field name="image_medium"/>
                                <field name="image_small"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
    </data>
</odoo>