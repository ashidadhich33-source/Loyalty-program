<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Categories Tree View -->
        <record id="view_categories_tree" model="ocean.ui.view">
            <field name="name">categories.tree</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <tree string="Product Categories" decoration-muted="not is_active" decoration-info="category_type=='age_based'" decoration-success="category_type=='seasonal'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_type"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="parent_id"/>
                    <field name="product_count"/>
                    <field name="margin_percentage"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>
        
        <!-- Categories Form View -->
        <record id="view_categories_form" model="ocean.ui.view">
            <field name="name">categories.form</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <form string="Product Category">
                    <header>
                        <button name="action_view_products" string="View Products" type="object" class="btn-primary"/>
                        <button name="action_analyze_category" string="Analyze Category" type="object" class="btn-info"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Category Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="category_type"/>
                                <field name="age_group" attrs="{'invisible': [('category_type', '!=', 'age_based')]}"/>
                                <field name="gender" attrs="{'invisible': [('category_type', '!=', 'gender')]}"/>
                                <field name="season" attrs="{'invisible': [('category_type', '!=', 'seasonal')]}"/>
                                <field name="parent_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="color"/>
                                <field name="icon"/>
                                <field name="margin_percentage"/>
                                <field name="discount_percentage"/>
                                <field name="product_count" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Category description..."/>
                        </group>
                        <notebook>
                            <page string="Child Categories" name="children">
                                <field name="child_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="category_type"/>
                                        <field name="age_group"/>
                                        <field name="sequence"/>
                                        <field name="is_active"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Analytics" name="analytics">
                                <field name="product_count" readonly="1"/>
                                <group>
                                    <group>
                                        <field name="margin_percentage"/>
                                        <field name="discount_percentage"/>
                                    </group>
                                    <group>
                                        <button name="action_analyze_category" string="Generate Analytics" type="object" class="btn-primary"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Categories Search View -->
        <record id="view_categories_search" model="ocean.ui.view">
            <field name="name">categories.search</field>
            <field name="model">product.category</field>
            <field name="arch" type="xml">
                <search string="Search Categories">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_type"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="parent_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <separator/>
                    <filter string="Age Based" name="age_based" domain="[('category_type', '=', 'age_based')]"/>
                    <filter string="Seasonal" name="seasonal" domain="[('category_type', '=', 'seasonal')]"/>
                    <filter string="Brand" name="brand" domain="[('category_type', '=', 'brand')]"/>
                    <separator/>
                    <filter string="Newborn" name="newborn" domain="[('age_group', '=', 'newborn')]"/>
                    <filter string="Infant" name="infant" domain="[('age_group', '=', 'infant')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Preschool" name="preschool" domain="[('age_group', '=', 'preschool')]"/>
                    <filter string="School" name="school" domain="[('age_group', '=', 'school')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Category Type" name="group_type" context="{'group_by': 'category_type'}"/>
                        <filter string="Age Group" name="group_age" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Parent Category" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Categories Action -->
        <record id="action_categories" model="ocean.actions.act_window">
            <field name="name">Product Categories</field>
            <field name="res_model">product.category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_categories_tree"/>
            <field name="search_view_id" ref="view_categories_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
    </data>
</ocean>