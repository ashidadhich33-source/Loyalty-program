<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Child Profile Tree View -->
        <record id="view_child_profile_tree" model="ocean.ui.view">
            <field name="name">contact.child_profile.tree</field>
            <field name="model">contact.child_profile</field>
            <field name="arch" type="xml">
                <tree string="Child Profiles" decoration-muted="not is_active" decoration-info="age_group=='infant'" decoration-success="age_group=='teen'">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="birth_date"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <!-- Child Profile Form View -->
        <record id="view_child_profile_form" model="ocean.ui.view">
            <field name="name">contact.child_profile.form</field>
            <field name="model">contact.child_profile</field>
            <field name="arch" type="xml">
                <form string="Child Profile">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-success" states="inactive"/>
                        <button name="action_deactivate" string="Deactivate" type="object" class="btn-secondary" states="active"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="inactive,active"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Child Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="parent_id"/>
                                <field name="age_group"/>
                                <field name="gender"/>
                                <field name="birth_date"/>
                                <field name="size_range"/>
                            </group>
                            <group>
                                <field name="favorite_colors"/>
                                <field name="favorite_activities"/>
                                <field name="allergies"/>
                                <field name="special_needs"/>
                                <field name="is_active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Child Profile Search View -->
        <record id="view_child_profile_search" model="ocean.ui.view">
            <field name="name">contact.child_profile.search</field>
            <field name="model">contact.child_profile</field>
            <field name="arch" type="xml">
                <search string="Search Child Profiles">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="Infant" name="infant" domain="[('age_group', '=', 'infant')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Child" name="child" domain="[('age_group', '=', 'child')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Parent" name="parent" context="{'group_by': 'parent_id'}"/>
                        <filter string="Age Group" name="age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
                        <filter string="Active Status" name="active_status" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Child Profile Action -->
        <record id="action_child_profile" model="ocean.actions.act_window">
            <field name="name">Child Profiles</field>
            <field name="res_model">contact.child_profile</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_child_profile_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new child profile
                </p>
                <p>
                    Child profiles help track individual children's preferences and needs.
                </p>
            </field>
        </record>
    </data>
</ocean>
