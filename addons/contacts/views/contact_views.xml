<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Contact Tree View -->
        <record id="view_contact_tree" model="ocean.ui.view">
            <field name="name">contact.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Contacts" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="is_company"/>
                    <field name="customer_rank"/>
                    <field name="supplier_rank"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Contact Form View -->
        <record id="view_contact_form" model="ocean.ui.view">
            <field name="name">contact.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Contact" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_view_sales" string="View Sales" type="object" class="btn-primary"/>
                        <button name="action_view_purchases" string="View Purchases" type="object" class="btn-secondary"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sales" string="Sales" type="object" class="oe_stat_button" icon="fa-shopping-cart"/>
                            <button name="action_view_purchases" string="Purchases" type="object" class="oe_stat_button" icon="fa-truck"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Contact Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_company"/>
                                <field name="parent_id"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="website"/>
                            </group>
                            <group>
                                <field name="customer_rank"/>
                                <field name="supplier_rank"/>
                                <field name="category_id" widget="many2many_tags"/>
                                <field name="user_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Address">
                            <group>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="city"/>
                                <field name="state_id"/>
                            </group>
                            <group>
                                <field name="zip"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Additional Info" name="additional">
                                <field name="comment" placeholder="Internal notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Contact Search View -->
        <record id="view_contact_search" model="ocean.ui.view">
            <field name="name">contact.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search Contacts">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="category_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Customers" name="customers" domain="[('customer_rank', '>', 0)]"/>
                    <filter string="Suppliers" name="suppliers" domain="[('supplier_rank', '>', 0)]"/>
                    <filter string="Companies" name="companies" domain="[('is_company', '=', True)]"/>
                    <filter string="Individuals" name="individuals" domain="[('is_company', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Customer Rank" name="group_customer_rank" context="{'group_by': 'customer_rank'}"/>
                        <filter string="Supplier Rank" name="group_supplier_rank" context="{'group_by': 'supplier_rank'}"/>
                        <filter string="Country" name="group_country" context="{'group_by': 'country_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                        <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Contact Action -->
        <record id="action_contact" model="ocean.actions.act_window">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_contact_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first contact
                </p>
                <p>
                    Contacts are people and companies that you do business with.
                </p>
            </field>
        </record>
        
    </data>
</ocean>
