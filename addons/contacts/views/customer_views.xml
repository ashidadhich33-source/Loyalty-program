<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Customer Tree View -->
        <record id="view_customer_tree" model="ocean.ui.view">
            <field name="name">contact.customer.tree</field>
            <field name="model">contact.customer</field>
            <field name="arch" type="xml">
                <tree string="Customers" decoration-muted="not is_active" decoration-info="customer_type=='individual'" decoration-success="customer_type=='business'">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="customer_type"/>
                    <field name="is_active"/>
                    <field name="total_orders"/>
                    <field name="total_spent"/>
                </tree>
            </field>
        </record>

        <!-- Customer Form View -->
        <record id="view_customer_form" model="ocean.ui.view">
            <field name="name">contact.customer.form</field>
            <field name="model">contact.customer</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-success" states="inactive"/>
                        <button name="action_deactivate" string="Deactivate" type="object" class="btn-secondary" states="active"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="inactive,active"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Customer Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="customer_type"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="website"/>
                            </group>
                            <group>
                                <field name="total_orders"/>
                                <field name="total_spent"/>
                                <field name="average_order_value"/>
                                <field name="last_order_date"/>
                                <field name="customer_since"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Address" name="address">
                                <group>
                                    <group>
                                        <field name="street"/>
                                        <field name="street2"/>
                                        <field name="city"/>
                                        <field name="state_id"/>
                                        <field name="zip"/>
                                        <field name="country_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Customer Search View -->
        <record id="view_customer_search" model="ocean.ui.view">
            <field name="name">contact.customer.search</field>
            <field name="model">contact.customer</field>
            <field name="arch" type="xml">
                <search string="Search Customers">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="customer_type"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="Individual" name="individual" domain="[('customer_type', '=', 'individual')]"/>
                    <filter string="Business" name="business" domain="[('customer_type', '=', 'business')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Customer Type" name="customer_type" context="{'group_by': 'customer_type'}"/>
                        <filter string="Active Status" name="active_status" context="{'group_by': 'is_active'}"/>
                        <filter string="Country" name="country" context="{'group_by': 'country_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Customer Action -->
        <record id="action_customer" model="ocean.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">contact.customer</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_customer_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new customer
                </p>
                <p>
                    Customers are individuals or businesses who purchase your products.
                </p>
            </field>
        </record>
    </data>
</ocean>
