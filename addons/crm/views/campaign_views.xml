<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- CRM Campaigns Tree View -->
        <record id="view_crm_campaigns_tree" model="ocean.ui.view">
            <field name="name">crm.campaigns.tree</field>
            <field name="model">crm.campaign</field>
            <field name="arch" type="xml">
                <tree string="CRM Campaigns" decoration-muted="not is_active" decoration-success="state=='active'" decoration-warning="state=='draft'" decoration-danger="state=='cancelled'">
                    <field name="name"/>
                    <field name="campaign_type"/>
                    <field name="state"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="budget"/>
                    <field name="user_id"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        
        <!-- CRM Campaigns Form View -->
        <record id="view_crm_campaigns_form" model="ocean.ui.view">
            <field name="name">crm.campaigns.form</field>
            <field name="model">crm.campaign</field>
            <field name="arch" type="xml">
                <form string="CRM Campaign">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_pause" string="Pause" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', 'in', ['cancelled', 'done'])]}"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Campaign Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="campaign_type"/>
                                <field name="state"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="budget"/>
                                <field name="user_id"/>
                                <field name="team_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Campaign Details" name="details">
                                <field name="description" placeholder="Campaign description..."/>
                                <field name="note" placeholder="Internal notes..."/>
                            </page>
                            <page string="Kids Clothing Info" name="kids_info">
                                <group>
                                    <group>
                                        <field name="child_count"/>
                                        <field name="child_ages"/>
                                        <field name="age_group_interest"/>
                                    </group>
                                    <group>
                                        <field name="gender_preference"/>
                                        <field name="seasonal_interest"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- CRM Campaigns Search View -->
        <record id="view_crm_campaigns_search" model="ocean.ui.view">
            <field name="name">crm.campaigns.search</field>
            <field name="model">crm.campaign</field>
            <field name="arch" type="xml">
                <search string="Search Campaigns">
                    <field name="name"/>
                    <field name="campaign_type"/>
                    <field name="state"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="budget"/>
                    <field name="user_id"/>
                    <field name="age_group_interest"/>
                    <field name="gender_preference"/>
                    <field name="seasonal_interest"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Active" name="active_state" domain="[('state', '=', 'active')]"/>
                    <filter string="Paused" name="paused" domain="[('state', '=', 'paused')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Email" name="email" domain="[('campaign_type', '=', 'email')]"/>
                    <filter string="SMS" name="sms" domain="[('campaign_type', '=', 'sms')]"/>
                    <filter string="Social Media" name="social" domain="[('campaign_type', '=', 'social')]"/>
                    <filter string="Print" name="print" domain="[('campaign_type', '=', 'print')]"/>
                    <filter string="Online" name="online" domain="[('campaign_type', '=', 'online')]"/>
                    <separator/>
                    <filter string="Newborn" name="newborn" domain="[('age_group_interest', '=', 'newborn')]"/>
                    <filter string="Infant" name="infant" domain="[('age_group_interest', '=', 'infant')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group_interest', '=', 'toddler')]"/>
                    <filter string="Preschool" name="preschool" domain="[('age_group_interest', '=', 'preschool')]"/>
                    <filter string="School" name="school" domain="[('age_group_interest', '=', 'school')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group_interest', '=', 'teen')]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender_preference', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender_preference', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender_preference', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('seasonal_interest', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('seasonal_interest', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('seasonal_interest', '=', 'monsoon')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('start_date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                    <filter string="This Week" name="this_week" domain="[('start_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                    <filter string="This Month" name="this_month" domain="[('start_date', '>=', datetime.datetime.now().replace(day=1))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" context="{'group_by': 'campaign_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="User" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Age Group" name="group_age" context="{'group_by': 'age_group_interest'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender_preference'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'seasonal_interest'}"/>
                        <filter string="Start Date" name="group_start" context="{'group_by': 'start_date'}"/>
                        <filter string="End Date" name="group_end" context="{'group_by': 'end_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- CRM Campaigns Action -->
        <record id="action_crm_campaigns" model="ocean.actions.act_window">
            <field name="name">CRM Campaigns</field>
            <field name="res_model">crm.campaign</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_crm_campaigns_tree"/>
            <field name="search_view_id" ref="view_crm_campaigns_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
    </data>
</ocean>