<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <!-- Sales Dashboard Template -->
    <record id="template_sales_dashboard" model="dashboard.template">
        <field name="name">Sales Dashboard</field>
        <field name="description">Comprehensive sales dashboard with revenue, orders, and customer insights</field>
        <field name="category">sales</field>
        <field name="layout">grid</field>
        <field name="theme">light</field>
        <field name="grid_size">12</field>
        <field name="sequence">10</field>
        <field name="is_default" eval="True"/>
        <field name="preview_description">Perfect for sales managers to track performance and identify opportunities</field>
    </record>

