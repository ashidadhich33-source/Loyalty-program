<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Attendance Tree View -->
        <record id="view_hr_attendance_tree" model="ir.ui.view">
            <field name="name">hr.attendance.tree</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <tree string="Attendance" decoration-info="state=='checked_in'" decoration-success="state=='approved'" decoration-muted="state=='rejected'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
                    <field name="worked_hours"/>
                    <field name="overtime_hours"/>
                    <field name="shift_id"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="brand_focus"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Attendance Form View -->
        <record id="view_hr_attendance_form" model="ir.ui.view">
            <field name="name">hr.attendance.form</field>
            <field name="model">hr.attendance</field>
            <field name="arch" type="xml">
                <form string="Attendance">
                    <header>
                        <button name="action_check_out" string="Check Out" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'checked_in')]}"/>
                        <button name="action_approve" string="Approve" type="object" attrs="{'invisible': [('state', '!=', 'checked_out')]}"/>
                        <button name="action_reject" string="Reject" type="object" attrs="{'invisible': [('state', '!=', 'checked_out')]}"/>
                        <button name="action_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', 'not in', ['rejected'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="checked_in,checked_out,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Attendance Reference"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="company_id"/>
                                <field name="check_in"/>
                                <field name="check_out"/>
                            </group>
                            <group>
                                <field name="shift_id"/>
                                <field name="worked_hours"/>
                                <field name="overtime_hours"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                            </group>
                            <group>
                                <field name="brand_focus"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Attendance Action -->
        <record id="action_hr_attendance" model="ir.actions.act_window">
            <field name="name">Attendance</field>
            <field name="res_model">hr.attendance</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_checked_in': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first attendance record!
                </p>
                <p>
                    Track employee attendance and working hours.
                </p>
            </field>
        </record>
        
    </data>
</ocean>