<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Leave Tree View -->
        <record id="view_hr_leave_tree" model="ir.ui.view">
            <field name="name">hr.leave.tree</field>
            <field name="model">hr.leave</field>
            <field name="arch" type="xml">
                <tree string="Leave Requests" decoration-info="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="leave_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="days"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="state"/>
                    <field name="approved_by"/>
                    <field name="approved_date"/>
                </tree>
            </field>
        </record>
        
        <!-- Leave Form View -->
        <record id="view_hr_leave_form" model="ir.ui.view">
            <field name="name">hr.leave.form</field>
            <field name="model">hr.leave</field>
            <field name="arch" type="xml">
                <form string="Leave Request">
                    <header>
                        <button name="action_submit" string="Submit" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Approve" type="object" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button name="action_reject" string="Reject" type="object" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['approved', 'cancelled'])]}"/>
                        <button name="action_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', 'not in', ['rejected', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Leave Reference"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="company_id"/>
                                <field name="leave_type"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="days"/>
                            </group>
                            <group>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="approved_by"/>
                                <field name="approved_date"/>
                                <field name="rejection_reason"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="reason"/>
                        </group>
                        
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Leave Action -->
        <record id="action_hr_leave" model="ir.actions.act_window">
            <field name="name">Leave Requests</field>
            <field name="res_model">hr.leave</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_submitted': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first leave request!
                </p>
                <p>
                    Manage employee leave requests and approvals.
                </p>
            </field>
        </record>
        
    </data>
</ocean>