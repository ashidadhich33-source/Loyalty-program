<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Performance Tree View -->
        <record id="view_hr_performance_tree" model="ir.ui.view">
            <field name="name">hr.performance.tree</field>
            <field name="model">hr.performance</field>
            <field name="arch" type="xml">
                <tree string="Performance Reviews" decoration-info="state=='in_review'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="review_date"/>
                    <field name="review_period_from"/>
                    <field name="review_period_to"/>
                    <field name="reviewer_id"/>
                    <field name="overall_rating"/>
                    <field name="age_group_knowledge"/>
                    <field name="season_expertise"/>
                    <field name="brand_knowledge"/>
                    <field name="customer_service"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- Performance Form View -->
        <record id="view_hr_performance_form" model="ir.ui.view">
            <field name="name">hr.performance.form</field>
            <field name="model">hr.performance</field>
            <field name="arch" type="xml">
                <form string="Performance Review">
                    <header>
                        <button name="action_start_review" string="Start Review" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_complete_review" string="Complete Review" type="object" attrs="{'invisible': [('state', '!=', 'in_review')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                        <button name="action_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_review,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Performance Review Reference"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="company_id"/>
                                <field name="review_date"/>
                                <field name="review_period_from"/>
                                <field name="review_period_to"/>
                            </group>
                            <group>
                                <field name="reviewer_id"/>
                                <field name="overall_rating"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="age_group_knowledge"/>
                                <field name="season_expertise"/>
                            </group>
                            <group>
                                <field name="brand_knowledge"/>
                                <field name="customer_service"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Strengths">
                                <field name="strengths"/>
                            </page>
                            
                            <page string="Areas for Improvement">
                                <field name="areas_for_improvement"/>
                            </page>
                            
                            <page string="Goals">
                                <field name="goals"/>
                            </page>
                            
                            <page string="Comments">
                                <group>
                                    <field name="comments"/>
                                    <field name="employee_comments"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Performance Action -->
        <record id="action_hr_performance" model="ir.actions.act_window">
            <field name="name">Performance Reviews</field>
            <field name="res_model">hr.performance</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_in_review': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first performance review!
                </p>
                <p>
                    Track employee performance and set goals for improvement.
                </p>
            </field>
        </record>
        
    </data>
</ocean>