<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Shift Tree View -->
        <record id="view_hr_shift_tree" model="ir.ui.view">
            <field name="name">hr.shift.tree</field>
            <field name="model">hr.shift</field>
            <field name="arch" type="xml">
                <tree string="Shifts" decoration-info="state=='draft'" decoration-success="state=='active'" decoration-muted="state=='inactive'">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="duration"/>
                    <field name="break_duration"/>
                    <field name="min_employees"/>
                    <field name="max_employees"/>
                    <field name="employee_count"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="brand_focus"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Shift Form View -->
        <record id="view_hr_shift_form" model="ir.ui.view">
            <field name="name">hr.shift.form</field>
            <field name="model">hr.shift</field>
            <field name="arch" type="xml">
                <form string="Work Shift">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_deactivate" string="Deactivate" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', '!=', 'inactive')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,inactive"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Shift Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="company_id"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                                <field name="duration"/>
                            </group>
                            <group>
                                <field name="break_duration"/>
                                <field name="break_start_time"/>
                                <field name="min_employees"/>
                                <field name="max_employees"/>
                                <field name="employee_count"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                            </group>
                            <group>
                                <field name="brand_focus"/>
                                <field name="active"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="description"/>
                        </group>
                        
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Shift Action -->
        <record id="action_hr_shift" model="ir.actions.act_window">
            <field name="name">Work Shifts</field>
            <field name="res_model">hr.shift</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first work shift!
                </p>
                <p>
                    Work shifts help organize employee schedules and ensure proper coverage.
                </p>
            </field>
        </record>
        
    </data>
</ocean>