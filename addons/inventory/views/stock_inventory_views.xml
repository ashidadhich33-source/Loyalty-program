<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Stock Inventory Tree View -->
        <record id="view_stock_inventory_tree" model="ocean.ui.view">
            <field name="name">stock.inventory.tree</field>
            <field name="model">stock.inventory</field>
            <field name="arch" type="xml">
                <tree string="Stock Inventories" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="product_id"/>
                    <field name="state"/>
                    <field name="date"/>
                    <field name="theoretical_qty"/>
                    <field name="product_qty"/>
                </tree>
            </field>
        </record>

        <!-- Stock Inventory Form View -->
        <record id="view_stock_inventory_form" model="ocean.ui.view">
            <field name="name">stock.inventory.form</field>
            <field name="model">stock.inventory</field>
            <field name="arch" type="xml">
                <form string="Stock Inventory">
                    <header>
                        <button name="action_start" string="Start Inventory" type="object" class="btn-primary" states="draft"/>
                        <button name="action_validate" string="Validate" type="object" class="btn-success" states="in_progress"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" states="validated"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft,in_progress"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,validated,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Inventory Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="location_id"/>
                                <field name="product_id"/>
                                <field name="lot_id"/>
                                <field name="package_id"/>
                                <field name="owner_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="theoretical_qty"/>
                                <field name="product_qty"/>
                                <field name="difference_qty"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Inventory Lines" name="inventory_lines">
                                <field name="inventory_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="location_id"/>
                                        <field name="theoretical_qty"/>
                                        <field name="product_qty"/>
                                        <field name="difference_qty"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Stock Inventory Search View -->
        <record id="view_stock_inventory_search" model="ocean.ui.view">
            <field name="name">stock.inventory.search</field>
            <field name="model">stock.inventory</field>
            <field name="arch" type="xml">
                <search string="Search Stock Inventories">
                    <field name="name"/>
                    <field name="location_id"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="package_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Validated" name="validated" domain="[('state', '=', 'validated')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Today" name="today" domain="[('date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Location" name="location" context="{'group_by': 'location_id'}"/>
                        <filter string="Product" name="product" context="{'group_by': 'product_id'}"/>
                        <filter string="Lot" name="lot" context="{'group_by': 'lot_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="date" context="{'group_by': 'date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Stock Inventory Action -->
        <record id="action_stock_inventory" model="ocean.actions.act_window">
            <field name="name">Stock Inventories</field>
            <field name="res_model">stock.inventory</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_stock_inventory_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stock inventory
                </p>
                <p>
                    Stock inventories track physical counts and adjustments of inventory.
                </p>
            </field>
        </record>
    </data>
</ocean>