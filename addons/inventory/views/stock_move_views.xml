<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Stock Move Tree View -->
        <record id="view_stock_move_tree" model="ocean.ui.view">
            <field name="name">stock.move.tree</field>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <tree string="Stock Moves" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="state"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <!-- Stock Move Form View -->
        <record id="view_stock_move_form" model="ocean.ui.view">
            <field name="name">stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <form string="Stock Move">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                        <button name="action_assign" string="Assign" type="object" class="btn-success" states="confirmed"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" states="assigned"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft,confirmed"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Move Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="product_uom"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="origin"/>
                                <field name="reference"/>
                                <field name="user_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Stock Move Search View -->
        <record id="view_stock_move_search" model="ocean.ui.view">
            <field name="name">stock.move.search</field>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <search string="Search Stock Moves">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="origin"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Assigned" name="assigned" domain="[('state', '=', 'assigned')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Today" name="today" domain="[('date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Product" name="product" context="{'group_by': 'product_id'}"/>
                        <filter string="Location" name="location" context="{'group_by': 'location_id'}"/>
                        <filter string="Destination" name="destination" context="{'group_by': 'location_dest_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="date" context="{'group_by': 'date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Stock Move Action -->
        <record id="action_stock_move" model="ocean.actions.act_window">
            <field name="name">Stock Moves</field>
            <field name="res_model">stock.move</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_stock_move_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stock move
                </p>
                <p>
                    Stock moves track the movement of inventory between locations.
                </p>
            </field>
        </record>
    </data>
</ocean>