<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Stock Picking Tree View -->
        <record id="view_stock_picking_tree" model="ocean.ui.view">
            <field name="name">stock.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <tree string="Stock Pickings" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="state"/>
                    <field name="scheduled_date"/>
                    <field name="priority"/>
                </tree>
            </field>
        </record>

        <!-- Stock Picking Form View -->
        <record id="view_stock_picking_form" model="ocean.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <form string="Stock Picking">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                        <button name="action_assign" string="Assign" type="object" class="btn-success" states="confirmed"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" states="assigned"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft,confirmed"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Picking Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="location_id"/>
                                <field name="location_dest_id"/>
                                <field name="scheduled_date"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <field name="origin"/>
                                <field name="reference"/>
                                <field name="user_id"/>
                                <field name="company_id"/>
                                <field name="picking_type_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Move Lines" name="move_lines">
                                <field name="move_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom"/>
                                        <field name="location_id"/>
                                        <field name="location_dest_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Stock Picking Search View -->
        <record id="view_stock_picking_search" model="ocean.ui.view">
            <field name="name">stock.picking.search</field>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <search string="Search Stock Pickings">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="location_id"/>
                    <field name="location_dest_id"/>
                    <field name="origin"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Assigned" name="assigned" domain="[('state', '=', 'assigned')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Today" name="today" domain="[('scheduled_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('scheduled_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Partner" name="partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Location" name="location" context="{'group_by': 'location_id'}"/>
                        <filter string="Destination" name="destination" context="{'group_by': 'location_dest_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Scheduled Date" name="scheduled_date" context="{'group_by': 'scheduled_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Stock Picking Action -->
        <record id="action_stock_picking" model="ocean.actions.act_window">
            <field name="name">Stock Pickings</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_stock_picking_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stock picking
                </p>
                <p>
                    Stock pickings organize the movement of inventory between locations.
                </p>
            </field>
        </record>
    </data>
</ocean>