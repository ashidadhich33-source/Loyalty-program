<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Invoice Line Tree View -->
        <record id="view_account_invoice_line_tree" model="ir.ui.view">
            <field name="name">account.invoice.line.tree</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <tree string="Invoice Lines">
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                    <field name="price_unit"/>
                    <field name="discount"/>
                    <field name="price_subtotal"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="gender"/>
                    <field name="special_occasion"/>
                </tree>
            </field>
        </record>
        
        <!-- Invoice Line Form View -->
        <record id="view_account_invoice_line_form" model="ir.ui.view">
            <field name="name">account.invoice.line.form</field>
            <field name="model">account.invoice.line</field>
            <field name="arch" type="xml">
                <form string="Invoice Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="name"/>
                                <field name="quantity"/>
                                <field name="uom_id"/>
                                <field name="price_unit"/>
                                <field name="discount"/>
                                <field name="price_subtotal"/>
                            </group>
                            <group>
                                <field name="tax_ids" widget="many2many_tags"/>
                                <field name="price_total"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                                <field name="gender"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="special_occasion"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Invoice Line Action -->
        <record id="action_account_invoice_line" model="ir.actions.act_window">
            <field name="name">Invoice Lines</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No invoice lines found!
                </p>
                <p>
                    Invoice lines are created automatically when you add products to an invoice.
                </p>
            </field>
        </record>
        
    </data>
</ocean>