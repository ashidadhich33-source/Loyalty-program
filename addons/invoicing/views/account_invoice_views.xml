<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Invoice Tree View -->
        <record id="view_account_invoice_tree" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree string="Invoices" decoration-info="state=='draft'" decoration-success="state=='paid'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="date_invoice"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="amount_residual"/>
                    <field name="state"/>
                    <field name="payment_state"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="gst_treatment"/>
                    <field name="edi_status"/>
                </tree>
            </field>
        </record>
        
        <!-- Invoice Form View -->
        <record id="view_account_invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                    <header>
                        <button name="action_post" string="Post" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['cancelled', 'paid'])]}"/>
                        <button name="action_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                        <button name="action_send_invoice" string="Send by Email" type="object" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money">
                                <field name="payment_count" widget="statinfo" string="Payments"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Invoice Number"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="partner_shipping_id"/>
                                <field name="date_invoice"/>
                                <field name="date_due"/>
                                <field name="reference"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="currency_id"/>
                                <field name="fiscal_position_id"/>
                                <field name="gst_treatment"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="age_group"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="edi_status"/>
                                <field name="edi_document_id"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Invoice Lines">
                                <field name="invoice_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="quantity"/>
                                        <field name="uom_id"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="price_subtotal"/>
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="age_group"/>
                                        <field name="size"/>
                                        <field name="season"/>
                                        <field name="brand"/>
                                        <field name="color"/>
                                        <field name="gender"/>
                                        <field name="special_occasion"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Tax Lines">
                                <field name="tax_line_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="base"/>
                                        <field name="amount"/>
                                        <field name="cgst_amount"/>
                                        <field name="sgst_amount"/>
                                        <field name="igst_amount"/>
                                        <field name="utgst_amount"/>
                                        <field name="cess_amount"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Payments">
                                <field name="payment_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="amount"/>
                                        <field name="payment_method_id"/>
                                        <field name="state"/>
                                        <field name="payment_reference"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes">
                                <group>
                                    <field name="note"/>
                                    <field name="comment"/>
                                </group>
                            </page>
                        </notebook>
                        
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Invoice Search View -->
        <record id="view_account_invoice_search" model="ir.ui.view">
            <field name="name">account.invoice.search</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <search string="Search Invoices">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="reference"/>
                    <field name="amount_total"/>
                    
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Open" name="open" domain="[('state', '=', 'open')]"/>
                    <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    
                    <filter string="Not Paid" name="not_paid" domain="[('payment_state', '=', 'not_paid')]"/>
                    <filter string="In Payment" name="in_payment" domain="[('payment_state', '=', 'in_payment')]"/>
                    <filter string="Paid" name="payment_paid" domain="[('payment_state', '=', 'paid')]"/>
                    <filter string="Partially Paid" name="partial" domain="[('payment_state', '=', 'partial')]"/>
                    
                    <separator/>
                    <filter string="Baby" name="baby" domain="[('age_group', '=', 'baby')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Kids" name="kids" domain="[('age_group', '=', 'kids')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <filter string="All Season" name="all_season" domain="[('season', '=', 'all_season')]"/>
                    
                    <separator/>
                    <filter string="Regular" name="regular" domain="[('gst_treatment', '=', 'regular')]"/>
                    <filter string="Composition" name="composition" domain="[('gst_treatment', '=', 'composition')]"/>
                    <filter string="Unregistered" name="unregistered" domain="[('gst_treatment', '=', 'unregistered')]"/>
                    
                    <separator/>
                    <filter string="Not Sent" name="not_sent" domain="[('edi_status', '=', 'not_sent')]"/>
                    <filter string="Sent" name="sent" domain="[('edi_status', '=', 'sent')]"/>
                    <filter string="Acknowledged" name="acknowledged" domain="[('edi_status', '=', 'acknowledged')]"/>
                    <filter string="Rejected" name="rejected" domain="[('edi_status', '=', 'rejected')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Invoice Date" name="date" context="{'group_by': 'date_invoice'}"/>
                        <filter string="Due Date" name="due_date" context="{'group_by': 'date_due'}"/>
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Payment Status" name="payment_state" context="{'group_by': 'payment_state'}"/>
                        <filter string="Age Group" name="age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Season" name="season" context="{'group_by': 'season'}"/>
                        <filter string="GST Treatment" name="gst_treatment" context="{'group_by': 'gst_treatment'}"/>
                        <filter string="EDI Status" name="edi_status" context="{'group_by': 'edi_status'}"/>
                        <filter string="Company" name="company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Invoice Action -->
        <record id="action_account_invoice" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_invoice_search"/>
            <field name="context">{'search_default_open': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first invoice!
                </p>
                <p>
                    Invoices are used to bill customers for products and services.
                </p>
            </field>
        </record>
        
    </data>
</ocean>