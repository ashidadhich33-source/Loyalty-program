<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Indian Bank Branches Tree View -->
        <record id="view_res_bank_branch_tree" model="ir.ui.view">
            <field name="name">res.bank.branch.tree</field>
            <field name="model">res.bank.branch</field>
            <field name="arch" type="xml">
                <tree string="Indian Bank Branches" decoration-info="active==False">
                    <field name="name"/>
                    <field name="bank_id"/>
                    <field name="ifsc_code"/>
                    <field name="micr_code"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Indian Bank Branches Form View -->
        <record id="view_res_bank_branch_form" model="ir.ui.view">
            <field name="name">res.bank.branch.form</field>
            <field name="model">res.bank.branch</field>
            <field name="arch" type="xml">
                <form string="Indian Bank Branch">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Branch Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="bank_id"/>
                                <field name="ifsc_code"/>
                                <field name="micr_code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="address"/>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="zip"/>
                            </group>
                            <group>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="website"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Indian Bank Branches Search View -->
        <record id="view_res_bank_branch_search" model="ir.ui.view">
            <field name="name">res.bank.branch.search</field>
            <field name="model">res.bank.branch</field>
            <field name="arch" type="xml">
                <search string="Search Bank Branches">
                    <field name="name"/>
                    <field name="bank_id"/>
                    <field name="ifsc_code"/>
                    <field name="micr_code"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Bank" name="group_bank" context="{'group_by': 'bank_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                        <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Indian Bank Branches Action -->
        <record id="action_res_bank_branch" model="ir.actions.act_window">
            <field name="name">Indian Bank Branches</field>
            <field name="res_model">res.bank.branch</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_res_bank_branch_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Indian Bank Branch!
                </p>
                <p>
                    Indian bank branches provide IFSC and MICR codes for banking transactions.
                </p>
            </field>
        </record>
        
    </data>
</ocean>