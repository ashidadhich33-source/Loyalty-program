<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Indian Districts Tree View -->
        <record id="view_res_country_district_tree" model="ir.ui.view">
            <field name="name">res.country.district.tree</field>
            <field name="model">res.country.district</field>
            <field name="arch" type="xml">
                <tree string="Indian Districts" decoration-info="active==False">
                    <field name="name"/>
                    <field name="state_id"/>
                    <field name="code"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Indian Districts Form View -->
        <record id="view_res_country_district_form" model="ir.ui.view">
            <field name="name">res.country.district.form</field>
            <field name="model">res.country.district</field>
            <field name="arch" type="xml">
                <form string="Indian District">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="District Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="state_id"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="taluka_ids" widget="one2many">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Indian Districts Search View -->
        <record id="view_res_country_district_search" model="ir.ui.view">
            <field name="name">res.country.district.search</field>
            <field name="model">res.country.district</field>
            <field name="arch" type="xml">
                <search string="Search Districts">
                    <field name="name"/>
                    <field name="state_id"/>
                    <field name="code"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Indian Districts Action -->
        <record id="action_res_country_district" model="ir.actions.act_window">
            <field name="name">Indian Districts</field>
            <field name="res_model">res.country.district</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_res_country_district_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Indian District!
                </p>
                <p>
                    Indian districts are administrative divisions within states.
                </p>
            </field>
        </record>
        
    </data>
</ocean>