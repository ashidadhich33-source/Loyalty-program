<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Res Country State Tree View -->
        <record id="view_res_country_state_tree" model="ocean.ui.view">
            <field name="name">res.country.state.tree</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <tree string="States" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_type"/>
                    <field name="capital"/>
                    <field name="population"/>
                    <field name="area"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Res Country State Form View -->
        <record id="view_res_country_state_form" model="ocean.ui.view">
            <field name="name">res.country.state.form</field>
            <field name="model">res.country.state</field>
            <field name="arch" type="xml">
                <form string="State" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="State Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="state_type"/>
                                <field name="capital"/>
                                <field name="country_id"/>
                            </group>
                            <group>
                                <field name="population"/>
                                <field name="area"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Res Country State Action -->
        <record id="action_res_country_state" model="ocean.actions.act_window">
            <field name="name">States</field>
            <field name="res_model">res.country.state</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first state!
                </p>
                <p>
                    States are administrative divisions of countries.
                </p>
            </field>
        </record>
        
