<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Indian Villages Tree View -->
        <record id="view_res_country_village_tree" model="ir.ui.view">
            <field name="name">res.country.village.tree</field>
            <field name="model">res.country.village</field>
            <field name="arch" type="xml">
                <tree string="Indian Villages" decoration-info="active==False">
                    <field name="name"/>
                    <field name="taluka_id"/>
                    <field name="district_id"/>
                    <field name="state_id"/>
                    <field name="code"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Indian Villages Form View -->
        <record id="view_res_country_village_form" model="ir.ui.view">
            <field name="name">res.country.village.form</field>
            <field name="model">res.country.village</field>
            <field name="arch" type="xml">
                <form string="Indian Village">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Village Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="taluka_id"/>
                                <field name="district_id"/>
                                <field name="state_id"/>
                                <field name="code"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Indian Villages Search View -->
        <record id="view_res_country_village_search" model="ir.ui.view">
            <field name="name">res.country.village.search</field>
            <field name="model">res.country.village</field>
            <field name="arch" type="xml">
                <search string="Search Villages">
                    <field name="name"/>
                    <field name="taluka_id"/>
                    <field name="district_id"/>
                    <field name="state_id"/>
                    <field name="code"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                        <filter string="District" name="group_district" context="{'group_by': 'district_id'}"/>
                        <filter string="Taluka" name="group_taluka" context="{'group_by': 'taluka_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Indian Villages Action -->
        <record id="action_res_country_village" model="ir.actions.act_window">
            <field name="name">Indian Villages</field>
            <field name="res_model">res.country.village</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_res_country_village_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Indian Village!
                </p>
                <p>
                    Indian villages are the smallest administrative divisions.
                </p>
            </field>
        </record>
        
    </data>
</ocean>