<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Indian Languages Tree View -->
        <record id="view_res_language_tree" model="ir.ui.view">
            <field name="name">res.language.tree</field>
            <field name="model">res.language</field>
            <field name="arch" type="xml">
                <tree string="Indian Languages" decoration-info="active==False">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="iso_code"/>
                    <field name="direction"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Indian Languages Form View -->
        <record id="view_res_language_form" model="ir.ui.view">
            <field name="name">res.language.form</field>
            <field name="model">res.language</field>
            <field name="arch" type="xml">
                <form string="Indian Language">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Language Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="iso_code"/>
                                <field name="direction"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Indian Languages Search View -->
        <record id="view_res_language_search" model="ir.ui.view">
            <field name="name">res.language.search</field>
            <field name="model">res.language</field>
            <field name="arch" type="xml">
                <search string="Search Languages">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="iso_code"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Direction" name="group_direction" context="{'group_by': 'direction'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Indian Languages Action -->
        <record id="action_res_language" model="ir.actions.act_window">
            <field name="name">Indian Languages</field>
            <field name="res_model">res.language</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_res_language_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Indian Language!
                </p>
                <p>
                    Indian languages include Hindi, English, and 22 scheduled languages.
                </p>
            </field>
        </record>
        
    </data>
</ocean>