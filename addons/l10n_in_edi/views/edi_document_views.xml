<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- EDI Document Tree View -->
        <record id="view_edi_document_tree" model="ocean.ui.view">
            <field name="name">edi.document.tree</field>
            <field name="model">edi.document</field>
            <field name="arch" type="xml">
                <tree string="EDI Documents" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="document_type"/>
                    <field name="edi_format"/>
                    <field name="edi_version"/>
                    <field name="state"/>
                    <field name="document_date"/>
                    <field name="send_date"/>
                    <field name="receive_date"/>
                    <field name="process_date"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- EDI Document Form View -->
        <record id="view_edi_document_form" model="ocean.ui.view">
            <field name="name">edi.document.form</field>
            <field name="model">edi.document</field>
            <field name="arch" type="xml">
                <form string="EDI Document" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_prepare" string="Prepare" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_send" string="Send" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                        <button name="action_process" string="Process" type="object" class="btn-info" attrs="{'invisible': [('state', 'not in', ['received', 'sent'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,sent,received,processed,error,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Document Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="document_type"/>
                                <field name="edi_format"/>
                                <field name="edi_version"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="transmission_id"/>
                                <field name="sender_id"/>
                                <field name="receiver_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Dates">
                            <group>
                                <field name="document_date"/>
                                <field name="send_date"/>
                            </group>
                            <group>
                                <field name="receive_date"/>
                                <field name="process_date"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- EDI Document Search View -->
        <record id="view_edi_document_search" model="ocean.ui.view">
            <field name="name">edi.document.search</field>
            <field name="model">edi.document</field>
            <field name="arch" type="xml">
                <search string="Search EDI Documents">
                    <field name="name"/>
                    <field name="document_type"/>
                    <field name="edi_format"/>
                    <field name="edi_version"/>
                    <field name="state"/>
                    <field name="transmission_id"/>
                    <field name="sender_id"/>
                    <field name="receiver_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Ready" name="ready" domain="[('state', '=', 'ready')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                    <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                    <filter string="Error" name="error" domain="[('state', '=', 'error')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Invoice" name="invoice" domain="[('document_type', '=', 'invoice')]"/>
                    <filter string="Credit Note" name="credit_note" domain="[('document_type', '=', 'credit_note')]"/>
                    <filter string="Debit Note" name="debit_note" domain="[('document_type', '=', 'debit_note')]"/>
                    <filter string="Purchase Order" name="purchase_order" domain="[('document_type', '=', 'purchase_order')]"/>
                    <filter string="Sales Order" name="sales_order" domain="[('document_type', '=', 'sales_order')]"/>
                    <separator/>
                    <filter string="EDIFACT" name="edifact" domain="[('edi_format', '=', 'edifact')]"/>
                    <filter string="X12" name="x12" domain="[('edi_format', '=', 'x12')]"/>
                    <filter string="XML" name="xml" domain="[('edi_format', '=', 'xml')]"/>
                    <filter string="JSON" name="json" domain="[('edi_format', '=', 'json')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Document Type" name="group_document_type" context="{'group_by': 'document_type'}"/>
                        <filter string="EDI Format" name="group_edi_format" context="{'group_by': 'edi_format'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                        <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- EDI Document Action -->
        <record id="action_edi_document" model="ocean.actions.act_window">
            <field name="name">EDI Documents</field>
            <field name="res_model">edi.document</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_edi_document_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI document!
                </p>
                <p>
                    EDI documents are used for electronic data interchange.
                </p>
            </field>
        </record>
        
        <!-- EDI Transaction Tree View -->
        <record id="view_edi_transaction_tree" model="ocean.ui.view">
            <field name="name">edi.transaction.tree</field>
            <field name="model">edi.transaction</field>
            <field name="arch" type="xml">
                <tree string="EDI Transactions" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="document_id"/>
                    <field name="transaction_type"/>
                    <field name="segment_type"/>
                    <field name="sequence"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- EDI Transaction Form View -->
        <record id="view_edi_transaction_form" model="ocean.ui.view">
            <field name="name">edi.transaction.form</field>
            <field name="model">edi.transaction</field>
            <field name="arch" type="xml">
                <form string="EDI Transaction" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Transaction Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="document_id"/>
                                <field name="transaction_type"/>
                                <field name="segment_type"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- EDI Transaction Action -->
        <record id="action_edi_transaction" model="ocean.actions.act_window">
            <field name="name">EDI Transactions</field>
            <field name="res_model">edi.transaction</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI transaction!
                </p>
                <p>
                    EDI transactions are segments within EDI documents.
                </p>
            </field>
        </record>
        
    </data>
</ocean>