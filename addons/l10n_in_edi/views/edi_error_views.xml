<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- EDI Errors Tree View -->
        <record id="view_edi_error_tree" model="ir.ui.view">
            <field name="name">edi.error.tree</field>
            <field name="model">edi.error</field>
            <field name="arch" type="xml">
                <tree string="EDI Errors" decoration-danger="severity=='critical'" decoration-warning="severity=='high'" decoration-info="severity=='medium'">
                    <field name="name"/>
                    <field name="error_type"/>
                    <field name="error_code"/>
                    <field name="severity"/>
                    <field name="state"/>
                    <field name="error_date"/>
                </tree>
            </field>
        </record>
        
        <!-- EDI Errors Form View -->
        <record id="view_edi_error_form" model="ir.ui.view">
            <field name="name">edi.error.form</field>
            <field name="model">edi.error</field>
            <field name="arch" type="xml">
                <form string="EDI Error">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_acknowledge" type="object" class="oe_stat_button" icon="fa-check" string="Acknowledge" attrs="{'invisible': [('state', '!=', 'new')]}"/>
                            <button name="action_resolve" type="object" class="oe_stat_button" icon="fa-wrench" string="Resolve" attrs="{'invisible': [('state', 'not in', ['new', 'acknowledged'])]}"/>
                            <button name="action_ignore" type="object" class="oe_stat_button" icon="fa-times" string="Ignore" attrs="{'invisible': [('state', '!=', 'new')]}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Error Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="error_type"/>
                                <field name="error_code"/>
                                <field name="severity"/>
                                <field name="state"/>
                                <field name="error_date"/>
                                <field name="resolved_date"/>
                                <field name="resolved_by"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <field name="error_message" widget="text"/>
                            <field name="error_details" widget="text"/>
                        </group>
                        <group>
                            <field name="document_id"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- EDI Errors Search View -->
        <record id="view_edi_error_search" model="ir.ui.view">
            <field name="name">edi.error.search</field>
            <field name="model">edi.error</field>
            <field name="arch" type="xml">
                <search string="Search EDI Errors">
                    <field name="name"/>
                    <field name="error_type"/>
                    <field name="error_code"/>
                    <field name="severity"/>
                    <field name="document_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                    <filter string="Acknowledged" name="acknowledged" domain="[('state', '=', 'acknowledged')]"/>
                    <filter string="Resolved" name="resolved" domain="[('state', '=', 'resolved')]"/>
                    <filter string="Ignored" name="ignored" domain="[('state', '=', 'ignored')]"/>
                    <filter string="Critical" name="critical" domain="[('severity', '=', 'critical')]"/>
                    <filter string="High" name="high" domain="[('severity', '=', 'high')]"/>
                    <filter string="Medium" name="medium" domain="[('severity', '=', 'medium')]"/>
                    <filter string="Low" name="low" domain="[('severity', '=', 'low')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Error Type" name="group_error_type" context="{'group_by': 'error_type'}"/>
                        <filter string="Severity" name="group_severity" context="{'group_by': 'severity'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- EDI Errors Action -->
        <record id="action_edi_error" model="ir.actions.act_window">
            <field name="name">EDI Errors</field>
            <field name="res_model">edi.error</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_edi_error_search"/>
            <field name="context">{'search_default_new': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI Error!
                </p>
                <p>
                    EDI errors track issues in document processing and transmission.
                </p>
            </field>
        </record>
        
    </data>
</ocean>