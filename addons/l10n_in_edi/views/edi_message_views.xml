<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- EDI Message Tree View -->
        <record id="view_edi_message_tree" model="ocean.ui.view">
            <field name="name">edi.message.tree</field>
            <field name="model">edi.message</field>
            <field name="arch" type="xml">
                <tree string="EDI Messages" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="message_type"/>
                    <field name="message_format"/>
                    <field name="message_version"/>
                    <field name="state"/>
                    <field name="message_date"/>
                    <field name="send_date"/>
                    <field name="receive_date"/>
                    <field name="process_date"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- EDI Message Form View -->
        <record id="view_edi_message_form" model="ocean.ui.view">
            <field name="name">edi.message.form</field>
            <field name="model">edi.message</field>
            <field name="arch" type="xml">
                <form string="EDI Message" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_prepare" string="Prepare" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_send" string="Send" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                        <button name="action_process" string="Process" type="object" class="btn-info" attrs="{'invisible': [('state', 'not in', ['received', 'sent'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,sent,received,processed,error,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Message Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="message_type"/>
                                <field name="message_format"/>
                                <field name="message_version"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="transmission_id"/>
                                <field name="sender_id"/>
                                <field name="receiver_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Dates">
                            <group>
                                <field name="message_date"/>
                                <field name="send_date"/>
                            </group>
                            <group>
                                <field name="receive_date"/>
                                <field name="process_date"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- EDI Message Action -->
        <record id="action_edi_message" model="ocean.actions.act_window">
            <field name="name">EDI Messages</field>
            <field name="res_model">edi.message</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI message!
                </p>
                <p>
                    EDI messages are structured data exchanges.
                </p>
            </field>
        </record>
        
        <!-- EDI Message Action -->
        <record id="action_edi_message" model="ocean.actions.act_window">
            <field name="name">EDI Messages</field>
            <field name="res_model">edi.message</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI message!
                </p>
                <p>
                    EDI messages are structured data exchanges.
                </p>
            </field>
        </record>
        
        <!-- EDI Envelope Tree View -->
        <record id="view_edi_envelope_tree" model="ocean.ui.view">
            <field name="name">edi.envelope.tree</field>
            <field name="model">edi.envelope</field>
            <field name="arch" type="xml">
                <tree string="EDI Envelopes" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="message_id"/>
                    <field name="envelope_type"/>
                    <field name="sequence"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- EDI Envelope Form View -->
        <record id="view_edi_envelope_form" model="ocean.ui.view">
            <field name="name">edi.envelope.form</field>
            <field name="model">edi.envelope</field>
            <field name="arch" type="xml">
                <form string="EDI Envelope" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Envelope Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="message_id"/>
                                <field name="envelope_type"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- EDI Envelope Action -->
        <record id="action_edi_envelope" model="ocean.actions.act_window">
            <field name="name">EDI Envelopes</field>
            <field name="res_model">edi.envelope</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI envelope!
                </p>
                <p>
                    EDI envelopes contain structured data segments.
                </p>
            </field>
        </record>
        
    </data>
</ocean>