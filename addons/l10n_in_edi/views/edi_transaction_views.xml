<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- EDI Transactions Tree View -->
        <record id="view_edi_transaction_tree" model="ir.ui.view">
            <field name="name">edi.transaction.tree</field>
            <field name="model">edi.transaction</field>
            <field name="arch" type="xml">
                <tree string="EDI Transactions" decoration-info="active==False">
                    <field name="name"/>
                    <field name="document_id"/>
                    <field name="transaction_type"/>
                    <field name="segment_type"/>
                    <field name="sequence"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- EDI Transactions Form View -->
        <record id="view_edi_transaction_form" model="ir.ui.view">
            <field name="name">edi.transaction.form</field>
            <field name="model">edi.transaction</field>
            <field name="arch" type="xml">
                <form string="EDI Transaction">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Transaction Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="document_id"/>
                                <field name="transaction_type"/>
                                <field name="segment_type"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <field name="segment_data" widget="text"/>
                            <field name="processed_data" widget="text"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- EDI Transactions Search View -->
        <record id="view_edi_transaction_search" model="ir.ui.view">
            <field name="name">edi.transaction.search</field>
            <field name="model">edi.transaction</field>
            <field name="arch" type="xml">
                <search string="Search EDI Transactions">
                    <field name="name"/>
                    <field name="document_id"/>
                    <field name="transaction_type"/>
                    <field name="segment_type"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Document" name="group_document" context="{'group_by': 'document_id'}"/>
                        <filter string="Transaction Type" name="group_transaction_type" context="{'group_by': 'transaction_type'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- EDI Transactions Action -->
        <record id="action_edi_transaction" model="ir.actions.act_window">
            <field name="name">EDI Transactions</field>
            <field name="res_model">edi.transaction</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_edi_transaction_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first EDI Transaction!
                </p>
                <p>
                    EDI transactions handle individual segments within EDI documents.
                </p>
            </field>
        </record>
        
    </data>
</ocean>