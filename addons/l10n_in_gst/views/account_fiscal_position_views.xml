<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Fiscal Position Tree View -->
        <record id="view_account_fiscal_position_tree" model="ocean.ui.view">
            <field name="name">account.fiscal.position.tree</field>
            <field name="model">account.fiscal.position</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Positions" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="fiscal_position_type"/>
                    <field name="gst_treatment"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Fiscal Position Form View -->
        <record id="view_account_fiscal_position_form" model="ocean.ui.view">
            <field name="name">account.fiscal.position.form</field>
            <field name="model">account.fiscal.position</field>
            <field name="arch" type="xml">
                <form string="Fiscal Position" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Fiscal Position Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fiscal_position_type"/>
                                <field name="gst_treatment"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Tax Mappings">
                            <field name="tax_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="tax_src_id"/>
                                    <field name="tax_dest_id"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Fiscal Position Action -->
        <record id="action_account_fiscal_position" model="ocean.actions.act_window">
            <field name="name">Fiscal Positions</field>
            <field name="res_model">account.fiscal.position</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first fiscal position!
                </p>
                <p>
                    Fiscal positions define tax mappings for different scenarios.
                </p>
            </field>
        </record>
        
        <!-- Account Fiscal Position Tax Tree View -->
        <record id="view_account_fiscal_position_tax_tree" model="ocean.ui.view">
            <field name="name">account.fiscal.position.tax.tree</field>
            <field name="model">account.fiscal.position.tax</field>
            <field name="arch" type="xml">
                <tree string="Fiscal Position Taxes" create="true" edit="true" delete="true">
                    <field name="position_id"/>
                    <field name="tax_src_id"/>
                    <field name="tax_dest_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Fiscal Position Tax Form View -->
        <record id="view_account_fiscal_position_tax_form" model="ocean.ui.view">
            <field name="name">account.fiscal.position.tax.form</field>
            <field name="model">account.fiscal.position.tax</field>
            <field name="arch" type="xml">
                <form string="Fiscal Position Tax" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="position_id" placeholder="Fiscal Position"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tax_src_id"/>
                                <field name="tax_dest_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Fiscal Position Tax Action -->
        <record id="action_account_fiscal_position_tax" model="ocean.actions.act_window">
            <field name="name">Fiscal Position Taxes</field>
            <field name="res_model">account.fiscal.position.tax</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first fiscal position tax!
                </p>
                <p>
                    Fiscal position taxes define tax mappings for fiscal positions.
                </p>
            </field>
        </record>
        
    </data>
</ocean>