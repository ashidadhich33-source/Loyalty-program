<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- GST Account Invoices Tree View -->
        <record id="view_account_invoice_tree" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <tree string="GST Account Invoices" decoration-info="state=='draft'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="date_invoice"/>
                    <field name="gst_treatment"/>
                    <field name="fiscal_position_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- GST Account Invoices Form View -->
        <record id="view_account_invoice_form" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <form string="GST Account Invoice">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_invoice_open" type="object" class="oe_stat_button" icon="fa-check" string="Open" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <button name="action_invoice_paid" type="object" class="oe_stat_button" icon="fa-money" string="Paid" attrs="{'invisible': [('state', '!=', 'open')]}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Invoice Number"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_invoice"/>
                                <field name="gst_treatment"/>
                                <field name="fiscal_position_id"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- GST Account Invoices Search View -->
        <record id="view_account_invoice_search" model="ir.ui.view">
            <field name="name">account.invoice.search</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <search string="Search GST Account Invoices">
                    <field name="name"/>
                    <field name="gst_treatment"/>
                    <field name="fiscal_position_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Open" name="open" domain="[('state', '=', 'open')]"/>
                    <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="GST Treatment" name="group_gst_treatment" context="{'group_by': 'gst_treatment'}"/>
                        <filter string="Fiscal Position" name="group_fiscal_position" context="{'group_by': 'fiscal_position_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- GST Account Invoices Action -->
        <record id="action_account_invoice" model="ir.actions.act_window">
            <field name="name">GST Account Invoices</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_invoice_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first GST Account Invoice!
                </p>
                <p>
                    GST account invoices handle customer and supplier invoicing with proper tax calculations.
                </p>
            </field>
        </record>
        
    </data>
</ocean>