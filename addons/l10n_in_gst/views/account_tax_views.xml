<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Account Tax Tree View -->
        <record id="view_account_tax_tree" model="ocean.ui.view">
            <field name="name">account.tax.tree</field>
            <field name="model">account.tax</field>
            <field name="arch" type="xml">
                <tree string="GST Taxes" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="tax_type"/>
                    <field name="gst_type"/>
                    <field name="amount"/>
                    <field name="amount_type"/>
                    <field name="gst_rate"/>
                    <field name="hsn_code"/>
                    <field name="sac_code"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Tax Form View -->
        <record id="view_account_tax_form" model="ocean.ui.view">
            <field name="name">account.tax.form</field>
            <field name="model">account.tax</field>
            <field name="arch" type="xml">
                <form string="GST Tax" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tax Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="tax_type"/>
                                <field name="gst_type"/>
                                <field name="amount"/>
                                <field name="amount_type"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="gst_rate"/>
                                <field name="hsn_code"/>
                                <field name="sac_code"/>
                                <field name="tax_group_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Tax Search View -->
        <record id="view_account_tax_search" model="ocean.ui.view">
            <field name="name">account.tax.search</field>
            <field name="model">account.tax</field>
            <field name="arch" type="xml">
                <search string="Search GST Taxes">
                    <field name="name"/>
                    <field name="tax_type"/>
                    <field name="gst_type"/>
                    <field name="hsn_code"/>
                    <field name="sac_code"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="GST" name="gst" domain="[('tax_type', '=', 'gst')]"/>
                    <filter string="CGST" name="cgst" domain="[('gst_type', '=', 'cgst')]"/>
                    <filter string="SGST" name="sgst" domain="[('gst_type', '=', 'sgst')]"/>
                    <filter string="IGST" name="igst" domain="[('gst_type', '=', 'igst')]"/>
                    <filter string="CESS" name="cess" domain="[('gst_type', '=', 'cess')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Tax Type" name="group_tax_type" context="{'group_by': 'tax_type'}"/>
                        <filter string="GST Type" name="group_gst_type" context="{'group_by': 'gst_type'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Account Tax Action -->
        <record id="action_account_tax" model="ocean.actions.act_window">
            <field name="name">GST Taxes</field>
            <field name="res_model">account.tax</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_tax_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first GST tax!
                </p>
                <p>
                    GST taxes are used for Goods and Services Tax calculations.
                </p>
            </field>
        </record>
        
        <!-- Account Tax Group Tree View -->
        <record id="view_account_tax_group_tree" model="ocean.ui.view">
            <field name="name">account.tax.group.tree</field>
            <field name="model">account.tax.group</field>
            <field name="arch" type="xml">
                <tree string="GST Tax Groups" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="gst_group_type"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Account Tax Group Form View -->
        <record id="view_account_tax_group_form" model="ocean.ui.view">
            <field name="name">account.tax.group.form</field>
            <field name="model">account.tax.group</field>
            <field name="arch" type="xml">
                <form string="GST Tax Group" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tax Group Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="gst_group_type"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Account Tax Group Action -->
        <record id="action_account_tax_group" model="ocean.actions.act_window">
            <field name="name">GST Tax Groups</field>
            <field name="res_model">account.tax.group</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first GST tax group!
                </p>
                <p>
                    GST tax groups help organize taxes by GST rates.
                </p>
            </field>
        </record>
        
    </data>
</ocean>