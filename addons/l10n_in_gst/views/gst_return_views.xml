<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- GST Return Tree View -->
        <record id="view_gst_return_tree" model="ocean.ui.view">
            <field name="name">gst.return.tree</field>
            <field name="model">gst.return</field>
            <field name="arch" type="xml">
                <tree string="GST Returns" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="return_type"/>
                    <field name="return_period"/>
                    <field name="state"/>
                    <field name="filing_date"/>
                    <field name="ack_number"/>
                    <field name="ack_date"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- GST Return Form View -->
        <record id="view_gst_return_form" model="ocean.ui.view">
            <field name="name">gst.return.form</field>
            <field name="model">gst.return</field>
            <field name="arch" type="xml">
                <form string="GST Return" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_prepare" string="Prepare" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_file" string="File" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'ready')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,ready,filed,accepted,rejected"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Return Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="return_type"/>
                                <field name="return_period"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="filing_date"/>
                                <field name="ack_number"/>
                                <field name="ack_date"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- GST Return Search View -->
        <record id="view_gst_return_search" model="ocean.ui.view">
            <field name="name">gst.return.search</field>
            <field name="model">gst.return</field>
            <field name="arch" type="xml">
                <search string="Search GST Returns">
                    <field name="name"/>
                    <field name="return_type"/>
                    <field name="return_period"/>
                    <field name="state"/>
                    <field name="ack_number"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Ready" name="ready" domain="[('state', '=', 'ready')]"/>
                    <filter string="Filed" name="filed" domain="[('state', '=', 'filed')]"/>
                    <filter string="Accepted" name="accepted" domain="[('state', '=', 'accepted')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <separator/>
                    <filter string="GSTR-1" name="gstr1" domain="[('return_type', '=', 'gstr1')]"/>
                    <filter string="GSTR-2" name="gstr2" domain="[('return_type', '=', 'gstr2')]"/>
                    <filter string="GSTR-3" name="gstr3" domain="[('return_type', '=', 'gstr3')]"/>
                    <filter string="GSTR-4" name="gstr4" domain="[('return_type', '=', 'gstr4')]"/>
                    <filter string="GSTR-5" name="gstr5" domain="[('return_type', '=', 'gstr5')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Return Type" name="group_return_type" context="{'group_by': 'return_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- GST Return Action -->
        <record id="action_gst_return" model="ocean.actions.act_window">
            <field name="name">GST Returns</field>
            <field name="res_model">gst.return</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_gst_return_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first GST return!
                </p>
                <p>
                    GST returns are filed with the GST portal for compliance.
                </p>
            </field>
        </record>
        
        <!-- GST Report Tree View -->
        <record id="view_gst_report_tree" model="ocean.ui.view">
            <field name="name">gst.report.tree</field>
            <field name="model">gst.report</field>
            <field name="arch" type="xml">
                <tree string="GST Reports" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="report_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="generated_date"/>
                    <field name="generated_by"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- GST Report Form View -->
        <record id="view_gst_report_form" model="ocean.ui.view">
            <field name="name">gst.report.form</field>
            <field name="model">gst.report</field>
            <field name="arch" type="xml">
                <form string="GST Report" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_generate" string="Generate Report" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,generated,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Report Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="report_type"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="generated_date"/>
                                <field name="generated_by"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- GST Report Action -->
        <record id="action_gst_report" model="ocean.actions.act_window">
            <field name="name">GST Reports</field>
            <field name="res_model">gst.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first GST report!
                </p>
                <p>
                    GST reports help analyze your tax compliance and performance.
                </p>
            </field>
        </record>
        
    </data>
</ocean>