<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- GST Sale Orders Tree View -->
        <record id="view_sale_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="GST Sale Orders" decoration-info="state=='draft'" decoration-muted="state=='cancel'">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="gst_treatment"/>
                    <field name="fiscal_position_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- GST Sale Orders Form View -->
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="GST Sale Order">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_confirm" type="object" class="oe_stat_button" icon="fa-check" string="Confirm" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <button name="action_done" type="object" class="oe_stat_button" icon="fa-done" string="Done" attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Order Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_order"/>
                                <field name="gst_treatment"/>
                                <field name="fiscal_position_id"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- GST Sale Orders Search View -->
        <record id="view_sale_order_search" model="ir.ui.view">
            <field name="name">sale.order.search</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <search string="Search GST Sale Orders">
                    <field name="name"/>
                    <field name="gst_treatment"/>
                    <field name="fiscal_position_id"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Sale Order" name="sale" domain="[('state', '=', 'sale')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Group By">
                        <filter string="GST Treatment" name="group_gst_treatment" context="{'group_by': 'gst_treatment'}"/>
                        <filter string="Fiscal Position" name="group_fiscal_position" context="{'group_by': 'fiscal_position_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- GST Sale Orders Action -->
        <record id="action_sale_order" model="ir.actions.act_window">
            <field name="name">GST Sale Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_order_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first GST Sale Order!
                </p>
                <p>
                    GST sale orders handle inter-state and intra-state transactions with proper tax treatment.
                </p>
            </field>
        </record>
        
    </data>
</ocean>