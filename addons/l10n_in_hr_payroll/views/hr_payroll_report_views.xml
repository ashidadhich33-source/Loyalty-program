<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- HR Payroll Reports Tree View -->
        <record id="view_hr_payroll_report_tree" model="ir.ui.view">
            <field name="name">hr.payroll.report.tree</field>
            <field name="model">hr.payroll.report</field>
            <field name="arch" type="xml">
                <tree string="HR Payroll Reports" decoration-info="state=='draft'" decoration-success="state=='generated'">
                    <field name="name"/>
                    <field name="report_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="generated_date"/>
                </tree>
            </field>
        </record>
        
        <!-- HR Payroll Reports Form View -->
        <record id="view_hr_payroll_report_form" model="ir.ui.view">
            <field name="name">hr.payroll.report.form</field>
            <field name="model">hr.payroll.report</field>
            <field name="arch" type="xml">
                <form string="HR Payroll Report">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_generate" type="object" class="oe_stat_button" icon="fa-play" string="Generate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Report Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="report_type"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="state"/>
                                <field name="generated_date"/>
                                <field name="generated_by"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <field name="report_data" widget="text"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- HR Payroll Reports Search View -->
        <record id="view_hr_payroll_report_search" model="ir.ui.view">
            <field name="name">hr.payroll.report.search</field>
            <field name="model">hr.payroll.report</field>
            <field name="arch" type="xml">
                <search string="Search HR Payroll Reports">
                    <field name="name"/>
                    <field name="report_type"/>
                    <field name="generated_by"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Report Type" name="group_report_type" context="{'group_by': 'report_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Generated By" name="group_generated_by" context="{'group_by': 'generated_by'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- HR Payroll Reports Action -->
        <record id="action_hr_payroll_report" model="ir.actions.act_window">
            <field name="name">HR Payroll Reports</field>
            <field name="res_model">hr.payroll.report</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_payroll_report_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first HR Payroll Report!
                </p>
                <p>
                    HR payroll reports provide detailed analysis of salary, PF, ESI, and tax calculations.
                </p>
            </field>
        </record>
        
    </data>
</ocean>