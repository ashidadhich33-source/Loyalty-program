<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- HR Payslip Tree View -->
        <record id="view_hr_payslip_tree" model="ocean.ui.view">
            <field name="name">hr.payslip.tree</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <tree string="Payslips" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="basic_wage"/>
                    <field name="gross_wage"/>
                    <field name="net_wage"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- HR Payslip Form View -->
        <record id="view_hr_payslip_form" model="ocean.ui.view">
            <field name="name">hr.payslip.form</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <form string="Payslip" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_compute_sheet" string="Compute Sheet" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_verify_sheet" string="Verify" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_done" string="Done" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'verify')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', 'not in', ['draft', 'verify'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,verify,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Payslip Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="contract_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="basic_wage"/>
                                <field name="gross_wage"/>
                                <field name="net_wage"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Payslip Lines">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="amount"/>
                                    <field name="quantity"/>
                                    <field name="rate"/>
                                    <field name="sequence"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Notes">
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- HR Payslip Search View -->
        <record id="view_hr_payslip_search" model="ocean.ui.view">
            <field name="name">hr.payslip.search</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <search string="Search Payslips">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Waiting" name="verify" domain="[('state', '=', 'verify')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Contract" name="group_contract" context="{'group_by': 'contract_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- HR Payslip Action -->
        <record id="action_hr_payslip" model="ocean.actions.act_window">
            <field name="name">Payslips</field>
            <field name="res_model">hr.payslip</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_payslip_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first payslip!
                </p>
                <p>
                    Payslips contain the salary details for employees.
                </p>
            </field>
        </record>
        
        <!-- HR Payslip Line Tree View -->
        <record id="view_hr_payslip_line_tree" model="ocean.ui.view">
            <field name="name">hr.payslip.line.tree</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <tree string="Payslip Lines" create="true" edit="true" delete="true">
                    <field name="payslip_id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_id"/>
                    <field name="amount"/>
                    <field name="quantity"/>
                    <field name="rate"/>
                    <field name="sequence"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- HR Payslip Line Form View -->
        <record id="view_hr_payslip_line_form" model="ocean.ui.view">
            <field name="name">hr.payslip.line.form</field>
            <field name="model">hr.payslip.line</field>
            <field name="arch" type="xml">
                <form string="Payslip Line" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Payslip Line Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="payslip_id"/>
                                <field name="code"/>
                                <field name="category_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="quantity"/>
                                <field name="rate"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- HR Payslip Line Action -->
        <record id="action_hr_payslip_line" model="ocean.actions.act_window">
            <field name="name">Payslip Lines</field>
            <field name="res_model">hr.payslip.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first payslip line!
                </p>
                <p>
                    Payslip lines contain the individual salary components.
                </p>
            </field>
        </record>
        
    </data>
</ocean>