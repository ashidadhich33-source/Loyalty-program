<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- HR PF ESI Tree View -->
        <record id="view_hr_pf_esi_tree" model="ir.ui.view">
            <field name="name">hr.pf.esi.tree</field>
            <field name="model">hr.pf.esi</field>
            <field name="arch" type="xml">
                <tree string="HR PF ESI" decoration-info="state=='draft'" decoration-success="state=='acknowledged'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="period"/>
                    <field name="pf_number"/>
                    <field name="esi_number"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- HR PF ESI Form View -->
        <record id="view_hr_pf_esi_form" model="ir.ui.view">
            <field name="name">hr.pf.esi.form</field>
            <field name="model">hr.pf.esi</field>
            <field name="arch" type="xml">
                <form string="HR PF ESI">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_compute" type="object" class="oe_stat_button" icon="fa-calculator" string="Compute" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <button name="action_submit" type="object" class="oe_stat_button" icon="fa-send" string="Submit" attrs="{'invisible': [('state', '!=', 'computed')]}"/>
                            <button name="action_acknowledge" type="object" class="oe_stat_button" icon="fa-check" string="Acknowledge" attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="PF ESI Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="contract_id"/>
                                <field name="period"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="pf_number"/>
                                <field name="pf_employee_contribution"/>
                                <field name="pf_employer_contribution"/>
                                <field name="pf_total_contribution"/>
                            </group>
                            <group>
                                <field name="esi_number"/>
                                <field name="esi_employee_contribution"/>
                                <field name="esi_employer_contribution"/>
                                <field name="esi_total_contribution"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="computation_date"/>
                                <field name="submission_date"/>
                                <field name="acknowledgment_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- HR PF ESI Search View -->
        <record id="view_hr_pf_esi_search" model="ir.ui.view">
            <field name="name">hr.pf.esi.search</field>
            <field name="model">hr.pf.esi</field>
            <field name="arch" type="xml">
                <search string="Search HR PF ESI">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="period"/>
                    <field name="pf_number"/>
                    <field name="esi_number"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Computed" name="computed" domain="[('state', '=', 'computed')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Acknowledged" name="acknowledged" domain="[('state', '=', 'acknowledged')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Period" name="group_period" context="{'group_by': 'period'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- HR PF ESI Action -->
        <record id="action_hr_pf_esi" model="ir.actions.act_window">
            <field name="name">HR PF ESI</field>
            <field name="res_model">hr.pf.esi</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_pf_esi_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first HR PF ESI record!
                </p>
                <p>
                    HR PF ESI manages Provident Fund and Employee State Insurance contributions for Indian employees.
                </p>
            </field>
        </record>
        
    </data>
</ocean>