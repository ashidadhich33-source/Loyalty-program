<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- HR Payroll Structures Tree View -->
        <record id="view_hr_payroll_structure_tree" model="ir.ui.view">
            <field name="name">hr.payroll.structure.tree</field>
            <field name="model">hr.payroll.structure</field>
            <field name="arch" type="xml">
                <tree string="HR Payroll Structures" decoration-info="active==False">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="struct_type"/>
                    <field name="sequence"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- HR Payroll Structures Form View -->
        <record id="view_hr_payroll_structure_form" model="ir.ui.view">
            <field name="name">hr.payroll.structure.form</field>
            <field name="model">hr.payroll.structure</field>
            <field name="arch" type="xml">
                <form string="HR Payroll Structure">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Structure Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="struct_type"/>
                                <field name="sequence"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="rule_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="category_id"/>
                                    <field name="amount_select"/>
                                    <field name="amount_percentage"/>
                                    <field name="amount_fixed"/>
                                    <field name="sequence"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- HR Payroll Structures Search View -->
        <record id="view_hr_payroll_structure_search" model="ir.ui.view">
            <field name="name">hr.payroll.structure.search</field>
            <field name="model">hr.payroll.structure</field>
            <field name="arch" type="xml">
                <search string="Search HR Payroll Structures">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="struct_type"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Structure Type" name="group_struct_type" context="{'group_by': 'struct_type'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- HR Payroll Structures Action -->
        <record id="action_hr_payroll_structure" model="ir.actions.act_window">
            <field name="name">HR Payroll Structures</field>
            <field name="res_model">hr.payroll.structure</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_payroll_structure_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first HR Payroll Structure!
                </p>
                <p>
                    HR payroll structures define salary rules and calculations for Indian employees.
                </p>
            </field>
        </record>
        
    </data>
</ocean>