<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- HR Tax Computations Tree View -->
        <record id="view_hr_tax_computation_tree" model="ir.ui.view">
            <field name="name">hr.tax.computation.tree</field>
            <field name="model">hr.tax.computation</field>
            <field name="arch" type="xml">
                <tree string="HR Tax Computations" decoration-info="state=='draft'" decoration-success="state=='filed'">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="tax_type"/>
                    <field name="computation_period"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <!-- HR Tax Computations Form View -->
        <record id="view_hr_tax_computation_form" model="ir.ui.view">
            <field name="name">hr.tax.computation.form</field>
            <field name="model">hr.tax.computation</field>
            <field name="arch" type="xml">
                <form string="HR Tax Computation">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_compute" type="object" class="oe_stat_button" icon="fa-calculator" string="Compute" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                            <button name="action_verify" type="object" class="oe_stat_button" icon="fa-check" string="Verify" attrs="{'invisible': [('state', '!=', 'computed')]}"/>
                            <button name="action_file" type="object" class="oe_stat_button" icon="fa-file" string="File" attrs="{'invisible': [('state', '!=', 'verified')]}"/>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Computation Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="contract_id"/>
                                <field name="tax_type"/>
                                <field name="computation_period"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="gross_salary"/>
                                <field name="taxable_income"/>
                                <field name="tax_amount"/>
                            </group>
                            <group>
                                <field name="computation_date"/>
                                <field name="verified_date"/>
                                <field name="filed_date"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- HR Tax Computations Search View -->
        <record id="view_hr_tax_computation_search" model="ir.ui.view">
            <field name="name">hr.tax.computation.search</field>
            <field name="model">hr.tax.computation</field>
            <field name="arch" type="xml">
                <search string="Search HR Tax Computations">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="contract_id"/>
                    <field name="tax_type"/>
                    <field name="computation_period"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Computed" name="computed" domain="[('state', '=', 'computed')]"/>
                    <filter string="Verified" name="verified" domain="[('state', '=', 'verified')]"/>
                    <filter string="Filed" name="filed" domain="[('state', '=', 'filed')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Employee" name="group_employee" context="{'group_by': 'employee_id'}"/>
                        <filter string="Tax Type" name="group_tax_type" context="{'group_by': 'tax_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- HR Tax Computations Action -->
        <record id="action_hr_tax_computation" model="ir.actions.act_window">
            <field name="name">HR Tax Computations</field>
            <field name="res_model">hr.tax.computation</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_tax_computation_search"/>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first HR Tax Computation!
                </p>
                <p>
                    HR tax computations handle income tax, professional tax, PF, ESI, and other statutory calculations.
                </p>
            </field>
        </record>
        
    </data>
</ocean>