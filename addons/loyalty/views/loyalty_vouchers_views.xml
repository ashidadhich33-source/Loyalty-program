<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Loyalty Voucher Templates Tree View -->
        <record id="view_loyalty_voucher_templates_tree" model="ocean.ui.view">
            <field name="name">loyalty.voucher.templates.tree</field>
            <field name="model">loyalty.voucher.template</field>
            <field name="arch" type="xml">
                <tree string="Loyalty Voucher Templates" decoration-muted="not is_active" decoration-success="is_active">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_active"/>
                    <field name="voucher_type"/>
                    <field name="discount_type"/>
                    <field name="discount_value"/>
                    <field name="product_id"/>
                    <field name="points_value"/>
                    <field name="cash_value"/>
                    <field name="validity_days"/>
                    <field name="expiry_date"/>
                    <field name="usage_limit"/>
                    <field name="usage_limit_per_customer"/>
                    <field name="voucher_count"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="is_birthday_voucher"/>
                    <field name="is_referral_voucher"/>
                    <field name="is_tier_exclusive"/>
                    <field name="tier_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Loyalty Voucher Templates Form View -->
        <record id="view_loyalty_voucher_templates_form" model="ocean.ui.view">
            <field name="name">loyalty.voucher.templates.form</field>
            <field name="model">loyalty.voucher.template</field>
            <field name="arch" type="xml">
                <form string="Loyalty Voucher Template">
                    <header>
                        <button name="action_generate_vouchers" string="Generate Vouchers" type="object" class="btn-primary"/>
                        <field name="is_active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Template Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="description"/>
                                <field name="is_active"/>
                                <field name="voucher_type"/>
                            </group>
                            <group>
                                <field name="validity_days"/>
                                <field name="expiry_date"/>
                                <field name="usage_limit"/>
                                <field name="usage_limit_per_customer"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="discount_type" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="discount_value" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="discount_currency_id" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="min_purchase_amount" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="max_discount_amount" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                            </group>
                            <group>
                                <field name="product_id" attrs="{'invisible': [('voucher_type', '!=', 'product')]}"/>
                                <field name="product_quantity" attrs="{'invisible': [('voucher_type', '!=', 'product')]}"/>
                                <field name="points_value" attrs="{'invisible': [('voucher_type', '!=', 'points')]}"/>
                                <field name="cash_value" attrs="{'invisible': [('voucher_type', '!=', 'cash')]}"/>
                                <field name="cash_currency_id" attrs="{'invisible': [('voucher_type', '!=', 'cash')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Info" name="kids_info">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Special Features" name="special_features">
                                <group>
                                    <group>
                                        <field name="is_birthday_voucher"/>
                                        <field name="is_referral_voucher"/>
                                        <field name="is_tier_exclusive"/>
                                        <field name="tier_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Generated Vouchers" name="vouchers">
                                <field name="voucher_count"/>
                                <field name="voucher_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="voucher_type"/>
                                        <field name="discount_value"/>
                                        <field name="expiry_date"/>
                                        <field name="state"/>
                                        <field name="usage_count"/>
                                        <field name="usage_limit"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Loyalty Voucher Templates Search View -->
        <record id="view_loyalty_voucher_templates_search" model="ocean.ui.view">
            <field name="name">loyalty.voucher.templates.search</field>
            <field name="model">loyalty.voucher.template</field>
            <field name="arch" type="xml">
                <search string="Search Loyalty Voucher Templates">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="voucher_type"/>
                    <field name="discount_value"/>
                    <field name="product_id"/>
                    <field name="points_value"/>
                    <field name="cash_value"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <separator/>
                    <filter string="Discount" name="discount" domain="[('voucher_type', '=', 'discount')]"/>
                    <filter string="Product" name="product" domain="[('voucher_type', '=', 'product')]"/>
                    <filter string="Points" name="points" domain="[('voucher_type', '=', 'points')]"/>
                    <filter string="Cash" name="cash" domain="[('voucher_type', '=', 'cash')]"/>
                    <separator/>
                    <filter string="Birthday Voucher" name="birthday" domain="[('is_birthday_voucher', '=', True)]"/>
                    <filter string="Referral Voucher" name="referral" domain="[('is_referral_voucher', '=', True)]"/>
                    <filter string="Tier Exclusive" name="tier_exclusive" domain="[('is_tier_exclusive', '=', True)]"/>
                    <separator/>
                    <filter string="Newborn" name="newborn" domain="[('age_group', '=', 'newborn')]"/>
                    <filter string="Infant" name="infant" domain="[('age_group', '=', 'infant')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Preschool" name="preschool" domain="[('age_group', '=', 'preschool')]"/>
                    <filter string="School" name="school" domain="[('age_group', '=', 'school')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    <filter string="All Age Groups" name="all_ages" domain="[('age_group', '=', 'all')]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender', '=', 'unisex')]"/>
                    <filter string="All Genders" name="all_genders" domain="[('gender', '=', 'all')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <filter string="All Seasons" name="all_seasons" domain="[('season', '=', 'all')]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="group_type" context="{'group_by': 'voucher_type'}"/>
                        <filter string="Age Group" name="group_age" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Tier" name="group_tier" context="{'group_by': 'tier_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Loyalty Voucher Templates Action -->
        <record id="action_loyalty_voucher_templates" model="ocean.actions.act_window">
            <field name="name">Loyalty Voucher Templates</field>
            <field name="res_model">loyalty.voucher.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_loyalty_voucher_templates_tree"/>
            <field name="search_view_id" ref="view_loyalty_voucher_templates_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
        <!-- Loyalty Vouchers Tree View -->
        <record id="view_loyalty_vouchers_tree" model="ocean.ui.view">
            <field name="name">loyalty.vouchers.tree</field>
            <field name="model">loyalty.voucher</field>
            <field name="arch" type="xml">
                <tree string="Loyalty Vouchers" decoration-muted="is_expired" decoration-success="state=='active'" decoration-warning="state=='used'" decoration-danger="state=='expired'">
                    <field name="name"/>
                    <field name="template_id"/>
                    <field name="partner_id"/>
                    <field name="program_id"/>
                    <field name="voucher_type"/>
                    <field name="discount_type"/>
                    <field name="discount_value"/>
                    <field name="product_id"/>
                    <field name="points_value"/>
                    <field name="cash_value"/>
                    <field name="expiry_date"/>
                    <field name="is_expired"/>
                    <field name="usage_count"/>
                    <field name="usage_limit"/>
                    <field name="is_used"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="is_birthday_voucher"/>
                    <field name="is_referral_voucher"/>
                    <field name="is_tier_exclusive"/>
                    <field name="tier_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Loyalty Vouchers Form View -->
        <record id="view_loyalty_vouchers_form" model="ocean.ui.view">
            <field name="name">loyalty.vouchers.form</field>
            <field name="model">loyalty.voucher</field>
            <field name="arch" type="xml">
                <form string="Loyalty Voucher">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_use" string="Use" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', 'in', ['used', 'expired', 'cancelled'])]}"/>
                        <button name="action_expire" string="Expire" type="object" class="btn-warning" attrs="{'invisible': [('state', 'in', ['used', 'expired', 'cancelled'])]}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Voucher Code"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="template_id"/>
                                <field name="partner_id"/>
                                <field name="program_id"/>
                                <field name="voucher_type"/>
                                <field name="state"/>
                            </group>
                            <group>
                                <field name="expiry_date"/>
                                <field name="is_expired"/>
                                <field name="usage_count"/>
                                <field name="usage_limit"/>
                                <field name="is_used"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="discount_type" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="discount_value" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="discount_currency_id" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="min_purchase_amount" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                                <field name="max_discount_amount" attrs="{'invisible': [('voucher_type', '!=', 'discount')]}"/>
                            </group>
                            <group>
                                <field name="product_id" attrs="{'invisible': [('voucher_type', '!=', 'product')]}"/>
                                <field name="product_quantity" attrs="{'invisible': [('voucher_type', '!=', 'product')]}"/>
                                <field name="points_value" attrs="{'invisible': [('voucher_type', '!=', 'points')]}"/>
                                <field name="cash_value" attrs="{'invisible': [('voucher_type', '!=', 'cash')]}"/>
                                <field name="cash_currency_id" attrs="{'invisible': [('voucher_type', '!=', 'cash')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Info" name="kids_info">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Special Features" name="special_features">
                                <group>
                                    <group>
                                        <field name="is_birthday_voucher"/>
                                        <field name="is_referral_voucher"/>
                                        <field name="is_tier_exclusive"/>
                                        <field name="tier_id"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Usage History" name="usage_history">
                                <field name="usage_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="usage_date"/>
                                        <field name="order_id"/>
                                        <field name="points_earned"/>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Loyalty Vouchers Search View -->
        <record id="view_loyalty_vouchers_search" model="ocean.ui.view">
            <field name="name">loyalty.vouchers.search</field>
            <field name="model">loyalty.voucher</field>
            <field name="arch" type="xml">
                <search string="Search Loyalty Vouchers">
                    <field name="name"/>
                    <field name="template_id"/>
                    <field name="partner_id"/>
                    <field name="program_id"/>
                    <field name="voucher_type"/>
                    <field name="discount_value"/>
                    <field name="product_id"/>
                    <field name="points_value"/>
                    <field name="cash_value"/>
                    <field name="expiry_date"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Used" name="used" domain="[('state', '=', 'used')]"/>
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Expired" name="is_expired" domain="[('is_expired', '=', True)]"/>
                    <filter string="Not Expired" name="not_expired" domain="[('is_expired', '=', False)]"/>
                    <filter string="Used" name="is_used" domain="[('is_used', '=', True)]"/>
                    <filter string="Not Used" name="not_used" domain="[('is_used', '=', False)]"/>
                    <separator/>
                    <filter string="Discount" name="discount" domain="[('voucher_type', '=', 'discount')]"/>
                    <filter string="Product" name="product" domain="[('voucher_type', '=', 'product')]"/>
                    <filter string="Points" name="points" domain="[('voucher_type', '=', 'points')]"/>
                    <filter string="Cash" name="cash" domain="[('voucher_type', '=', 'cash')]"/>
                    <separator/>
                    <filter string="Birthday Voucher" name="birthday" domain="[('is_birthday_voucher', '=', True)]"/>
                    <filter string="Referral Voucher" name="referral" domain="[('is_referral_voucher', '=', True)]"/>
                    <filter string="Tier Exclusive" name="tier_exclusive" domain="[('is_tier_exclusive', '=', True)]"/>
                    <separator/>
                    <filter string="Newborn" name="newborn" domain="[('age_group', '=', 'newborn')]"/>
                    <filter string="Infant" name="infant" domain="[('age_group', '=', 'infant')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Preschool" name="preschool" domain="[('age_group', '=', 'preschool')]"/>
                    <filter string="School" name="school" domain="[('age_group', '=', 'school')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('create_date', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                    <filter string="This Week" name="this_week" domain="[('create_date', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                    <filter string="This Month" name="this_month" domain="[('create_date', '>=', datetime.datetime.now().replace(day=1))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Template" name="group_template" context="{'group_by': 'template_id'}"/>
                        <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Program" name="group_program" context="{'group_by': 'program_id'}"/>
                        <filter string="Type" name="group_type" context="{'group_by': 'voucher_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Age Group" name="group_age" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'create_date'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Loyalty Vouchers Action -->
        <record id="action_loyalty_vouchers" model="ocean.actions.act_window">
            <field name="name">Loyalty Vouchers</field>
            <field name="res_model">loyalty.voucher</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_loyalty_vouchers_tree"/>
            <field name="search_view_id" ref="view_loyalty_vouchers_search"/>
        </record>
        
    </data>
</ocean>