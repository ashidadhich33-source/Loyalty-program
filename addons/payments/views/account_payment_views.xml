<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Payment Method Tree View -->
        <record id="view_account_payment_method_tree" model="ir.ui.view">
            <field name="name">account.payment.method.tree</field>
            <field name="model">account.payment.method</field>
            <field name="arch" type="xml">
                <tree string="Payment Methods" decoration-muted="active==False">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="payment_type"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="gst_treatment"/>
                    <field name="requires_reference"/>
                    <field name="requires_approval"/>
                    <field name="auto_reconcile"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Payment Method Form View -->
        <record id="view_account_payment_method_form" model="ir.ui.view">
            <field name="name">account.payment.method.form</field>
            <field name="model">account.payment.method</field>
            <field name="arch" type="xml">
                <form string="Payment Method">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Payment Method Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="payment_type"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="season"/>
                                <field name="gst_treatment"/>
                                <field name="active"/>
                            </group>
                        </group>
                        
                        <group>
                            <group>
                                <field name="requires_reference"/>
                                <field name="requires_approval"/>
                                <field name="auto_reconcile"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Payment Method Search View -->
        <record id="view_account_payment_method_search" model="ir.ui.view">
            <field name="name">account.payment.method.search</field>
            <field name="model">account.payment.method</field>
            <field name="arch" type="xml">
                <search string="Search Payment Methods">
                    <field name="name"/>
                    <field name="code"/>
                    
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    
                    <separator/>
                    <filter string="Inbound" name="inbound" domain="[('payment_type', '=', 'inbound')]"/>
                    <filter string="Outbound" name="outbound" domain="[('payment_type', '=', 'outbound')]"/>
                    <filter string="Both" name="both" domain="[('payment_type', '=', 'both')]"/>
                    
                    <separator/>
                    <filter string="Baby" name="baby" domain="[('age_group', '=', 'baby')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Kids" name="kids" domain="[('age_group', '=', 'kids')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    <filter string="All Age Groups" name="all" domain="[('age_group', '=', 'all')]"/>
                    
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <filter string="All Season" name="all_season" domain="[('season', '=', 'all_season')]"/>
                    
                    <separator/>
                    <filter string="Regular" name="regular" domain="[('gst_treatment', '=', 'regular')]"/>
                    <filter string="Composition" name="composition" domain="[('gst_treatment', '=', 'composition')]"/>
                    <filter string="Unregistered" name="unregistered" domain="[('gst_treatment', '=', 'unregistered')]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Payment Type" name="payment_type" context="{'group_by': 'payment_type'}"/>
                        <filter string="Age Group" name="age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Season" name="season" context="{'group_by': 'season'}"/>
                        <filter string="GST Treatment" name="gst_treatment" context="{'group_by': 'gst_treatment'}"/>
                        <filter string="Company" name="company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Payment Method Action -->
        <record id="action_account_payment_method" model="ir.actions.act_window">
            <field name="name">Payment Methods</field>
            <field name="res_model">account.payment.method</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_account_payment_method_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first payment method!
                </p>
                <p>
                    Payment methods define how customers can pay for their purchases.
                </p>
            </field>
        </record>
        
    </data>
</ocean>