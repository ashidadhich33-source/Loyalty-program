<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Bank Account Tree View -->
        <record id="view_bank_account_tree" model="ir.ui.view">
            <field name="name">bank.account.tree</field>
            <field name="model">bank.account</field>
            <field name="arch" type="xml">
                <tree string="Bank Accounts" decoration-muted="active==False">
                    <field name="name"/>
                    <field name="account_number"/>
                    <field name="bank_id"/>
                    <field name="account_type"/>
                    <field name="currency_id"/>
                    <field name="balance"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="gst_treatment"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <!-- Bank Account Form View -->
        <record id="view_bank_account_form" model="ir.ui.view">
            <field name="name">bank.account.form</field>
            <field name="model">bank.account</field>
            <field name="arch" type="xml">
                <form string="Bank Account">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Account Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="account_number"/>
                                <field name="bank_id"/>
                                <field name="account_type"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="age_group"/>
                                <field name="season"/>
                                <field name="gst_treatment"/>
                                <field name="active"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="balance" readonly="1"/>
                        </group>
                        
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Bank Account Action -->
        <record id="action_bank_account" model="ir.actions.act_window">
            <field name="name">Bank Accounts</field>
            <field name="res_model">bank.account</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first bank account!
                </p>
                <p>
                    Bank accounts are used to track your business banking relationships.
                </p>
            </field>
        </record>
        
    </data>
</ocean>