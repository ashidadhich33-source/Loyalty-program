<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- POS Groups -->
        <record id="group_pos_manager" model="res.groups">
            <field name="name">POS Manager</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Full access to POS configuration and management</field>
        </record>
        
        <record id="group_pos_user" model="res.groups">
            <field name="name">POS User</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Access to POS operations and sales</field>
        </record>
        
        <record id="group_pos_cashier" model="res.groups">
            <field name="name">POS Cashier</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Basic POS operations and cashier functions</field>
        </record>
        
        <!-- POS Manager Rules -->
        <record id="pos_config_rule_manager" model="ir.rule">
            <field name="name">POS Config: Manager</field>
            <field name="model_id" ref="model_pos_config"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pos_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="pos_session_rule_manager" model="ir.rule">
            <field name="name">POS Session: Manager</field>
            <field name="model_id" ref="model_pos_session"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pos_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <record id="pos_order_rule_manager" model="ir.rule">
            <field name="name">POS Order: Manager</field>
            <field name="model_id" ref="model_pos_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_pos_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        
        <!-- POS User Rules -->
        <record id="pos_config_rule_user" model="ir.rule">
            <field name="name">POS Config: User</field>
            <field name="model_id" ref="model_pos_config"/>
            <field name="domain_force">[('is_active', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_pos_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="pos_session_rule_user" model="ir.rule">
            <field name="name">POS Session: User</field>
            <field name="model_id" ref="model_pos_session"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_pos_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="pos_order_rule_user" model="ir.rule">
            <field name="name">POS Order: User</field>
            <field name="model_id" ref="model_pos_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_pos_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <!-- POS Cashier Rules -->
        <record id="pos_session_rule_cashier" model="ir.rule">
            <field name="name">POS Session: Cashier</field>
            <field name="model_id" ref="model_pos_session"/>
            <field name="domain_force">[('user_id', '=', user.id), ('state', 'in', ['opened', 'closing_control'])]</field>
            <field name="groups" eval="[(4, ref('group_pos_cashier'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
        <record id="pos_order_rule_cashier" model="ir.rule">
            <field name="name">POS Order: Cashier</field>
            <field name="model_id" ref="model_pos_order"/>
            <field name="domain_force">[('user_id', '=', user.id), ('state', 'in', ['draft', 'paid'])]</field>
            <field name="groups" eval="[(4, ref('group_pos_cashier'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        
    </data>
</odoo>