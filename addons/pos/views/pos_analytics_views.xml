<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- POS Analytics Dashboard -->
        <record id="view_pos_analytics_dashboard" model="ir.ui.view">
            <field name="name">pos.analytics.dashboard</field>
            <field name="model">pos.config</field>
            <field name="arch" type="xml">
                <form string="POS Analytics Dashboard">
                    <sheet>
                        <div class="oe_title">
                            <h1>POS Analytics Dashboard</h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="today_sales" widget="statinfo" string="Today's Sales"/>
                                <field name="today_revenue" widget="monetary" string="Today's Revenue"/>
                            </group>
                            <group>
                                <field name="session_info" widget="text" string="Session Info"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Sales Summary">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="panel panel-info">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Today's Performance</h3>
                                            </div>
                                            <div class="panel-body">
                                                <p>Sales Count: <field name="today_sales"/></p>
                                                <p>Revenue: <field name="today_revenue" widget="monetary"/></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="panel panel-success">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Active Session</h3>
                                            </div>
                                            <div class="panel-body">
                                                <field name="session_info" widget="text"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                            
                            <page string="Payment Methods">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Payment Method Usage</h3>
                                            </div>
                                            <div class="panel-body">
                                                <p>Payment method analytics will be displayed here.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                            
                            <page string="Product Performance">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Top Selling Products</h3>
                                            </div>
                                            <div class="panel-body">
                                                <p>Product performance analytics will be displayed here.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- POS Analytics Action -->
        <record id="action_pos_analytics" model="ir.actions.act_window">
            <field name="name">POS Analytics</field>
            <field name="res_model">pos.config</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pos_analytics_dashboard"/>
            <field name="target">current</field>
        </record>
        
        <!-- POS Dashboard Action -->
        <record id="action_pos_dashboard" model="ir.actions.act_window">
            <field name="name">POS Dashboard</field>
            <field name="res_model">pos.config</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pos_analytics_dashboard"/>
            <field name="target">current</field>
        </record>
        
    </data>
</odoo>