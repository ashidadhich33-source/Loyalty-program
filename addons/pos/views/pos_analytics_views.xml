<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- POS Analytics Dashboard View -->
        <record id="view_pos_analytics_dashboard" model="ocean.ui.view">
            <field name="name">pos.analytics.dashboard</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <form string="POS Analytics Dashboard">
                    <sheet>
                        <div class="oe_title">
                            <h1>POS Analytics Dashboard</h1>
                        </div>
                        <group>
                            <group>
                                <field name="total_sales" readonly="1"/>
                                <field name="total_orders" readonly="1"/>
                                <field name="total_payments" readonly="1"/>
                                <field name="total_refunds" readonly="1"/>
                            </group>
                            <group>
                                <field name="total_discounts" readonly="1"/>
                                <field name="total_tax" readonly="1"/>
                                <field name="average_order_value" readonly="1"/>
                                <field name="conversion_rate" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sales Analysis" name="sales_analysis">
                                <group>
                                    <group>
                                        <field name="sales_by_hour" readonly="1"/>
                                        <field name="sales_by_day" readonly="1"/>
                                        <field name="sales_by_month" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="top_products" readonly="1"/>
                                        <field name="top_categories" readonly="1"/>
                                        <field name="top_customers" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="sales_by_age_group" readonly="1"/>
                                        <field name="sales_by_gender" readonly="1"/>
                                        <field name="sales_by_season" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="sales_by_size_range" readonly="1"/>
                                        <field name="sales_by_occasion" readonly="1"/>
                                        <field name="gift_wrapping_rate" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Performance Metrics" name="performance">
                                <group>
                                    <group>
                                        <field name="average_transaction_time" readonly="1"/>
                                        <field name="peak_hours" readonly="1"/>
                                        <field name="busiest_days" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="payment_method_distribution" readonly="1"/>
                                        <field name="return_rate" readonly="1"/>
                                        <field name="customer_satisfaction" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Analytics Action -->
        <record id="action_pos_analytics" model="ocean.actions.act_window">
            <field name="name">POS Analytics</field>
            <field name="res_model">pos.session</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_pos_analytics_dashboard"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    POS Analytics Dashboard
                </p>
                <p>
                    View comprehensive analytics and performance metrics for your POS operations.
                </p>
            </field>
        </record>
    </data>
</ocean>