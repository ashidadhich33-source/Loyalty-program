<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- POS Receipt Tree View -->
        <record id="view_pos_receipt_tree" model="ocean.ui.view">
            <field name="name">pos.receipt.tree</field>
            <field name="model">pos.receipt</field>
            <field name="arch" type="xml">
                <tree string="POS Receipts" decoration-muted="state=='cancel'" decoration-success="state=='printed'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="order_id"/>
                    <field name="receipt_type"/>
                    <field name="amount"/>
                    <field name="state"/>
                    <field name="print_date"/>
                    <field name="customer_name"/>
                </tree>
            </field>
        </record>

        <!-- POS Receipt Form View -->
        <record id="view_pos_receipt_form" model="ocean.ui.view">
            <field name="name">pos.receipt.form</field>
            <field name="model">pos.receipt</field>
            <field name="arch" type="xml">
                <form string="POS Receipt">
                    <header>
                        <button name="action_print" string="Print Receipt" type="object" class="btn-primary" states="draft"/>
                        <button name="action_email" string="Email Receipt" type="object" class="btn-success" states="printed"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,printed,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Receipt Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_id"/>
                                <field name="session_id"/>
                                <field name="receipt_type"/>
                                <field name="customer_name"/>
                                <field name="customer_email"/>
                                <field name="customer_phone"/>
                            </group>
                            <group>
                                <field name="amount"/>
                                <field name="currency_id"/>
                                <field name="print_date"/>
                                <field name="print_count"/>
                                <field name="email_sent"/>
                                <field name="email_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Receipt Content" name="receipt_content">
                                <field name="receipt_content" widget="text"/>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Receipt Search View -->
        <record id="view_pos_receipt_search" model="ocean.ui.view">
            <field name="name">pos.receipt.search</field>
            <field name="model">pos.receipt</field>
            <field name="arch" type="xml">
                <search string="Search POS Receipts">
                    <field name="name"/>
                    <field name="order_id"/>
                    <field name="customer_name"/>
                    <field name="customer_email"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Printed" name="printed" domain="[('state', '=', 'printed')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Today" name="today" domain="[('print_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('print_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Order" name="order" context="{'group_by': 'order_id'}"/>
                        <filter string="Receipt Type" name="receipt_type" context="{'group_by': 'receipt_type'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Print Date" name="print_date" context="{'group_by': 'print_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- POS Receipt Action -->
        <record id="action_pos_receipt" model="ocean.actions.act_window">
            <field name="name">POS Receipts</field>
            <field name="res_model">pos.receipt</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pos_receipt_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new POS receipt
                </p>
                <p>
                    POS receipts track printed and emailed receipts for customer orders.
                </p>
            </field>
        </record>
    </data>
</ocean>