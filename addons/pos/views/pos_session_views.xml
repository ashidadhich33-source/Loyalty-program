<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- POS Session Tree View -->
        <record id="view_pos_session_tree" model="ir.ui.view">
            <field name="name">pos.session.tree</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <tree string="POS Sessions">
                    <field name="name"/>
                    <field name="config_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                    <field name="start_at"/>
                    <field name="stop_at"/>
                    <field name="order_count"/>
                    <field name="total_sales"/>
                </tree>
            </field>
        </record>
        
        <!-- POS Session Form View -->
        <record id="view_pos_session_form" model="ir.ui.view">
            <field name="name">pos.session.form</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <form string="POS Session">
                    <header>
                        <button name="action_close" 
                                string="Close Session" 
                                type="object" 
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'opened')]}"/>
                        <button name="action_open_cashbox" 
                                string="Open Cash Box" 
                                type="object" 
                                class="btn-secondary"
                                attrs="{'invisible': [('state', '!=', 'opened')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="opened,closing_control,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_orders" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-shopping-cart">
                                <field name="order_count" widget="statinfo" string="Orders"/>
                            </button>
                            <button name="action_view_payments" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-money">
                                <field name="total_sales" widget="monetary" string="Total Sales"/>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Session Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="config_id"/>
                                <field name="user_id"/>
                                <field name="start_at"/>
                                <field name="stop_at"/>
                            </group>
                            <group>
                                <field name="start_cash"/>
                                <field name="end_cash"/>
                                <field name="cash_difference"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Orders">
                                <field name="order_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="state"/>
                                        <field name="amount_total"/>
                                        <field name="date_order"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Payments">
                                <field name="payment_ids" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="payment_method_id"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                        <field name="payment_date"/>
                                    </tree>
                                </field>
                            </page>
                            
                            <page string="Notes">
                                <field name="notes" widget="text"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- POS Session Action -->
        <record id="action_pos_session" model="ir.actions.act_window">
            <field name="name">POS Sessions</field>
            <field name="res_model">pos.session</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_opened': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Start your first POS session!
                </p>
                <p>
                    POS sessions track your sales activities and cash management.
                </p>
            </field>
        </record>
        
    </data>
</odoo>