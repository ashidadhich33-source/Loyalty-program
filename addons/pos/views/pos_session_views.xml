<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- POS Session Tree View -->
        <record id="view_pos_session_tree" model="ocean.ui.view">
            <field name="name">pos.session.tree</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <tree string="POS Sessions" decoration-muted="state=='closed'" decoration-success="state=='opened'" decoration-info="state=='closing'">
                    <field name="name"/>
                    <field name="pos_config_id"/>
                    <field name="user_id"/>
                    <field name="start_at"/>
                    <field name="stop_at"/>
                    <field name="state"/>
                    <field name="cash_register_balance_start"/>
                    <field name="cash_register_balance_end"/>
                    <field name="total_sales"/>
                    <field name="total_orders"/>
                </tree>
            </field>
        </record>

        <!-- POS Session Form View -->
        <record id="view_pos_session_form" model="ocean.ui.view">
            <field name="name">pos.session.form</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <form string="POS Session">
                    <header>
                        <button name="action_open_session" string="Open Session" type="object" class="btn-primary" states="draft"/>
                        <button name="action_close_session" string="Close Session" type="object" class="btn-warning" states="opened"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,opened,closing,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Session Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="pos_config_id"/>
                                <field name="user_id"/>
                                <field name="start_at"/>
                                <field name="stop_at"/>
                                <field name="cash_register_balance_start"/>
                                <field name="cash_register_balance_end"/>
                            </group>
                            <group>
                                <field name="total_sales"/>
                                <field name="total_orders"/>
                                <field name="total_payments"/>
                                <field name="total_refunds"/>
                                <field name="total_discounts"/>
                                <field name="total_tax"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Orders" name="orders">
                                <field name="order_ids">
                                    <tree editable="false">
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount_total"/>
                                        <field name="state"/>
                                        <field name="date_order"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Payments" name="payments">
                                <field name="payment_ids">
                                    <tree editable="false">
                                        <field name="name"/>
                                        <field name="payment_method_id"/>
                                        <field name="amount"/>
                                        <field name="state"/>
                                        <field name="payment_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Cash Control" name="cash_control">
                                <group>
                                    <group>
                                        <field name="cash_register_balance_start"/>
                                        <field name="cash_register_balance_end"/>
                                        <field name="cash_register_total_entry_encoding"/>
                                        <field name="cash_register_difference"/>
                                    </group>
                                    <group>
                                        <field name="cash_register_balance_real"/>
                                        <field name="cash_register_balance_real_end"/>
                                        <field name="cash_register_total_entry_encoding"/>
                                        <field name="cash_register_difference"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Session Search View -->
        <record id="view_pos_session_search" model="ocean.ui.view">
            <field name="name">pos.session.search</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <search string="Search POS Sessions">
                    <field name="name"/>
                    <field name="pos_config_id"/>
                    <field name="user_id"/>
                    <field name="partner_id"/>
                    <separator/>
                    <filter string="Open Sessions" name="open" domain="[('state', '=', 'opened')]"/>
                    <filter string="Closed Sessions" name="closed" domain="[('state', '=', 'closed')]"/>
                    <filter string="Today" name="today" domain="[('start_at', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('start_at', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="POS Config" name="pos_config" context="{'group_by': 'pos_config_id'}"/>
                        <filter string="User" name="user" context="{'group_by': 'user_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Start Date" name="start_date" context="{'group_by': 'start_at:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- POS Session Action -->
        <record id="action_pos_session" model="ocean.actions.act_window">
            <field name="name">POS Sessions</field>
            <field name="res_model">pos.session</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pos_session_search"/>
            <field name="context">{'search_default_open': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new POS session
                </p>
                <p>
                    POS sessions track sales activities and cash management for each point of sale terminal.
                </p>
            </field>
        </record>
    </data>
</ocean>