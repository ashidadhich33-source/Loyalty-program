<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- POS Cash Box Wizard -->
        <record id="view_pos_cashbox_wizard_form" model="ir.ui.view">
            <field name="name">pos.cashbox.wizard.form</field>
            <field name="model">pos.cashbox.wizard</field>
            <field name="arch" type="xml">
                <form string="Cash Management">
                    <header>
                        <button name="action_confirm" 
                                string="Confirm" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Cash Management</h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="session_id"/>
                                <field name="operation_type"/>
                                <field name="amount"/>
                                <field name="reason"/>
                            </group>
                            <group>
                                <field name="notes" widget="text"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- POS Cash Box Wizard Action -->
        <record id="action_pos_cashbox_wizard" model="ir.actions.act_window">
            <field name="name">Cash Management</field>
            <field name="res_model">pos.cashbox.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <!-- POS Quick Sale Wizard -->
        <record id="view_pos_quick_sale_wizard_form" model="ir.ui.view">
            <field name="name">pos.quick.sale.wizard.form</field>
            <field name="model">pos.quick.sale.wizard</field>
            <field name="arch" type="xml">
                <form string="Quick Sale">
                    <header>
                        <button name="action_process_sale" 
                                string="Process Sale" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Quick Sale</h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="customer_id"/>
                            </group>
                            <group>
                                <field name="discount_type"/>
                                <field name="discount_rate"/>
                                <field name="payment_method_id"/>
                                <field name="notes" widget="text"/>
                            </group>
                        </group>
                        
                        <group>
                            <field name="subtotal" readonly="1"/>
                            <field name="tax_amount" readonly="1"/>
                            <field name="total_amount" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- POS Quick Sale Wizard Action -->
        <record id="action_pos_quick_sale_wizard" model="ir.actions.act_window">
            <field name="name">Quick Sale</field>
            <field name="res_model">pos.quick.sale.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>
</odoo>