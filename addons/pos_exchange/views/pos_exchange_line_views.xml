<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- POS Exchange Line Tree View -->
        <record id="view_pos_exchange_line_tree" model="ocean.ui.view">
            <field name="name">pos.exchange.line.tree</field>
            <field name="model">pos.exchange.line</field>
            <field name="arch" type="xml">
                <tree string="POS Exchange Lines" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-info="state=='draft'">
                    <field name="exchange_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="unit_price"/>
                    <field name="total_price"/>
                    <field name="exchange_reason_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- POS Exchange Line Form View -->
        <record id="view_pos_exchange_line_form" model="ocean.ui.view">
            <field name="name">pos.exchange.line.form</field>
            <field name="model">pos.exchange.line</field>
            <field name="arch" type="xml">
                <form string="POS Exchange Line">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                        <button name="action_process" string="Process" type="object" class="btn-success" states="confirmed"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" states="processed"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft,confirmed"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,processed,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="product_id" placeholder="Select Product"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="exchange_id"/>
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="unit_price"/>
                                <field name="total_price"/>
                            </group>
                            <group>
                                <field name="exchange_reason_id"/>
                                <field name="notes"/>
                                <field name="user_id"/>
                                <field name="exchange_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Exchange Line Search View -->
        <record id="view_pos_exchange_line_search" model="ocean.ui.view">
            <field name="name">pos.exchange.line.search</field>
            <field name="model">pos.exchange.line</field>
            <field name="arch" type="xml">
                <search string="Search POS Exchange Lines">
                    <field name="exchange_id"/>
                    <field name="product_id"/>
                    <field name="exchange_reason_id"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Today" name="today" domain="[('exchange_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('exchange_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Exchange" name="exchange" context="{'group_by': 'exchange_id'}"/>
                        <filter string="Product" name="product" context="{'group_by': 'product_id'}"/>
                        <filter string="Exchange Reason" name="exchange_reason" context="{'group_by': 'exchange_reason_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Exchange Date" name="exchange_date" context="{'group_by': 'exchange_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- POS Exchange Line Action -->
        <record id="action_pos_exchange_line" model="ocean.actions.act_window">
            <field name="name">POS Exchange Lines</field>
            <field name="res_model">pos.exchange.line</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pos_exchange_line_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new POS exchange line
                </p>
                <p>
                    POS exchange lines track individual product exchanges within an exchange order.
                </p>
            </field>
        </record>
    </data>
</ocean>