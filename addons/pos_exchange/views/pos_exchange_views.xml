<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- POS Exchange Tree View -->
        <record id="view_pos_exchange_tree" model="ocean.ui.view">
            <field name="name">pos.exchange.tree</field>
            <field name="model">pos.exchange</field>
            <field name="arch" type="xml">
                <tree string="POS Exchanges" decoration-muted="state=='cancel'" decoration-success="state=='done'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="original_order_id"/>
                    <field name="customer_id"/>
                    <field name="exchange_date"/>
                    <field name="state"/>
                    <field name="total_amount"/>
                    <field name="exchange_type"/>
                </tree>
            </field>
        </record>

        <!-- POS Exchange Form View -->
        <record id="view_pos_exchange_form" model="ocean.ui.view">
            <field name="name">pos.exchange.form</field>
            <field name="model">pos.exchange</field>
            <field name="arch" type="xml">
                <form string="POS Exchange">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" states="draft"/>
                        <button name="action_process" string="Process" type="object" class="btn-success" states="confirmed"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" states="processed"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft,confirmed"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,processed,done,cancel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Exchange Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="original_order_id"/>
                                <field name="customer_id"/>
                                <field name="exchange_date"/>
                                <field name="exchange_type"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="total_amount"/>
                                <field name="currency_id"/>
                                <field name="exchange_fee"/>
                                <field name="refund_amount"/>
                                <field name="additional_amount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Exchange Lines" name="exchange_lines">
                                <field name="exchange_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total_price"/>
                                        <field name="exchange_reason_id"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Exchange Search View -->
        <record id="view_pos_exchange_search" model="ocean.ui.view">
            <field name="name">pos.exchange.search</field>
            <field name="model">pos.exchange</field>
            <field name="arch" type="xml">
                <search string="Search POS Exchanges">
                    <field name="name"/>
                    <field name="original_order_id"/>
                    <field name="customer_id"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Today" name="today" domain="[('exchange_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('exchange_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="customer" context="{'group_by': 'customer_id'}"/>
                        <filter string="Original Order" name="original_order" context="{'group_by': 'original_order_id'}"/>
                        <filter string="Exchange Type" name="exchange_type" context="{'group_by': 'exchange_type'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Exchange Date" name="exchange_date" context="{'group_by': 'exchange_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- POS Exchange Action -->
        <record id="action_pos_exchange" model="ocean.actions.act_window">
            <field name="name">POS Exchanges</field>
            <field name="res_model">pos.exchange</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pos_exchange_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new POS exchange
                </p>
                <p>
                    POS exchanges track product exchanges for customer orders.
                </p>
            </field>
        </record>
    </data>
</ocean>