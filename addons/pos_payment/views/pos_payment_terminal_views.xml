<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- POS Payment Terminal Tree View -->
        <record id="view_pos_payment_terminal_tree" model="ocean.ui.view">
            <field name="name">pos.payment.terminal.tree</field>
            <field name="model">pos.payment.terminal</field>
            <field name="arch" type="xml">
                <tree string="POS Payment Terminals" decoration-muted="not is_active" decoration-info="terminal_type=='card_reader'" decoration-success="terminal_type=='cash_register'">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="terminal_type"/>
                    <field name="is_active"/>
                    <field name="location_id"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- POS Payment Terminal Form View -->
        <record id="view_pos_payment_terminal_form" model="ocean.ui.view">
            <field name="name">pos.payment.terminal.form</field>
            <field name="model">pos.payment.terminal</field>
            <field name="arch" type="xml">
                <form string="POS Payment Terminal">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-success" states="inactive"/>
                        <button name="action_deactivate" string="Deactivate" type="object" class="btn-secondary" states="active"/>
                        <button name="action_test" string="Test Terminal" type="object" class="btn-info" states="active"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="inactive,active"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Terminal Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="terminal_type"/>
                                <field name="location_id"/>
                                <field name="is_active"/>
                                <field name="status"/>
                            </group>
                            <group>
                                <field name="serial_number"/>
                                <field name="model"/>
                                <field name="manufacturer"/>
                                <field name="firmware_version"/>
                                <field name="last_maintenance_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Configuration" name="configuration">
                                <group>
                                    <group>
                                        <field name="ip_address"/>
                                        <field name="port"/>
                                        <field name="protocol"/>
                                        <field name="timeout"/>
                                    </group>
                                    <group>
                                        <field name="max_transaction_amount"/>
                                        <field name="daily_limit"/>
                                        <field name="monthly_limit"/>
                                        <field name="requires_receipt"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="gift_wrapping"/>
                                        <field name="gift_message"/>
                                        <field name="care_instructions"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- POS Payment Terminal Search View -->
        <record id="view_pos_payment_terminal_search" model="ocean.ui.view">
            <field name="name">pos.payment.terminal.search</field>
            <field name="model">pos.payment.terminal</field>
            <field name="arch" type="xml">
                <search string="Search POS Payment Terminals">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="terminal_type"/>
                    <field name="location_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Terminal Type" name="terminal_type" context="{'group_by': 'terminal_type'}"/>
                        <filter string="Location" name="location" context="{'group_by': 'location_id'}"/>
                        <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                        <filter string="Active Status" name="active_status" context="{'group_by': 'is_active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- POS Payment Terminal Action -->
        <record id="action_pos_payment_terminal" model="ocean.actions.act_window">
            <field name="name">POS Payment Terminals</field>
            <field name="res_model">pos.payment.terminal</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_pos_payment_terminal_search"/>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new POS payment terminal
                </p>
                <p>
                    POS payment terminals are physical devices used to process customer payments.
                </p>
            </field>
        </record>
    </data>
</ocean>