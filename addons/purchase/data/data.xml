<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Default Purchase Order States -->
        <record id="purchase_order_state_draft" model="purchase.order.state">
            <field name="name">Draft</field>
            <field name="sequence">1</field>
            <field name="is_default">True</field>
        </record>

        <record id="purchase_order_state_sent" model="purchase.order.state">
            <field name="name">RFQ Sent</field>
            <field name="sequence">2</field>
        </record>

        <record id="purchase_order_state_to_approve" model="purchase.order.state">
            <field name="name">To Approve</field>
            <field name="sequence">3</field>
        </record>

        <record id="purchase_order_state_purchase" model="purchase.order.state">
            <field name="name">Purchase Order</field>
            <field name="sequence">4</field>
        </record>

        <record id="purchase_order_state_done" model="purchase.order.state">
            <field name="name">Locked</field>
            <field name="sequence">5</field>
        </record>

        <record id="purchase_order_state_cancel" model="purchase.order.state">
            <field name="name">Cancelled</field>
            <field name="sequence">6</field>
        </record>

        <!-- Default Vendor Bill States -->
        <record id="vendor_bill_state_draft" model="vendor.bill.state">
            <field name="name">Draft</field>
            <field name="sequence">1</field>
            <field name="is_default">True</field>
        </record>

        <record id="vendor_bill_state_posted" model="vendor.bill.state">
            <field name="name">Posted</field>
            <field name="sequence">2</field>
        </record>

        <record id="vendor_bill_state_paid" model="vendor.bill.state">
            <field name="name">Paid</field>
            <field name="sequence">3</field>
        </record>

        <record id="vendor_bill_state_cancelled" model="vendor.bill.state">
            <field name="name">Cancelled</field>
            <field name="sequence">4</field>
        </record>
    </data>
</ocean>