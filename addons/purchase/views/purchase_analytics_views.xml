<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Purchase Analytics Dashboard View -->
        <record id="view_purchase_analytics_dashboard" model="ocean.ui.view">
            <field name="name">purchase.analytics.dashboard</field>
            <field name="model">purchase.analytics</field>
            <field name="arch" type="xml">
                <form string="Purchase Analytics Dashboard">
                    <header>
                        <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Purchase Analytics Dashboard</h1>
                        </div>
                        <group>
                            <group>
                                <field name="total_orders" readonly="1"/>
                                <field name="total_amount" readonly="1"/>
                                <field name="average_order_value" readonly="1"/>
                                <field name="total_suppliers" readonly="1"/>
                            </group>
                            <group>
                                <field name="order_fulfillment_rate" readonly="1"/>
                                <field name="supplier_performance_score" readonly="1"/>
                                <field name="cost_savings" readonly="1"/>
                                <field name="report_date"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Analysis" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="orders_by_age_group" readonly="1"/>
                                        <field name="orders_by_season" readonly="1"/>
                                        <field name="orders_by_gender" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="orders_by_occasion" readonly="1"/>
                                        <field name="seasonal_trends" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Supplier Analysis" name="suppliers">
                                <group>
                                    <group>
                                        <field name="top_suppliers" readonly="1"/>
                                        <field name="supplier_performance_score" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="top_products" readonly="1"/>
                                        <field name="cost_savings" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Purchase Analytics Action -->
        <record id="action_purchase_analytics" model="ocean.actions.act_window">
            <field name="name">Purchase Analytics</field>
            <field name="res_model">purchase.analytics</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_purchase_analytics_dashboard"/>
            <field name="target">current</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Purchase Analytics Dashboard
                </p>
                <p>
                    View comprehensive analytics and insights about your purchase operations.
                </p>
            </field>
        </record>
    </data>
</ocean>