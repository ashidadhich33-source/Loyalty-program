<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Vendor Bill Tree View -->
        <record id="view_vendor_bill_tree" model="ocean.ui.view">
            <field name="name">vendor.bill.tree</field>
            <field name="model">vendor.bill</field>
            <field name="arch" type="xml">
                <tree string="Vendor Bills" decoration-muted="state=='cancelled'" decoration-success="state=='paid'" decoration-info="state=='draft'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="bill_date"/>
                    <field name="due_date"/>
                    <field name="state"/>
                    <field name="amount_total"/>
                    <field name="amount_paid"/>
                    <field name="amount_residual"/>
                    <field name="currency_id"/>
                </tree>
            </field>
        </record>

        <!-- Vendor Bill Form View -->
        <record id="view_vendor_bill_form" model="ocean.ui.view">
            <field name="name">vendor.bill.form</field>
            <field name="model">vendor.bill</field>
            <field name="arch" type="xml">
                <form string="Vendor Bill">
                    <header>
                        <button name="action_post" string="Post" type="object" class="btn-primary" states="draft"/>
                        <button name="action_pay" string="Pay" type="object" class="btn-success" states="posted"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft,posted"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,paid,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Bill Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="purchase_order_id"/>
                                <field name="bill_date"/>
                                <field name="due_date"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                                <field name="amount_paid"/>
                                <field name="amount_residual"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bill Lines" name="bill_lines">
                                <field name="bill_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_tax"/>
                                        <field name="price_total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Clothing Specific" name="kids_clothing">
                                <group>
                                    <group>
                                        <field name="age_group"/>
                                        <field name="season"/>
                                        <field name="size_range"/>
                                        <field name="gender"/>
                                    </group>
                                    <group>
                                        <field name="special_occasion"/>
                                        <field name="notes"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vendor Bill Search View -->
        <record id="view_vendor_bill_search" model="ocean.ui.view">
            <field name="name">vendor.bill.search</field>
            <field name="model">vendor.bill</field>
            <field name="arch" type="xml">
                <search string="Search Vendor Bills">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="purchase_order_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                    <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today()), ('state', '=', 'posted')]"/>
                    <filter string="Today" name="today" domain="[('bill_date', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('bill_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Supplier" name="supplier" context="{'group_by': 'partner_id'}"/>
                        <filter string="State" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Payment State" name="payment_state" context="{'group_by': 'payment_state'}"/>
                        <filter string="Bill Date" name="bill_date" context="{'group_by': 'bill_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vendor Bill Action -->
        <record id="action_vendor_bill" model="ocean.actions.act_window">
            <field name="name">Vendor Bills</field>
            <field name="res_model">vendor.bill</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_vendor_bill_search"/>
            <field name="context">{'search_default_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new vendor bill
                </p>
                <p>
                    Vendor bills track invoices received from suppliers.
                </p>
            </field>
        </record>
    </data>
</ocean>