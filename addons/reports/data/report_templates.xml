<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <!-- Financial Report Templates -->
    <record id="template_profit_loss" model="report.template">
        <field name="name">Profit &amp; Loss Statement</field>
        <field name="code">profit_loss</field>
        <field name="description">Comprehensive profit and loss statement</field>
        <field name="category_id" ref="category_financial"/>
        <field name="report_type">financial</field>
        <field name="view_type">list</field>
        <field name="model_name">account.move</field>
        <field name="sequence">10</field>
        <field name="output_formats">pdf,excel</field>
    </record>

    <record id="template_balance_sheet" model="report.template">
        <field name="name">Balance Sheet</field>
        <field name="code">balance_sheet</field>
        <field name="description">Assets, liabilities, and equity statement</field>
        <field name="category_id" ref="category_financial"/>
        <field name="report_type">financial</field>
        <field name="view_type">list</field>
        <field name="model_name">account.account</field>
        <field name="sequence">20</field>
        <field name="output_formats">pdf,excel</field>
    </record>

    <record id="template_cash_flow" model="report.template">
        <field name="name">Cash Flow Statement</field>
        <field name="code">cash_flow</field>
        <field name="description">Operating, investing, and financing cash flows</field>
        <field name="category_id" ref="category_financial"/>
        <field name="report_type">financial</field>
        <field name="view_type">list</field>
        <field name="model_name">account.move</field>
        <field name="sequence">30</field>
        <field name="output_formats">pdf,excel</field>
    </record>

