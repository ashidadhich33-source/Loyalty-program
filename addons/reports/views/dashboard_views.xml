<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <!-- Dashboard Widget Views -->
    <record id="view_dashboard_widget_tree" model="ocean.ui.view">
        <field name="name">dashboard.widget.tree</field>
        <field name="model">dashboard.widget</field>
        <field name="arch" type="xml">
            <tree string="Dashboard Widgets">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="widget_type"/>
                <field name="data_source"/>
                <field name="width"/>
                <field name="height"/>
                <field name="user_id"/>
                <field name="is_public"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_dashboard_widget_form" model="ocean.ui.view">
        <field name="model">dashboard.widget</field>
        <field name="arch" type="xml">
            <form string="Dashboard Widget">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_refresh_widget" type="object" class="oe_stat_button" icon="fa-refresh">
                            <span>Refresh</span>
                        </button>
                        <button name="action_duplicate_widget" type="object" class="oe_stat_button" icon="fa-copy">
                            <span>Duplicate</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Widget Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="title"/>
                            <field name="widget_type"/>
                            <field name="chart_type" attrs="{'invisible': [('widget_type', '!=', 'chart')]}"/>
                            <field name="data_source"/>
                        </group>
                        <group>
                            <field name="width"/>
                            <field name="height"/>
                            <field name="sequence"/>
                            <field name="user_id"/>
                            <field name="is_public"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Data Configuration">
                            <group>
                                <field name="model_name" attrs="{'invisible': [('data_source', '!=', 'model')]}"/>
                                <field name="domain" attrs="{'invisible': [('data_source', '!=', 'model')]}"/>
                            </group>
                            <group>
                                <field name="sql_query" attrs="{'invisible': [('data_source', '!=', 'sql')]}" widget="ace" options="{'mode': 'sql'}"/>
                            </group>
                            <group>
                                <field name="python_code" attrs="{'invisible': [('data_source', '!=', 'python')]}" widget="ace" options="{'mode': 'python'}"/>
                            </group>
                            <group>
                                <field name="static_data" attrs="{'invisible': [('data_source', '!=', 'static')]}" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Display Configuration">
                            <group>
                                <field name="background_color"/>
                                <field name="text_color"/>
                                <field name="border_color"/>
                                <field name="border_width"/>
                                <field name="border_radius"/>
                            </group>
                        </page>
                        <page string="Chart Configuration" attrs="{'invisible': [('widget_type', 'not in', ['chart', 'graph'])]}">
                            <group>
                                <field name="show_legend"/>
                                <field name="show_grid"/>
                                <field name="show_labels"/>
                            </group>
                            <group>
                                <field name="chart_colors" widget="ace" options="{'mode': 'json'}"/>
                            </group>
                        </page>
                        <page string="Refresh Configuration">
                            <group>
                                <field name="auto_refresh"/>
                                <field name="refresh_interval"/>
                                <field name="last_refresh"/>
                            </group>
                        </page>
                        <page string="Access Control">
                            <group>
                                <field name="group_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Views -->
    <record id="view_dashboard_tree" model="ocean.ui.view">
        <field name="name">dashboard.dashboard.tree</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <tree string="Dashboards">
                <field name="name"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="is_public"/>
                <field name="active"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_dashboard_form" model="ocean.ui.view">
        <field name="name">dashboard.dashboard.form</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_dashboard" type="object" class="oe_stat_button" icon="fa-eye">
                            <span>View Dashboard</span>
                        </button>
                        <button name="action_duplicate_dashboard" type="object" class="oe_stat_button" icon="fa-copy">
                            <span>Duplicate</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Dashboard Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="is_public"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="layout"/>
                            <field name="theme"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Widgets">
                            <field name="widget_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="widget_id"/>
                                    <field name="x_position"/>
                                    <field name="y_position"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Access Control">
                            <group>
                                <field name="group_ids" widget="many2many_tags"/>
                                <field name="shared_with_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Kanban View -->
    <record id="view_dashboard_kanban" model="ocean.ui.view">
        <field name="name">dashboard.dashboard.kanban</field>
        <field name="model">dashboard.dashboard</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="is_public"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="description"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="user_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.is_public.raw_value" class="badge badge-info">Public</span>
                                        <span t-if="!record.active.raw_value" class="badge badge-secondary">Inactive</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_dashboard_widget" model="ocean.actions.act_window">
        <field name="name">Dashboard Widgets</field>
        <field name="res_model">dashboard.widget</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dashboard widget!
            </p>
            <p>
                Create widgets to display data in your dashboards.
            </p>
        </field>
    </record>

    <record id="action_dashboard" model="ocean.actions.act_window">
        <field name="name">Dashboards</field>
        <field name="res_model">dashboard.dashboard</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first dashboard!
            </p>
            <p>
                Create custom dashboards with widgets to visualize your data.
            </p>
        </field>
    </record>
</ocean>