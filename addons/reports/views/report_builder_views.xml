    <record id="view_report_builder_filter_form" model="ocean.ui.view">
        <field name="name">report.builder.filter.form</field>
        <field name="model">report.builder.filter</field>
        <field name="arch" type="xml">
            <form string="Report Builder Filter">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="field_name" placeholder="Field Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="builder_id"/>
