    <record id="view_report_builder_group_form" model="ocean.ui.view">
        <field name="name">report.builder.group.form</field>
        <field name="model">report.builder.group</field>
        <field name="arch" type="xml">
            <form string="Report Builder Group">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="field_name" placeholder="Field Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="builder_id"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <field name="field_label"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Report Builder Filter Views -->
    <record id="view_report_builder_filter_tree" model="ocean.ui.view">
        <field name="name">report.builder.filter.tree</field>
        <field name="model">report.builder.filter</field>
        <field name="arch" type="xml">
            <tree string="Report Builder Filters">
                <field name="sequence" widget="handle"/>
                <field name="field_name"/>
                <field name="field_label"/>
