    <record id="action_report_builder_group" model="ocean.actions.act_window">
        <field name="name">Report Builder Groups</field>
        <field name="res_model">report.builder.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_report_builder_filter" model="ocean.actions.act_window">
        <field name="name">Report Builder Filters</field>
        <field name="res_model">report.builder.filter</field>
        <field name="view_mode">tree,form</field>
    </record>
</ocean>