<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sales Team Data -->
        <record id="sale_team_online" model="sale.team">
            <field name="name">Online Sales Team</field>
            <field name="code">ONLINE</field>
            <field name="description">Team responsible for online sales</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_team_offline" model="sale.team">
            <field name="name">Offline Sales Team</field>
            <field name="code">OFFLINE</field>
            <field name="description">Team responsible for offline sales</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Sales Territory Data -->
        <record id="sale_territory_north" model="sale.territory">
            <field name="name">North Territory</field>
            <field name="code">NORTH</field>
            <field name="description">Northern region sales territory</field>
            <field name="territory_type">region</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_territory_south" model="sale.territory">
            <field name="name">South Territory</field>
            <field name="code">SOUTH</field>
            <field name="description">Southern region sales territory</field>
            <field name="territory_type">region</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_territory_east" model="sale.territory">
            <field name="name">East Territory</field>
            <field name="code">EAST</field>
            <field name="description">Eastern region sales territory</field>
            <field name="territory_type">region</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_territory_west" model="sale.territory">
            <field name="name">West Territory</field>
            <field name="code">WEST</field>
            <field name="description">Western region sales territory</field>
            <field name="territory_type">region</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Sales Commission Rules -->
        <record id="sale_commission_rule_standard" model="sale.commission.rule">
            <field name="name">Standard Commission Rule</field>
            <field name="code">STANDARD</field>
            <field name="description">Standard commission rule for sales</field>
            <field name="rule_type">percentage</field>
            <field name="commission_rate">5.0</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_commission_rule_kids" model="sale.commission.rule">
            <field name="name">Kids Commission Rule</field>
            <field name="code">KIDS</field>
            <field name="description">Special commission rule for kids items</field>
            <field name="rule_type">percentage</field>
            <field name="commission_rate">7.0</field>
            <field name="kids_commission_rate">2.0</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <!-- Sales Analytics Data -->
        <record id="sale_analytics_monthly" model="sale.analytics">
            <field name="name">Monthly Sales Analytics</field>
            <field name="analytics_type">monthly</field>
            <field name="period_start">2024-01-01</field>
            <field name="period_end">2024-01-31</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_analytics_quarterly" model="sale.analytics">
            <field name="name">Quarterly Sales Analytics</field>
            <field name="analytics_type">quarterly</field>
            <field name="period_start">2024-01-01</field>
            <field name="period_end">2024-03-31</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
        <record id="sale_analytics_yearly" model="sale.analytics">
            <field name="name">Yearly Sales Analytics</field>
            <field name="analytics_type">yearly</field>
            <field name="period_start">2024-01-01</field>
            <field name="period_end">2024-12-31</field>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>
</odoo>