<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Sales Security Groups -->
        <record id="group_sales_manager" model="ocean.groups">
            <field name="name">Sales Manager</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can manage all sales operations and analytics"/>
        </record>
        
        <record id="group_sales_user" model="ocean.groups">
            <field name="name">Sales User</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can create and manage sales orders and quotations"/>
        </record>
        
        <record id="group_sales_analyst" model="ocean.groups">
            <field name="name">Sales Analyst</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can view sales analytics and reports"/>
        </record>
        
        <record id="group_delivery_user" model="ocean.groups">
            <field name="name">Delivery User</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can manage delivery operations"/>
        </record>
        
        <record id="group_return_user" model="ocean.groups">
            <field name="name">Return User</field>
            <field name="category_id" ref="ocean.module_category_sales"/>
            <field name="comment">Can manage return operations"/>
        </record>
        
        <!-- Sales Order Access Rules -->
        <record id="rule_sale_order_own" model="ocean.rule">
            <field name="name">Sale Order: Own Records</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sales_user'))]"/>
        </record>
        
        <record id="rule_sale_order_company" model="ocean.rule">
            <field name="name">Sale Order: Company</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_manager'))]"/>
        </record>
        
        <!-- Sale Delivery Access Rules -->
        <record id="rule_sale_delivery_own" model="ocean.rule">
            <field name="name">Sale Delivery: Own Records</field>
            <field name="model_id" ref="model_sale_delivery"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_delivery_user'))]"/>
        </record>
        
        <record id="rule_sale_delivery_company" model="ocean.rule">
            <field name="name">Sale Delivery: Company</field>
            <field name="model_id" ref="model_sale_delivery"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_manager'))]"/>
        </record>
        
        <!-- Sale Return Access Rules -->
        <record id="rule_sale_return_own" model="ocean.rule">
            <field name="name">Sale Return: Own Records</field>
            <field name="model_id" ref="model_sale_return"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_return_user'))]"/>
        </record>
        
        <record id="rule_sale_return_company" model="ocean.rule">
            <field name="name">Sale Return: Company</field>
            <field name="model_id" ref="model_sale_return"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_manager'))]"/>
        </record>
        
        <!-- Sale Analytics Access Rules -->
        <record id="rule_sale_analytics_own" model="ocean.rule">
            <field name="name">Sale Analytics: Own Records</field>
            <field name="model_id" ref="model_sale_analytics"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_sales_analyst'))]"/>
        </record>
        
        <record id="rule_sale_analytics_company" model="ocean.rule">
            <field name="name">Sale Analytics: Company</field>
            <field name="model_id" ref="model_sale_analytics"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sales_manager'))]"/>
        </record>
        
    </data>
</ocean>