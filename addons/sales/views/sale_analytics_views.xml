<?xml version="1.0" encoding="utf-8"?>
<erp>
    <data>
        <!-- Sale Analytics Tree View -->
        <record id="view_sale_analytics_tree" model="erp.ui.view">
            <field name="name">sale.analytics.tree</field>
            <field name="model">sale.analytics</field>
            <field name="arch" type="xml">
                <tree string="Sales Analytics" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="analytics_type"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="total_sales_amount"/>
                    <field name="total_sales_orders"/>
                    <field name="average_order_value"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Analytics Form View -->
        <record id="view_sale_analytics_form" model="erp.ui.view">
            <field name="name">sale.analytics.form</field>
            <field name="model">sale.analytics</field>
            <field name="arch" type="xml">
                <form string="Sales Analytics" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_generate_analytics" string="Generate Analytics" type="object" class="btn-primary"/>
                        <button name="action_view_detailed_analytics" string="View Detailed" type="object" class="btn-secondary"/>
                        <button name="action_export_analytics" string="Export" type="object" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="analytics_type"/>
                                <field name="period_start"/>
                                <field name="period_end"/>
                                <field name="total_sales_amount"/>
                                <field name="total_sales_orders"/>
                            </group>
                            <group>
                                <field name="average_order_value"/>
                                <field name="sales_growth_percentage"/>
                                <field name="order_growth_percentage"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="top_salesperson_id"/>
                                <field name="top_team_id"/>
                                <field name="top_territory_id"/>
                                <field name="top_product_id"/>
                            </group>
                            <group>
                                <field name="top_category_id"/>
                                <field name="top_customer_id"/>
                                <field name="kids_sales_amount"/>
                                <field name="kids_sales_percentage"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Kids Clothing Analytics" name="kids_analytics">
                                <group>
                                    <group>
                                        <field name="age_group_sales"/>
                                        <field name="gender_sales"/>
                                    </group>
                                    <group>
                                        <field name="season_sales"/>
                                        <field name="online_sales"/>
                                        <field name="offline_sales"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Sales Trends" name="trends">
                                <group>
                                    <group>
                                        <field name="sales_trend"/>
                                    </group>
                                    <group>
                                        <field name="order_trend"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Commission Analytics" name="commission_analytics">
                                <group>
                                    <group>
                                        <field name="total_commission_paid"/>
                                        <field name="average_commission_rate"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Analytics Search View -->
        <record id="view_sale_analytics_search" model="erp.ui.view">
            <field name="name">sale.analytics.search</field>
            <field name="model">sale.analytics</field>
            <field name="arch" type="xml">
                <search string="Sales Analytics">
                    <field name="name"/>
                    <field name="analytics_type"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="company_id"/>
                    <filter string="Daily" name="daily" domain="[('analytics_type', '=', 'daily')]"/>
                    <filter string="Weekly" name="weekly" domain="[('analytics_type', '=', 'weekly')]"/>
                    <filter string="Monthly" name="monthly" domain="[('analytics_type', '=', 'monthly')]"/>
                    <filter string="Quarterly" name="quarterly" domain="[('analytics_type', '=', 'quarterly')]"/>
                    <filter string="Yearly" name="yearly" domain="[('analytics_type', '=', 'yearly')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Analytics Type" name="group_type" context="{'group_by': 'analytics_type'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Analytics Action -->
        <record id="action_sale_analytics" model="erp.actions.act_window">
            <field name="name">Sales Analytics</field>
            <field name="res_model">sale.analytics</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_analytics_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales analytics!
                </p>
                <p>
                    Sales analytics provide insights into your sales performance.
                </p>
            </field>
        </record>
        
        <!-- Sale Analytics Dashboard View -->
        <record id="view_sale_analytics_dashboard" model="erp.ui.view">
            <field name="name">sale.analytics.dashboard</field>
            <field name="model">sale.analytics</field>
            <field name="arch" type="xml">
                <dashboard string="Sales Analytics Dashboard">
                    <view type="graph" ref="view_sale_analytics_graph"/>
                    <view type="pivot" ref="view_sale_analytics_pivot"/>
                </dashboard>
            </field>
        </record>
        
        <!-- Sale Analytics Graph View -->
        <record id="view_sale_analytics_graph" model="erp.ui.view">
            <field name="name">sale.analytics.graph</field>
            <field name="model">sale.analytics</field>
            <field name="arch" type="xml">
                <graph string="Sales Analytics" type="bar">
                    <field name="period_start" type="row"/>
                    <field name="total_sales_amount" type="measure"/>
                    <field name="total_sales_orders" type="measure"/>
                    <field name="average_order_value" type="measure"/>
                </graph>
            </field>
        </record>
        
        <!-- Sale Analytics Pivot View -->
        <record id="view_sale_analytics_pivot" model="erp.ui.view">
            <field name="name">sale.analytics.pivot</field>
            <field name="model">sale.analytics</field>
            <field name="arch" type="xml">
                <pivot string="Sales Analytics">
                    <field name="period_start" type="row"/>
                    <field name="analytics_type" type="col"/>
                    <field name="total_sales_amount" type="measure"/>
                    <field name="total_sales_orders" type="measure"/>
                    <field name="average_order_value" type="measure"/>
                </pivot>
            </field>
        </record>
        
        <!-- Sale Analytics Dashboard Action -->
        <record id="action_sale_analytics_dashboard" model="erp.actions.act_window">
            <field name="name">Sales Analytics Dashboard</field>
            <field name="res_model">sale.analytics</field>
            <field name="view_mode">dashboard</field>
            <field name="view_id" ref="view_sale_analytics_dashboard"/>
        </record>
    </data>
</erp>