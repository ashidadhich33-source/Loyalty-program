<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Commission Tree View -->
        <record id="view_sale_commission_tree" model="ir.ui.view">
            <field name="name">sale.commission.tree</field>
            <field name="model">sale.commission</field>
            <field name="arch" type="xml">
                <tree string="Sales Commissions" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="salesperson_id"/>
                    <field name="team_id"/>
                    <field name="territory_id"/>
                    <field name="commission_date"/>
                    <field name="base_amount"/>
                    <field name="calculated_amount"/>
                    <field name="status"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Commission Form View -->
        <record id="view_sale_commission_form" model="ir.ui.view">
            <field name="name">sale.commission.form</field>
            <field name="model">sale.commission</field>
            <field name="arch" type="xml">
                <form string="Sales Commission" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_calculate" string="Calculate" type="object" class="btn-primary" states="draft"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" states="calculated"/>
                        <button name="action_pay" string="Pay" type="object" class="btn-primary" states="approved"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,calculated,approved,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="commission_type"/>
                                <field name="commission_rate"/>
                                <field name="commission_amount"/>
                                <field name="base_amount"/>
                                <field name="calculated_amount"/>
                            </group>
                            <group>
                                <field name="salesperson_id"/>
                                <field name="team_id"/>
                                <field name="territory_id"/>
                                <field name="commission_date"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="period_start"/>
                                <field name="period_end"/>
                                <field name="sale_order_id"/>
                                <field name="rule_id"/>
                            </group>
                            <group>
                                <field name="kids_commission_rate"/>
                                <field name="age_group_commission"/>
                                <field name="gender_commission"/>
                                <field name="season_commission"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Commission Search View -->
        <record id="view_sale_commission_search" model="ir.ui.view">
            <field name="name">sale.commission.search</field>
            <field name="model">sale.commission</field>
            <field name="arch" type="xml">
                <search string="Sales Commissions">
                    <field name="name"/>
                    <field name="salesperson_id"/>
                    <field name="team_id"/>
                    <field name="territory_id"/>
                    <field name="commission_date"/>
                    <field name="status"/>
                    <field name="company_id"/>
                    <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                    <filter string="Calculated" name="calculated" domain="[('status', '=', 'calculated')]"/>
                    <filter string="Approved" name="approved" domain="[('status', '=', 'approved')]"/>
                    <filter string="Paid" name="paid" domain="[('status', '=', 'paid')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('status', '=', 'cancelled')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Salesperson" name="group_salesperson" context="{'group_by': 'salesperson_id'}"/>
                        <filter string="Team" name="group_team" context="{'group_by': 'team_id'}"/>
                        <filter string="Territory" name="group_territory" context="{'group_by': 'territory_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Commission Action -->
        <record id="action_sale_commission" model="ir.actions.act_window">
            <field name="name">Sales Commissions</field>
            <field name="res_model">sale.commission</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_commission_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales commission!
                </p>
                <p>
                    Sales commissions track and manage commission payments to salespeople.
                </p>
            </field>
        </record>
        
        <!-- Sale Commission Rule Tree View -->
        <record id="view_sale_commission_rule_tree" model="ir.ui.view">
            <field name="name">sale.commission.rule.tree</field>
            <field name="model">sale.commission.rule</field>
            <field name="arch" type="xml">
                <tree string="Sales Commission Rules" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="rule_type"/>
                    <field name="commission_rate"/>
                    <field name="commission_amount"/>
                    <field name="min_amount"/>
                    <field name="max_amount"/>
                    <field name="sequence"/>
                    <field name="active"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Commission Rule Form View -->
        <record id="view_sale_commission_rule_form" model="ir.ui.view">
            <field name="name">sale.commission.rule.form</field>
            <field name="model">sale.commission.rule</field>
            <field name="arch" type="xml">
                <form string="Sales Commission Rule" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="rule_type"/>
                                <field name="commission_rate"/>
                                <field name="commission_amount"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="min_amount"/>
                                <field name="max_amount"/>
                                <field name="active"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="kids_commission_rate"/>
                                <field name="age_group_commission"/>
                            </group>
                            <group>
                                <field name="gender_commission"/>
                                <field name="season_commission"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description" name="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Commission Rule Search View -->
        <record id="view_sale_commission_rule_search" model="ir.ui.view">
            <field name="name">sale.commission.rule.search</field>
            <field name="model">sale.commission.rule</field>
            <field name="arch" type="xml">
                <search string="Sales Commission Rules">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="rule_type"/>
                    <field name="company_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Rule Type" name="group_type" context="{'group_by': 'rule_type'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Commission Rule Action -->
        <record id="action_sale_commission_rule" model="ir.actions.act_window">
            <field name="name">Sales Commission Rules</field>
            <field name="res_model">sale.commission.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_commission_rule_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first commission rule!
                </p>
                <p>
                    Commission rules define how commissions are calculated for sales.
                </p>
            </field>
        </record>
    </data>
</odoo>