<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Delivery Tree View -->
        <record id="view_sale_delivery_tree" model="ir.ui.view">
            <field name="name">sale.delivery.tree</field>
            <field name="model">sale.delivery</field>
            <field name="arch" type="xml">
                <tree string="Sales Deliveries" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="delivery_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Delivery Form View -->
        <record id="view_sale_delivery_form" model="ir.ui.view">
            <field name="name">sale.delivery.form</field>
            <field name="model">sale.delivery</field>
            <field name="arch" type="xml">
                <form string="Sales Delivery" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_assign" string="Assign" type="object" class="btn-primary" states="draft"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" states="assigned"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting,assigned,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sale_order_id"/>
                                <field name="partner_id"/>
                                <field name="delivery_date"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="delivery_address"/>
                                <field name="delivery_notes"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Delivery Lines" name="delivery_lines">
                                <field name="delivery_line_ids" nolabel="1">
                                    <tree string="Delivery Lines" create="true" edit="true" delete="true">
                                        <field name="product_id"/>
                                        <field name="delivered_qty"/>
                                        <field name="size_id"/>
                                        <field name="color_id"/>
                                        <field name="lot_id"/>
                                        <field name="package_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Delivery Search View -->
        <record id="view_sale_delivery_search" model="ir.ui.view">
            <field name="name">sale.delivery.search</field>
            <field name="model">sale.delivery</field>
            <field name="arch" type="xml">
                <search string="Sales Deliveries">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="delivery_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Waiting" name="waiting" domain="[('state', '=', 'waiting')]"/>
                    <filter string="Assigned" name="assigned" domain="[('state', '=', 'assigned')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Responsible" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Delivery Action -->
        <record id="action_sale_delivery" model="ir.actions.act_window">
            <field name="name">Sales Deliveries</field>
            <field name="res_model">sale.delivery</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_delivery_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales delivery!
                </p>
                <p>
                    Sales deliveries are used to manage product deliveries to customers.
                </p>
            </field>
        </record>
        
        <!-- Sale Delivery Line Tree View -->
        <record id="view_sale_delivery_line_tree" model="ir.ui.view">
            <field name="name">sale.delivery.line.tree</field>
            <field name="model">sale.delivery.line</field>
            <field name="arch" type="xml">
                <tree string="Sales Delivery Lines" create="true" edit="true" delete="true">
                    <field name="product_id"/>
                    <field name="delivered_qty"/>
                    <field name="size_id"/>
                    <field name="color_id"/>
                    <field name="lot_id"/>
                    <field name="package_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Delivery Line Form View -->
        <record id="view_sale_delivery_line_form" model="ir.ui.view">
            <field name="name">sale.delivery.line.form</field>
            <field name="model">sale.delivery.line</field>
            <field name="arch" type="xml">
                <form string="Sales Delivery Line" create="true" edit="true" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="delivery_id"/>
                                <field name="product_id"/>
                                <field name="delivered_qty"/>
                                <field name="size_id"/>
                                <field name="color_id"/>
                            </group>
                            <group>
                                <field name="lot_id"/>
                                <field name="package_id"/>
                                <field name="delivery_notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Delivery Line Action -->
        <record id="action_sale_delivery_line" model="ir.actions.act_window">
            <field name="name">Sales Delivery Lines</field>
            <field name="res_model">sale.delivery.line</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>