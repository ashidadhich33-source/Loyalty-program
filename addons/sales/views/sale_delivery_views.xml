<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Sale Deliveries Tree View -->
        <record id="view_sale_deliveries_tree" model="ocean.ui.view">
            <field name="name">sale.deliveries.tree</field>
            <field name="model">sale.delivery</field>
            <field name="arch" type="xml">
                <tree string="Sale Deliveries" decoration-muted="state=='draft'" decoration-success="state=='delivered'" decoration-warning="state=='in_transit'" decoration-danger="state=='failed'">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="date_delivery"/>
                    <field name="date_actual"/>
                    <field name="state"/>
                    <field name="delivery_method"/>
                    <field name="tracking_number"/>
                    <field name="delivery_charges"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Deliveries Form View -->
        <record id="view_sale_deliveries_form" model="ocean.ui.view">
            <field name="name">sale.deliveries.form</field>
            <field name="model">sale.delivery</field>
            <field name="arch" type="xml">
                <form string="Sale Delivery">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_ship" string="Ship" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_deliver" string="Deliver" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'in_transit')]}"/>
                        <button name="action_fail" string="Mark as Failed" type="object" class="btn-warning" attrs="{'invisible': [('state', 'not in', ['confirmed', 'in_transit'])]}"/>
                        <button name="action_retry" string="Retry" type="object" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'failed')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', 'in', ['delivered', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_transit,delivered"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Delivery Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sale_order_id"/>
                                <field name="partner_id"/>
                                <field name="date_delivery"/>
                                <field name="date_actual"/>
                                <field name="delivery_method"/>
                                <field name="delivery_carrier_id"/>
                                <field name="tracking_number"/>
                            </group>
                            <group>
                                <field name="delivery_charges"/>
                                <field name="delivery_charges_paid"/>
                                <field name="delivery_rating"/>
                                <field name="delivery_attempts"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="delivery_address_id"/>
                            <field name="delivery_address"/>
                            <field name="delivery_city"/>
                            <field name="delivery_state"/>
                            <field name="delivery_zip"/>
                            <field name="delivery_country"/>
                        </group>
                        <group>
                            <field name="delivery_contact"/>
                            <field name="delivery_phone"/>
                            <field name="delivery_notes" placeholder="Special delivery instructions..."/>
                        </group>
                        <notebook>
                            <page string="Delivery Lines" name="delivery_lines">
                                <field name="delivery_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="size"/>
                                        <field name="color"/>
                                        <field name="product_uom_qty"/>
                                        <field name="qty_delivered"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Performance" name="performance">
                                <field name="delivery_rating"/>
                                <field name="delivery_feedback"/>
                                <field name="delivery_attempts"/>
                                <field name="delivery_issues"/>
                            </page>
                            <page string="Tracking" name="tracking">
                                <field name="tracking_number"/>
                                <field name="delivery_carrier_id"/>
                                <button name="action_track_delivery" string="Track Delivery" type="object" class="btn-primary" attrs="{'invisible': [('tracking_number', '=', False)]}"/>
                            </page>
                            <page string="Schedule" name="schedule">
                                <button name="action_schedule_delivery" string="Schedule Delivery" type="object" class="btn-primary"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Deliveries Search View -->
        <record id="view_sale_deliveries_search" model="ocean.ui.view">
            <field name="name">sale.deliveries.search</field>
            <field name="model">sale.delivery</field>
            <field name="arch" type="xml">
                <search string="Search Deliveries">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="tracking_number"/>
                    <field name="date_delivery"/>
                    <field name="date_actual"/>
                    <field name="state"/>
                    <field name="delivery_method"/>
                    <field name="user_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                    <filter string="Delivered" name="delivered" domain="[('state', '=', 'delivered')]"/>
                    <filter string="Failed" name="failed" domain="[('state', '=', 'failed')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Home Delivery" name="home_delivery" domain="[('delivery_method', '=', 'home_delivery')]"/>
                    <filter string="Store Pickup" name="store_pickup" domain="[('delivery_method', '=', 'store_pickup')]"/>
                    <filter string="Express Delivery" name="express" domain="[('delivery_method', '=', 'express')]"/>
                    <filter string="Standard Delivery" name="standard" domain="[('delivery_method', '=', 'standard')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date_delivery', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                    <filter string="This Week" name="this_week" domain="[('date_delivery', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                    <filter string="This Month" name="this_month" domain="[('date_delivery', '>=', datetime.datetime.now().replace(day=1))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Sales Order" name="group_order" context="{'group_by': 'sale_order_id'}"/>
                        <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                        <filter string="Delivery Method" name="group_method" context="{'group_by': 'delivery_method'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date_delivery'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Deliveries Action -->
        <record id="action_sale_deliveries" model="ocean.actions.act_window">
            <field name="name">Sale Deliveries</field>
            <field name="res_model">sale.delivery</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sale_deliveries_tree"/>
            <field name="search_view_id" ref="view_sale_deliveries_search"/>
            <field name="context">{'search_default_draft': 1}</field>
        </record>
        
    </data>
</ocean>