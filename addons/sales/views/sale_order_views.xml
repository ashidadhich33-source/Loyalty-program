<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sales Order Tree View -->
        <record id="view_sale_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Sales Orders" decoration-info="state=='draft'" decoration-success="state=='sale'" decoration-muted="state=='cancel'">
                    <field name="name"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <!-- Sales Order Form View -->
        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Sales Order">
                    <header>
                        <button name="action_quotation_send" string="Send Quotation" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_deliveries" type="object" class="oe_stat_button" icon="fa-truck">
                                <field name="delivery_count" widget="statinfo" string="Deliveries"/>
                            </button>
                            <button name="action_view_returns" type="object" class="oe_stat_button" icon="fa-undo">
                                <field name="return_count" widget="statinfo" string="Returns"/>
                            </button>
                            <button name="action_view_analytics" type="object" class="oe_stat_button" icon="fa-bar-chart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Analytics</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="partner_invoice_id"/>
                                <field name="partner_shipping_id"/>
                                <field name="date_order"/>
                                <field name="validity_date"/>
                            </group>
                            <group>
                                <field name="child_profile_id"/>
                                <field name="age_group"/>
                                <field name="gender"/>
                                <field name="season"/>
                                <field name="team_id"/>
                                <field name="user_id"/>
                                <field name="territory_id"/>
                                <field name="commission_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="payment_term_id"/>
                                <field name="fiscal_position_id"/>
                                <field name="gstin"/>
                                <field name="pan"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Lines" name="order_lines">
                                <field name="order_line">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_tax"/>
                                        <field name="price_total"/>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                        <field name="size"/>
                                        <field name="color"/>
                                        <field name="brand"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Analytics" name="kids_analytics">
                                <group>
                                    <group>
                                        <field name="total_kids_items"/>
                                        <field name="age_group_distribution"/>
                                    </group>
                                    <group>
                                        <field name="gender_distribution"/>
                                        <field name="season_distribution"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="note" nolabel="1"/>
                                <field name="client_order_ref"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Sales Order Search View -->
        <record id="view_sale_order_search" model="ir.ui.view">
            <field name="name">sale.order.search</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <search string="Search Sales Orders">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="child_profile_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <field name="territory_id"/>
                    <field name="commission_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Sale" name="sale" domain="[('state', '=', 'sale')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="baby" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="toddler" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Kids (4-12)" name="kids" domain="[('age_group', 'in', ['4-6', '6-8', '8-10', '10-12'])]"/>
                    <filter string="Teen (12-16)" name="teen" domain="[('age_group', 'in', ['12-14', '14-16'])]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date_order', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter string="This Week" name="this_week" domain="[('date_order', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('date_order', '>=', context_today().strftime('%Y-%m-01'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Team" name="group_team" context="{'group_by': 'team_id'}"/>
                        <filter string="Salesperson" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Territory" name="group_territory" context="{'group_by': 'territory_id'}"/>
                        <filter string="Commission" name="group_commission" context="{'group_by': 'commission_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date_order:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Sales Order Kanban View -->
        <record id="view_sale_order_kanban" model="ir.ui.view">
            <field name="name">sale.order.kanban</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <kanban string="Sales Orders">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <field name="partner_id"/>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <field name="date_order"/>
                                            <br/>
                                            <field name="amount_total"/>
                                            <br/>
                                            <field name="age_group"/>
                                            <field name="gender"/>
                                            <field name="season"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="team_id"/>
                                            <field name="user_id"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="state" widget="label_selection"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Sales Order Action -->
        <record id="action_sale_order" model="ir.actions.act_window">
            <field name="name">Sales Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales order!
                </p>
                <p>
                    Sales orders are the main documents for managing customer orders.
                    They include customer information, order lines, and pricing.
                </p>
            </field>
        </record>
    </data>
</odoo>