<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sales Quotation Tree View -->
        <record id="view_sale_quotation_tree" model="ir.ui.view">
            <field name="name">sale.quotation.tree</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <tree string="Sales Quotations" decoration-info="state=='draft'" decoration-success="state=='accepted'" decoration-muted="state=='rejected'">
                    <field name="name"/>
                    <field name="date_quotation"/>
                    <field name="partner_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <!-- Sales Quotation Form View -->
        <record id="view_sale_quotation_form" model="ir.ui.view">
            <field name="name">sale.quotation.form</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <form string="Sales Quotation">
                    <header>
                        <button name="action_send_quotation" string="Send Quotation" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_accept_quotation" string="Accept" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                        <button name="action_reject_quotation" string="Reject" type="object" class="btn-secondary" attrs="{'invisible': [('state', '!=', 'sent')]}"/>
                        <button name="action_convert_to_order" string="Convert to Order" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'accepted')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,accepted,rejected,expired,converted"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_order" type="object" class="oe_stat_button" icon="fa-shopping-cart" attrs="{'invisible': [('order_id', '=', False)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Order</span>
                                </div>
                            </button>
                            <button name="action_view_analytics" type="object" class="oe_stat_button" icon="fa-bar-chart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Analytics</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="partner_invoice_id"/>
                                <field name="partner_shipping_id"/>
                                <field name="date_quotation"/>
                                <field name="validity_date"/>
                            </group>
                            <group>
                                <field name="child_profile_id"/>
                                <field name="age_group"/>
                                <field name="gender"/>
                                <field name="season"/>
                                <field name="team_id"/>
                                <field name="user_id"/>
                                <field name="territory_id"/>
                                <field name="commission_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total"/>
                                <field name="currency_id"/>
                            </group>
                            <group>
                                <field name="payment_term_id"/>
                                <field name="fiscal_position_id"/>
                                <field name="gstin"/>
                                <field name="pan"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Quotation Lines" name="quotation_lines">
                                <field name="quotation_line">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_tax"/>
                                        <field name="price_total"/>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                        <field name="size"/>
                                        <field name="color"/>
                                        <field name="brand"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Analytics" name="kids_analytics">
                                <group>
                                    <group>
                                        <field name="total_kids_items"/>
                                        <field name="age_group_distribution"/>
                                    </group>
                                    <group>
                                        <field name="gender_distribution"/>
                                        <field name="season_distribution"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="note" nolabel="1"/>
                                <field name="client_order_ref"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Sales Quotation Search View -->
        <record id="view_sale_quotation_search" model="ir.ui.view">
            <field name="name">sale.quotation.search</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <search string="Search Sales Quotations">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="child_profile_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <field name="territory_id"/>
                    <field name="commission_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Accepted" name="accepted" domain="[('state', '=', 'accepted')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                    <filter string="Converted" name="converted" domain="[('state', '=', 'converted')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="baby" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="toddler" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Kids (4-12)" name="kids" domain="[('age_group', 'in', ['4-6', '6-8', '8-10', '10-12'])]"/>
                    <filter string="Teen (12-16)" name="teen" domain="[('age_group', 'in', ['12-14', '14-16'])]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date_quotation', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter string="This Week" name="this_week" domain="[('date_quotation', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('date_quotation', '>=', context_today().strftime('%Y-%m-01'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Team" name="group_team" context="{'group_by': 'team_id'}"/>
                        <filter string="Salesperson" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Territory" name="group_territory" context="{'group_by': 'territory_id'}"/>
                        <filter string="Commission" name="group_commission" context="{'group_by': 'commission_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date_quotation:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Sales Quotation Kanban View -->
        <record id="view_sale_quotation_kanban" model="ir.ui.view">
            <field name="name">sale.quotation.kanban</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <kanban string="Sales Quotations">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_quotation"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <field name="partner_id"/>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <field name="date_quotation"/>
                                            <br/>
                                            <field name="amount_total"/>
                                            <br/>
                                            <field name="age_group"/>
                                            <field name="gender"/>
                                            <field name="season"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="team_id"/>
                                            <field name="user_id"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="state" widget="label_selection"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Sales Quotation Action -->
        <record id="action_sale_quotation" model="ir.actions.act_window">
            <field name="name">Sales Quotations</field>
            <field name="res_model">sale.quotation</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales quotation!
                </p>
                <p>
                    Sales quotations are used to send price quotes to customers.
                    They can be converted to sales orders when accepted.
                </p>
            </field>
        </record>
    </data>
</odoo>