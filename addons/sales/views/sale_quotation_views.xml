<?xml version="1.0" encoding="utf-8"?>
<erp>
    <data>
        <!-- Sale Quotation Tree View -->
        <record id="view_sale_quotation_tree" model="erp.ui.view">
            <field name="name">sale.quotation.tree</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <tree string="Sales Quotations" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="quotation_date"/>
                    <field name="validity_date"/>
                    <field name="state"/>
                    <field name="total_amount"/>
                    <field name="currency_id"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Quotation Form View -->
        <record id="view_sale_quotation_form" model="erp.ui.view">
            <field name="name">sale.quotation.form</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <form string="Sales Quotation" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_send" string="Send" type="object" class="btn-primary" states="draft"/>
                        <button name="action_accept" string="Accept" type="object" class="btn-primary" states="sent"/>
                        <button name="action_reject" string="Reject" type="object" class="btn-secondary" states="sent"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,accepted,rejected"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="quotation_date"/>
                                <field name="validity_date"/>
                                <field name="currency_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="child_profile_id"/>
                                <field name="age_group"/>
                                <field name="gst_treatment"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Quotation Lines" name="quotation_lines">
                                <field name="quotation_line_ids" nolabel="1">
                                    <tree string="Quotation Lines" create="true" edit="true" delete="true">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="price_unit"/>
                                        <field name="price_subtotal"/>
                                        <field name="size_id"/>
                                        <field name="color_id"/>
                                        <field name="tax_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Quotation Search View -->
        <record id="view_sale_quotation_search" model="erp.ui.view">
            <field name="name">sale.quotation.search</field>
            <field name="model">sale.quotation</field>
            <field name="arch" type="xml">
                <search string="Sales Quotations">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="quotation_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Accepted" name="accepted" domain="[('state', '=', 'accepted')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Salesperson" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Quotation Action -->
        <record id="action_sale_quotation" model="erp.actions.act_window">
            <field name="name">Sales Quotations</field>
            <field name="res_model">sale.quotation</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_quotation_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales quotation!
                </p>
                <p>
                    Sales quotations are used to send price quotes to customers.
                </p>
            </field>
        </record>
        
        <!-- Sale Quotation Line Tree View -->
        <record id="view_sale_quotation_line_tree" model="erp.ui.view">
            <field name="name">sale.quotation.line.tree</field>
            <field name="model">sale.quotation.line</field>
            <field name="arch" type="xml">
                <tree string="Sales Quotation Lines" create="true" edit="true" delete="true">
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal"/>
                    <field name="size_id"/>
                    <field name="color_id"/>
                    <field name="tax_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Quotation Line Form View -->
        <record id="view_sale_quotation_line_form" model="erp.ui.view">
            <field name="name">sale.quotation.line.form</field>
            <field name="model">sale.quotation.line</field>
            <field name="arch" type="xml">
                <form string="Sales Quotation Line" create="true" edit="true" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="quotation_id"/>
                                <field name="product_id"/>
                                <field name="product_uom_qty"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal"/>
                            </group>
                            <group>
                                <field name="size_id"/>
                                <field name="color_id"/>
                                <field name="tax_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Quotation Line Action -->
        <record id="action_sale_quotation_line" model="erp.actions.act_window">
            <field name="name">Sales Quotation Lines</field>
            <field name="res_model">sale.quotation.line</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</erp>