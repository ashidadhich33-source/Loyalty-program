<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        <!-- Sales Quotations Tree View -->
        <record id="view_sale_quotations_tree" model="ocean.ui.view">
            <field name="name">sale.quotations.tree</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <tree string="Sales Quotations" decoration-muted="state=='draft'" decoration-info="state=='sent'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender_preference"/>
                    <field name="season"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sales Quotations Form View -->
        <record id="view_sale_quotations_form" model="ocean.ui.view">
            <field name="name">sale.quotations.form</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <form string="Sales Quotation">
                    <header>
                        <button name="action_quotation_send" string="Send Quotation" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_confirm" string="Confirm Order" type="object" class="btn-success" attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-warning" attrs="{'invisible': [('state', 'in', ['done', 'cancel'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Quotation Reference"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" required="1"/>
                                <field name="child_profile_id"/>
                                <field name="date_order"/>
                                <field name="date_required"/>
                                <field name="user_id"/>
                                <field name="team_id"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="gender_preference"/>
                                <field name="season"/>
                                <field name="delivery_method"/>
                                <field name="payment_method"/>
                            </group>
                        </group>
                        <group>
                            <field name="delivery_address_id"/>
                            <field name="delivery_notes" placeholder="Special delivery instructions..."/>
                        </group>
                        <notebook>
                            <page string="Quotation Lines" name="quotation_lines">
                                <field name="order_line_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="size"/>
                                        <field name="color"/>
                                        <field name="product_uom_qty"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="price_subtotal"/>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Pricing" name="pricing">
                                <group>
                                    <group>
                                        <field name="discount_type"/>
                                        <field name="discount_percentage" attrs="{'invisible': [('discount_type', '!=', 'percentage')]}"/>
                                        <field name="discount_amount" attrs="{'invisible': [('discount_type', '!=', 'fixed')]}"/>
                                    </group>
                                    <group>
                                        <field name="amount_untaxed" readonly="1"/>
                                        <field name="amount_tax" readonly="1"/>
                                        <field name="amount_total" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="note" placeholder="Internal notes..."/>
                                <field name="terms_conditions" placeholder="Terms and conditions..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sales Quotations Search View -->
        <record id="view_sale_quotations_search" model="ocean.ui.view">
            <field name="name">sale.quotations.search</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <search string="Search Quotations">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="user_id"/>
                    <field name="date_order"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender_preference"/>
                    <field name="season"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                    <separator/>
                    <filter string="Newborn" name="newborn" domain="[('age_group', '=', 'newborn')]"/>
                    <filter string="Infant" name="infant" domain="[('age_group', '=', 'infant')]"/>
                    <filter string="Toddler" name="toddler" domain="[('age_group', '=', 'toddler')]"/>
                    <filter string="Preschool" name="preschool" domain="[('age_group', '=', 'preschool')]"/>
                    <filter string="School" name="school" domain="[('age_group', '=', 'school')]"/>
                    <filter string="Teen" name="teen" domain="[('age_group', '=', 'teen')]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender_preference', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender_preference', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender_preference', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date_order', '>=', datetime.datetime.now().replace(hour=0, minute=0, second=0))]"/>
                    <filter string="This Week" name="this_week" domain="[('date_order', '>=', (datetime.datetime.now() - datetime.timedelta(days=7)))]"/>
                    <filter string="This Month" name="this_month" domain="[('date_order', '>=', datetime.datetime.now().replace(day=1))]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Customer" name="group_customer" context="{'group_by': 'partner_id'}"/>
                        <filter string="Salesperson" name="group_salesperson" context="{'group_by': 'user_id'}"/>
                        <filter string="Age Group" name="group_age" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender_preference'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date_order'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sales Quotations Action -->
        <record id="action_sale_quotations" model="ocean.actions.act_window">
            <field name="name">Sales Quotations</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sale_quotations_tree"/>
            <field name="search_view_id" ref="view_sale_quotations_search"/>
            <field name="domain">[('state', 'in', ['draft', 'sent'])]</field>
            <field name="context">{'search_default_draft': 1}</field>
        </record>
        
    </data>
</ocean>