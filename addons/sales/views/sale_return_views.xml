<?xml version="1.0" encoding="utf-8"?>
<erp>
    <data>
        <!-- Sale Return Tree View -->
        <record id="view_sale_return_tree" model="erp.ui.view">
            <field name="name">sale.return.tree</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <tree string="Sales Returns" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="return_date"/>
                    <field name="state"/>
                    <field name="total_refund_amount"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Return Form View -->
        <record id="view_sale_return_form" model="erp.ui.view">
            <field name="name">sale.return.form</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <form string="Sales Return" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_request" string="Request" type="object" class="btn-primary" states="draft"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" states="requested"/>
                        <button name="action_receive" string="Receive" type="object" class="btn-primary" states="approved"/>
                        <button name="action_refund" string="Refund" type="object" class="btn-primary" states="received"/>
                        <button name="action_replace" string="Replace" type="object" class="btn-primary" states="received"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,received,refunded,replaced"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="sale_order_id"/>
                                <field name="partner_id"/>
                                <field name="return_date"/>
                                <field name="reason"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="total_refund_amount"/>
                                <field name="return_address"/>
                                <field name="return_notes"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Return Lines" name="return_lines">
                                <field name="return_line_ids" nolabel="1">
                                    <tree string="Return Lines" create="true" edit="true" delete="true">
                                        <field name="product_id"/>
                                        <field name="returned_qty"/>
                                        <field name="refund_amount"/>
                                        <field name="size_id"/>
                                        <field name="color_id"/>
                                        <field name="condition"/>
                                        <field name="return_reason"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Return Search View -->
        <record id="view_sale_return_search" model="erp.ui.view">
            <field name="name">sale.return.search</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <search string="Sales Returns">
                    <field name="name"/>
                    <field name="sale_order_id"/>
                    <field name="partner_id"/>
                    <field name="return_date"/>
                    <field name="state"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Requested" name="requested" domain="[('state', '=', 'requested')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                    <filter string="Refunded" name="refunded" domain="[('state', '=', 'refunded')]"/>
                    <filter string="Replaced" name="replaced" domain="[('state', '=', 'replaced')]"/>
                    <filter string="Cancelled" name="cancel" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Responsible" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Return Action -->
        <record id="action_sale_return" model="erp.actions.act_window">
            <field name="name">Sales Returns</field>
            <field name="res_model">sale.return</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_return_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales return!
                </p>
                <p>
                    Sales returns are used to manage product returns from customers.
                </p>
            </field>
        </record>
        
        <!-- Sale Return Line Tree View -->
        <record id="view_sale_return_line_tree" model="erp.ui.view">
            <field name="name">sale.return.line.tree</field>
            <field name="model">sale.return.line</field>
            <field name="arch" type="xml">
                <tree string="Sales Return Lines" create="true" edit="true" delete="true">
                    <field name="product_id"/>
                    <field name="returned_qty"/>
                    <field name="refund_amount"/>
                    <field name="size_id"/>
                    <field name="color_id"/>
                    <field name="condition"/>
                    <field name="return_reason"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Return Line Form View -->
        <record id="view_sale_return_line_form" model="erp.ui.view">
            <field name="name">sale.return.line.form</field>
            <field name="model">sale.return.line</field>
            <field name="arch" type="xml">
                <form string="Sales Return Line" create="true" edit="true" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="return_id"/>
                                <field name="product_id"/>
                                <field name="returned_qty"/>
                                <field name="refund_amount"/>
                                <field name="size_id"/>
                                <field name="color_id"/>
                            </group>
                            <group>
                                <field name="condition"/>
                                <field name="return_reason"/>
                                <field name="return_notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Return Line Action -->
        <record id="action_sale_return_line" model="erp.actions.act_window">
            <field name="name">Sales Return Lines</field>
            <field name="res_model">sale.return.line</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</erp>