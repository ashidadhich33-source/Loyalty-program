<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sales Return Tree View -->
        <record id="view_sale_return_tree" model="ir.ui.view">
            <field name="name">sale.return.tree</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <tree string="Sales Returns" decoration-info="state=='draft'" decoration-success="state=='processed'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="date_return"/>
                    <field name="partner_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="return_reason"/>
                    <field name="return_type"/>
                    <field name="refund_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Sales Return Form View -->
        <record id="view_sale_return_form" model="ir.ui.view">
            <field name="name">sale.return.form</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <form string="Sales Return">
                    <header>
                        <button name="action_request_return" string="Request Return" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve_return" string="Approve" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'requested')]}"/>
                        <button name="action_receive_return" string="Receive" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                        <button name="action_process_return" string="Process" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'received')]}"/>
                        <button name="action_refund_return" string="Refund" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'processed')]}"/>
                        <button name="action_exchange_return" string="Exchange" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'processed')]}"/>
                        <button name="action_cancel_return" string="Cancel" type="object" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['refunded', 'exchanged', 'cancelled'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,received,processed,refunded,exchanged"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_order" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Order</span>
                                </div>
                            </button>
                            <button name="action_view_exchange_order" type="object" class="oe_stat_button" icon="fa-exchange" attrs="{'invisible': [('exchange_order_id', '=', False)]}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Exchange</span>
                                </div>
                            </button>
                            <button name="action_view_analytics" type="object" class="oe_stat_button" icon="fa-bar-chart">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Analytics</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="order_id"/>
                                <field name="partner_id"/>
                                <field name="partner_invoice_id"/>
                                <field name="date_return"/>
                                <field name="date_received"/>
                            </group>
                            <group>
                                <field name="child_profile_id"/>
                                <field name="age_group"/>
                                <field name="gender"/>
                                <field name="season"/>
                                <field name="return_reason"/>
                                <field name="return_type"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="refund_method"/>
                                <field name="refund_amount"/>
                                <field name="currency_id"/>
                                <field name="exchange_order_id"/>
                            </group>
                            <group>
                                <field name="return_address"/>
                                <field name="return_confirmed"/>
                                <field name="return_received"/>
                                <field name="return_processed"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Return Lines" name="return_lines">
                                <field name="return_line">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom"/>
                                        <field name="price_unit"/>
                                        <field name="discount"/>
                                        <field name="price_subtotal"/>
                                        <field name="price_tax"/>
                                        <field name="price_total"/>
                                        <field name="return_reason"/>
                                        <field name="age_group"/>
                                        <field name="gender"/>
                                        <field name="season"/>
                                        <field name="size"/>
                                        <field name="color"/>
                                        <field name="brand"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kids Analytics" name="kids_analytics">
                                <group>
                                    <group>
                                        <field name="total_kids_items"/>
                                        <field name="age_group_distribution"/>
                                    </group>
                                    <group>
                                        <field name="gender_distribution"/>
                                        <field name="season_distribution"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="return_notes" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Sales Return Search View -->
        <record id="view_sale_return_search" model="ir.ui.view">
            <field name="name">sale.return.search</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <search string="Search Sales Returns">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="child_profile_id"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="return_reason"/>
                    <field name="return_type"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Requested" name="requested" domain="[('state', '=', 'requested')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                    <filter string="Processed" name="processed" domain="[('state', '=', 'processed')]"/>
                    <filter string="Refunded" name="refunded" domain="[('state', '=', 'refunded')]"/>
                    <filter string="Exchanged" name="exchanged" domain="[('state', '=', 'exchanged')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="baby" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="toddler" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Kids (4-12)" name="kids" domain="[('age_group', 'in', ['4-6', '6-8', '8-10', '10-12'])]"/>
                    <filter string="Teen (12-16)" name="teen" domain="[('age_group', 'in', ['12-14', '14-16'])]"/>
                    <separator/>
                    <filter string="Boys" name="boys" domain="[('gender', '=', 'boys')]"/>
                    <filter string="Girls" name="girls" domain="[('gender', '=', 'girls')]"/>
                    <filter string="Unisex" name="unisex" domain="[('gender', '=', 'unisex')]"/>
                    <separator/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date_return', '>=', datetime.datetime.combine(context_today(), datetime.time(0,0,0)))]"/>
                    <filter string="This Week" name="this_week" domain="[('date_return', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" domain="[('date_return', '>=', context_today().strftime('%Y-%m-01'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Customer" name="group_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Gender" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Return Reason" name="group_return_reason" context="{'group_by': 'return_reason'}"/>
                        <filter string="Return Type" name="group_return_type" context="{'group_by': 'return_type'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date_return:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Sales Return Kanban View -->
        <record id="view_sale_return_kanban" model="ir.ui.view">
            <field name="name">sale.return.kanban</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <kanban string="Sales Returns">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="date_return"/>
                    <field name="state"/>
                    <field name="age_group"/>
                    <field name="gender"/>
                    <field name="season"/>
                    <field name="return_reason"/>
                    <field name="return_type"/>
                    <field name="refund_amount"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <field name="partner_id"/>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <field name="date_return"/>
                                            <br/>
                                            <field name="age_group"/>
                                            <field name="gender"/>
                                            <field name="season"/>
                                            <br/>
                                            <field name="return_reason"/>
                                            <field name="return_type"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="refund_amount"/>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="state" widget="label_selection"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Sales Return Action -->
        <record id="action_sale_return" model="ir.actions.act_window">
            <field name="name">Sales Returns</field>
            <field name="res_model">sale.return</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales return!
                </p>
                <p>
                    Sales returns are used to handle customer returns and exchanges.
                    They include return reasons, processing, and refund information.
                </p>
            </field>
        </record>
    </data>
</odoo>