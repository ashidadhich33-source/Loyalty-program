<?xml version="1.0" encoding="utf-8"?>
<erp>
    <data>
        <!-- Sale Team Tree View -->
        <record id="view_sale_team_tree" model="erp.ui.view">
            <field name="name">sale.team.tree</field>
            <field name="model">sale.team</field>
            <field name="arch" type="xml">
                <tree string="Sales Teams" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="leader_id"/>
                    <field name="target_amount"/>
                    <field name="achieved_amount"/>
                    <field name="performance_percentage"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Team Form View -->
        <record id="view_sale_team_form" model="erp.ui.view">
            <field name="name">sale.team.form</field>
            <field name="model">sale.team</field>
            <field name="arch" type="xml">
                <form string="Sales Team" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="leader_id"/>
                                <field name="target_amount"/>
                                <field name="achieved_amount"/>
                                <field name="performance_percentage"/>
                            </group>
                            <group>
                                <field name="target_orders"/>
                                <field name="achieved_orders"/>
                                <field name="total_kids_sales"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Team Members" name="members">
                                <field name="member_ids" nolabel="1">
                                    <tree string="Team Members" create="true" edit="true" delete="true">
                                        <field name="user_id"/>
                                        <field name="role"/>
                                        <field name="sale_amount"/>
                                        <field name="sale_orders"/>
                                        <field name="kids_sales"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Territories" name="territories">
                                <field name="territory_ids" nolabel="1">
                                    <tree string="Territories" create="true" edit="true" delete="true">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="territory_type"/>
                                        <field name="target_amount"/>
                                        <field name="achieved_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Commission Rules" name="commission_rules">
                                <field name="commission_rule_ids" nolabel="1">
                                    <tree string="Commission Rules" create="true" edit="true" delete="true">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="rule_type"/>
                                        <field name="commission_rate"/>
                                        <field name="commission_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Analytics" name="analytics">
                                <group>
                                    <group>
                                        <field name="age_group_sales"/>
                                        <field name="gender_sales"/>
                                    </group>
                                    <group>
                                        <field name="season_sales"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Team Search View -->
        <record id="view_sale_team_search" model="erp.ui.view">
            <field name="name">sale.team.search</field>
            <field name="model">sale.team</field>
            <field name="arch" type="xml">
                <search string="Sales Teams">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="leader_id"/>
                    <field name="company_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Leader" name="group_leader" context="{'group_by': 'leader_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Team Action -->
        <record id="action_sale_team" model="erp.actions.act_window">
            <field name="name">Sales Teams</field>
            <field name="res_model">sale.team</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_team_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales team!
                </p>
                <p>
                    Sales teams help organize and manage your sales force.
                </p>
            </field>
        </record>
        
        <!-- Sale Team Member Tree View -->
        <record id="view_sale_team_member_tree" model="erp.ui.view">
            <field name="name">sale.team.member.tree</field>
            <field name="model">sale.team.member</field>
            <field name="arch" type="xml">
                <tree string="Sales Team Members" create="true" edit="true" delete="true">
                    <field name="team_id"/>
                    <field name="user_id"/>
                    <field name="role"/>
                    <field name="sale_amount"/>
                    <field name="sale_orders"/>
                    <field name="kids_sales"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Team Member Form View -->
        <record id="view_sale_team_member_form" model="erp.ui.view">
            <field name="name">sale.team.member.form</field>
            <field name="model">sale.team.member</field>
            <field name="arch" type="xml">
                <form string="Sales Team Member" create="true" edit="true" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="team_id"/>
                                <field name="user_id"/>
                                <field name="role"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="sale_amount"/>
                                <field name="sale_orders"/>
                                <field name="kids_sales"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Analytics" name="analytics">
                                <group>
                                    <group>
                                        <field name="age_group_sales"/>
                                        <field name="gender_sales"/>
                                    </group>
                                    <group>
                                        <field name="season_sales"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Team Member Action -->
        <record id="action_sale_team_member" model="erp.actions.act_window">
            <field name="name">Sales Team Members</field>
            <field name="res_model">sale.team.member</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</erp>