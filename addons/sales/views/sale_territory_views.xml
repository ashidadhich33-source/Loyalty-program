<?xml version="1.0" encoding="utf-8"?>
<erp>
    <data>
        <!-- Sale Territory Tree View -->
        <record id="view_sale_territory_tree" model="ir.ui.view">
            <field name="name">sale.territory.tree</field>
            <field name="model">sale.territory</field>
            <field name="arch" type="xml">
                <tree string="Sales Territories" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="territory_type"/>
                    <field name="team_id"/>
                    <field name="manager_id"/>
                    <field name="target_amount"/>
                    <field name="achieved_amount"/>
                    <field name="performance_percentage"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Sale Territory Form View -->
        <record id="view_sale_territory_form" model="ir.ui.view">
            <field name="name">sale.territory.form</field>
            <field name="model">sale.territory</field>
            <field name="arch" type="xml">
                <form string="Sales Territory" create="true" edit="true" delete="true">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="territory_type"/>
                                <field name="team_id"/>
                                <field name="manager_id"/>
                                <field name="target_amount"/>
                                <field name="achieved_amount"/>
                            </group>
                            <group>
                                <field name="target_orders"/>
                                <field name="achieved_orders"/>
                                <field name="performance_percentage"/>
                                <field name="coverage_percentage"/>
                                <field name="status"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="country_id"/>
                                <field name="state_id"/>
                                <field name="city"/>
                                <field name="zip_code"/>
                            </group>
                            <group>
                                <field name="parent_id"/>
                                <field name="total_kids_sales"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Child Territories" name="child_territories">
                                <field name="child_ids" nolabel="1">
                                    <tree string="Child Territories" create="true" edit="true" delete="true">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="territory_type"/>
                                        <field name="target_amount"/>
                                        <field name="achieved_amount"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Analytics" name="analytics">
                                <group>
                                    <group>
                                        <field name="age_group_sales"/>
                                        <field name="gender_sales"/>
                                    </group>
                                    <group>
                                        <field name="season_sales"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Sale Territory Search View -->
        <record id="view_sale_territory_search" model="ir.ui.view">
            <field name="name">sale.territory.search</field>
            <field name="model">sale.territory</field>
            <field name="arch" type="xml">
                <search string="Sales Territories">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="territory_type"/>
                    <field name="team_id"/>
                    <field name="manager_id"/>
                    <field name="company_id"/>
                    <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>
                    <filter string="Suspended" name="suspended" domain="[('status', '=', 'suspended')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Territory Type" name="group_type" context="{'group_by': 'territory_type'}"/>
                        <filter string="Team" name="group_team" context="{'group_by': 'team_id'}"/>
                        <filter string="Manager" name="group_manager" context="{'group_by': 'manager_id'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Sale Territory Action -->
        <record id="action_sale_territory" model="ir.actions.act_window">
            <field name="name">Sales Territories</field>
            <field name="res_model">sale.territory</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_sale_territory_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first sales territory!
                </p>
                <p>
                    Sales territories help organize and manage your sales coverage.
                </p>
            </field>
        </record>
    </data>
</erp>