<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Stock Alert Types -->
        <record id="stock_alert_type_low_stock" model="stock.alert.type">
            <field name="name">Low Stock</field>
            <field name="code">low_stock</field>
            <field name="description">Alert when stock falls below minimum threshold</field>
            <field name="priority">medium</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_alert_type_out_of_stock" model="stock.alert.type">
            <field name="name">Out of Stock</field>
            <field name="code">out_of_stock</field>
            <field name="description">Alert when stock reaches zero</field>
            <field name="priority">critical</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_alert_type_overstock" model="stock.alert.type">
            <field name="name">Overstock</field>
            <field name="code">overstock</field>
            <field name="description">Alert when stock exceeds maximum threshold</field>
            <field name="priority">low</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_alert_type_expiry_warning" model="stock.alert.type">
            <field name="name">Expiry Warning</field>
            <field name="code">expiry_warning</field>
            <field name="description">Alert for products approaching expiry</field>
            <field name="priority">high</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_alert_type_seasonal" model="stock.alert.type">
            <field name="name">Seasonal Alert</field>
            <field name="code">seasonal_alert</field>
            <field name="description">Alert for seasonal stock management</field>
            <field name="priority">medium</field>
            <field name="active">True</field>
        </record>
        
        <!-- Stock Adjustment Types -->
        <record id="stock_adjustment_type_physical_count" model="stock.adjustment.type">
            <field name="name">Physical Count</field>
            <field name="code">physical_count</field>
            <field name="description">Adjustment due to physical inventory count</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_cycle_count" model="stock.adjustment.type">
            <field name="name">Cycle Count</field>
            <field name="code">cycle_count</field>
            <field name="description">Adjustment due to cycle counting</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_damage" model="stock.adjustment.type">
            <field name="name">Damage</field>
            <field name="code">damage</field>
            <field name="description">Adjustment due to damaged goods</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_theft" model="stock.adjustment.type">
            <field name="name">Theft</field>
            <field name="code">theft</field>
            <field name="description">Adjustment due to theft or loss</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_expiry" model="stock.adjustment.type">
            <field name="name">Expiry</field>
            <field name="code">expiry</field>
            <field name="description">Adjustment due to expired products</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_seasonal" model="stock.adjustment.type">
            <field name="name">Seasonal Adjustment</field>
            <field name="code">seasonal</field>
            <field name="description">Adjustment for seasonal stock management</field>
            <field name="require_approval">False</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_size_adjustment" model="stock.adjustment.type">
            <field name="name">Size Adjustment</field>
            <field name="code">size_adjustment</field>
            <field name="description">Adjustment for size-specific inventory</field>
            <field name="require_approval">False</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_brand_adjustment" model="stock.adjustment.type">
            <field name="name">Brand Adjustment</field>
            <field name="code">brand_adjustment</field>
            <field name="description">Adjustment for brand-specific inventory</field>
            <field name="require_approval">False</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_color_adjustment" model="stock.adjustment.type">
            <field name="name">Color Adjustment</field>
            <field name="code">color_adjustment</field>
            <field name="description">Adjustment for color-specific inventory</field>
            <field name="require_approval">False</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_quality_issue" model="stock.adjustment.type">
            <field name="name">Quality Issue</field>
            <field name="code">quality_issue</field>
            <field name="description">Adjustment due to quality issues</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_return" model="stock.adjustment.type">
            <field name="name">Return</field>
            <field name="code">return</field>
            <field name="description">Adjustment due to product returns</field>
            <field name="require_approval">False</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_donation" model="stock.adjustment.type">
            <field name="name">Donation</field>
            <field name="code">donation</field>
            <field name="description">Adjustment due to product donations</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_disposal" model="stock.adjustment.type">
            <field name="name">Disposal</field>
            <field name="code">disposal</field>
            <field name="description">Adjustment due to product disposal</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_adjustment_type_other" model="stock.adjustment.type">
            <field name="name">Other</field>
            <field name="code">other</field>
            <field name="description">Other types of adjustments</field>
            <field name="require_approval">True</field>
            <field name="active">True</field>
        </record>
        
        <!-- Stock Analysis Types -->
        <record id="stock_analysis_type_turnover" model="stock.analysis.type">
            <field name="name">Stock Turnover Analysis</field>
            <field name="code">turnover</field>
            <field name="description">Analysis of stock turnover rates</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_aging" model="stock.analysis.type">
            <field name="name">Stock Aging Analysis</field>
            <field name="code">aging</field>
            <field name="description">Analysis of stock aging patterns</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_seasonal" model="stock.analysis.type">
            <field name="name">Seasonal Stock Analysis</field>
            <field name="code">seasonal</field>
            <field name="description">Analysis of seasonal stock patterns</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_size" model="stock.analysis.type">
            <field name="name">Size-wise Stock Analysis</field>
            <field name="code">size_analysis</field>
            <field name="description">Analysis of stock by size</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_brand" model="stock.analysis.type">
            <field name="name">Brand-wise Stock Analysis</field>
            <field name="code">brand_analysis</field>
            <field name="description">Analysis of stock by brand</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_color" model="stock.analysis.type">
            <field name="name">Color-wise Stock Analysis</field>
            <field name="code">color_analysis</field>
            <field name="description">Analysis of stock by color</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_age_group" model="stock.analysis.type">
            <field name="name">Age Group Stock Analysis</field>
            <field name="code">age_group_analysis</field>
            <field name="description">Analysis of stock by age group</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_abc" model="stock.analysis.type">
            <field name="name">ABC Analysis</field>
            <field name="code">abc_analysis</field>
            <field name="description">ABC analysis of stock value</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_xyz" model="stock.analysis.type">
            <field name="name">XYZ Analysis</field>
            <field name="code">xyz_analysis</field>
            <field name="description">XYZ analysis of demand variability</field>
            <field name="active">True</field>
        </record>
        
        <record id="stock_analysis_type_comprehensive" model="stock.analysis.type">
            <field name="name">Comprehensive Analysis</field>
            <field name="code">comprehensive</field>
            <field name="description">Comprehensive stock analysis</field>
            <field name="active">True</field>
        </record>
        
        <!-- Sequence for Stock Adjustments -->
        <record id="seq_stock_adjustment" model="ir.sequence">
            <field name="name">Stock Adjustment</field>
            <field name="code">stock.adjustment</field>
            <field name="prefix">SAJ</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Cron Jobs -->
        <record id="ir_cron_stock_alert_generation" model="ir.cron">
            <field name="name">Generate Stock Alerts</field>
            <field name="model_id" ref="model_stock_alert"/>
            <field name="state">code</field>
            <field name="code">model.generate_stock_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
        <record id="ir_cron_reorder_point_check" model="ir.cron">
            <field name="name">Check Reorder Points</field>
            <field name="model_id" ref="model_stock_reorder_rule"/>
            <field name="state">code</field>
            <field name="code">model.check_reorder_points()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>
        
    </data>
</odoo>