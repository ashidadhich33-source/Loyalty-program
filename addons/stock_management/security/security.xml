<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Stock Management Security Groups -->
        <record id="group_stock_management_user" model="res.groups">
            <field name="name">Stock Management User</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="comment">Users can view and manage stock alerts, reorder rules, and adjustments.</field>
        </record>
        
        <record id="group_stock_management_manager" model="res.groups">
            <field name="name">Stock Management Manager</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_management_user'))]"/>
            <field name="comment">Managers can approve stock adjustments and configure reorder rules.</field>
        </record>
        
        <!-- Stock Alert Security Groups -->
        <record id="group_stock_alert_user" model="res.groups">
            <field name="name">Stock Alert User</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_management_user'))]"/>
            <field name="comment">Users can view and manage stock alerts.</field>
        </record>
        
        <record id="group_stock_alert_manager" model="res.groups">
            <field name="name">Stock Alert Manager</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_alert_user'))]"/>
            <field name="comment">Managers can configure alert rules and notifications.</field>
        </record>
        
        <!-- Reorder Rule Security Groups -->
        <record id="group_reorder_rule_user" model="res.groups">
            <field name="name">Reorder Rule User</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_management_user'))]"/>
            <field name="comment">Users can view and manage reorder rules.</field>
        </record>
        
        <record id="group_reorder_rule_manager" model="res.groups">
            <field name="name">Reorder Rule Manager</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_reorder_rule_user'))]"/>
            <field name="comment">Managers can configure reorder rules and auto-create purchase orders.</field>
        </record>
        
        <!-- Stock Adjustment Security Groups -->
        <record id="group_stock_adjustment_user" model="res.groups">
            <field name="name">Stock Adjustment User</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_management_user'))]"/>
            <field name="comment">Users can create and manage stock adjustments.</field>
        </record>
        
        <record id="group_stock_adjustment_manager" model="res.groups">
            <field name="name">Stock Adjustment Manager</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_adjustment_user'))]"/>
            <field name="comment">Managers can approve stock adjustments.</field>
        </record>
        
        <!-- Stock Analysis Security Groups -->
        <record id="group_stock_analysis_user" model="res.groups">
            <field name="name">Stock Analysis User</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_management_user'))]"/>
            <field name="comment">Users can view stock analysis reports.</field>
        </record>
        
        <record id="group_stock_analysis_manager" model="res.groups">
            <field name="name">Stock Analysis Manager</field>
            <field name="category_id" ref="base.module_category_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_stock_analysis_user'))]"/>
            <field name="comment">Managers can create and run stock analysis.</field>
        </record>
        
    </data>
</odoo>