<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Stock Adjustment Tree View -->
        <record id="view_stock_adjustment_tree" model="ir.ui.view">
            <field name="name">stock.adjustment.tree</field>
            <field name="model">stock.adjustment</field>
            <field name="arch" type="xml">
                <tree string="Stock Adjustments" decoration-danger="state=='draft'" decoration-warning="state=='confirmed'" decoration-success="state=='done'" decoration-info="state=='approved'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="warehouse_id"/>
                    <field name="location_id"/>
                    <field name="adjustment_type"/>
                    <field name="state"/>
                    <field name="total_quantity_adjusted"/>
                    <field name="total_value_adjusted"/>
                    <field name="impact_on_inventory"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="created_by"/>
                    <field name="approver_id"/>
                </tree>
            </field>
        </record>
        
        <!-- Stock Adjustment Form View -->
        <record id="view_stock_adjustment_form" model="ir.ui.view">
            <field name="name">stock.adjustment.form</field>
            <field name="model">stock.adjustment</field>
            <field name="arch" type="xml">
                <form string="Stock Adjustment">
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-success" attrs="{'invisible': [('state', '!=', 'confirmed')]}"/>
                        <button name="action_done" string="Done" type="object" class="btn-primary" attrs="{'invisible': [('state', 'not in', ['confirmed', 'approved'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" attrs="{'invisible': [('state', 'not in', ['draft', 'confirmed'])]}"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-warning" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                        <button name="action_add_product_line" string="Add Product Line" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,approved,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_add_product_line" type="object" class="oe_stat_button" icon="fa-plus">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Add Line</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="warehouse_id"/>
                                <field name="location_id"/>
                                <field name="adjustment_type"/>
                                <field name="reason"/>
                            </group>
                            <group>
                                <field name="total_quantity_adjusted"/>
                                <field name="total_value_adjusted"/>
                                <field name="impact_on_inventory"/>
                                <field name="require_approval"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Details">
                            <group>
                                <field name="age_group"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Approval Details">
                            <group>
                                <field name="approver_id"/>
                                <field name="approval_date"/>
                            </group>
                            <group>
                                <field name="approval_notes"/>
                            </group>
                        </group>
                        <group string="Timestamps">
                            <group>
                                <field name="create_date"/>
                                <field name="confirm_date"/>
                            </group>
                            <group>
                                <field name="done_date"/>
                            </group>
                        </group>
                        <group string="Users">
                            <group>
                                <field name="created_by"/>
                                <field name="confirmed_by"/>
                            </group>
                            <group>
                                <field name="done_by"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Adjustment Lines">
                                <field name="adjustment_line_ids" readonly="1">
                                    <tree string="Adjustment Lines" editable="bottom">
                                        <field name="product_id"/>
                                        <field name="theoretical_qty"/>
                                        <field name="counted_qty"/>
                                        <field name="quantity_adjusted"/>
                                        <field name="unit_cost"/>
                                        <field name="value_adjusted"/>
                                        <field name="age_group"/>
                                        <field name="size"/>
                                        <field name="brand"/>
                                        <field name="color"/>
                                        <field name="lot_id"/>
                                        <field name="notes"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Stock Adjustment Search View -->
        <record id="view_stock_adjustment_search" model="ir.ui.view">
            <field name="name">stock.adjustment.search</field>
            <field name="model">stock.adjustment</field>
            <field name="arch" type="xml">
                <search string="Search Stock Adjustments">
                    <field name="name"/>
                    <field name="warehouse_id"/>
                    <field name="location_id"/>
                    <field name="adjustment_type"/>
                    <field name="reason"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="created_by"/>
                    <field name="approver_id"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <filter string="Physical Count" name="physical_count" domain="[('adjustment_type', '=', 'physical_count')]"/>
                    <filter string="Cycle Count" name="cycle_count" domain="[('adjustment_type', '=', 'cycle_count')]"/>
                    <filter string="Damage" name="damage" domain="[('adjustment_type', '=', 'damage')]"/>
                    <filter string="Theft" name="theft" domain="[('adjustment_type', '=', 'theft')]"/>
                    <filter string="Expiry" name="expiry" domain="[('adjustment_type', '=', 'expiry')]"/>
                    <filter string="Seasonal" name="seasonal" domain="[('adjustment_type', '=', 'seasonal')]"/>
                    <filter string="Baby (0-2 years)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4 years)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6 years)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Adjustment Type" name="group_adjustment_type" context="{'group_by': 'adjustment_type'}"/>
                        <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Created By" name="group_created_by" context="{'group_by': 'created_by'}"/>
                        <filter string="Approver" name="group_approver" context="{'group_by': 'approver_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Stock Adjustment Actions -->
        <record id="action_stock_adjustment" model="ir.actions.act_window">
            <field name="name">Stock Adjustments</field>
            <field name="res_model">stock.adjustment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first stock adjustment!
                </p>
                <p>
                    Stock adjustments help you correct inventory discrepancies and maintain accurate stock levels.
                </p>
            </field>
        </record>
        
        <record id="action_stock_adjustment_draft" model="ir.actions.act_window">
            <field name="name">Draft Stock Adjustments</field>
            <field name="res_model">stock.adjustment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'draft')]</field>
            <field name="context">{}</field>
        </record>
        
        <record id="action_stock_adjustment_pending_approval" model="ir.actions.act_window">
            <field name="name">Pending Approval</field>
            <field name="res_model">stock.adjustment</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'confirmed'), ('require_approval', '=', True)]</field>
            <field name="context">{}</field>
        </record>
        
        <!-- Stock Adjustment Line Form View -->
        <record id="view_stock_adjustment_line_form" model="ir.ui.view">
            <field name="name">stock.adjustment.line.form</field>
            <field name="model">stock.adjustment.line</field>
            <field name="arch" type="xml">
                <form string="Stock Adjustment Line">
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="theoretical_qty"/>
                                <field name="counted_qty"/>
                                <field name="quantity_adjusted"/>
                                <field name="unit_cost"/>
                                <field name="value_adjusted"/>
                            </group>
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="brand"/>
                                <field name="color"/>
                                <field name="lot_id"/>
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Stock Adjustment Line Tree View -->
        <record id="view_stock_adjustment_line_tree" model="ir.ui.view">
            <field name="name">stock.adjustment.line.tree</field>
            <field name="model">stock.adjustment.line</field>
            <field name="arch" type="xml">
                <tree string="Stock Adjustment Lines">
                    <field name="product_id"/>
                    <field name="theoretical_qty"/>
                    <field name="counted_qty"/>
                    <field name="quantity_adjusted"/>
                    <field name="unit_cost"/>
                    <field name="value_adjusted"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="lot_id"/>
                    <field name="notes"/>
                </tree>
            </field>
        </record>
        
        <!-- Stock Adjustment Kanban View -->
        <record id="view_stock_adjustment_kanban" model="ir.ui.view">
            <field name="name">stock.adjustment.kanban</field>
            <field name="model">stock.adjustment</field>
            <field name="arch" type="xml">
                <kanban string="Stock Adjustments" class="o_kanban_small_column">
                    <field name="state"/>
                    <field name="adjustment_type"/>
                    <field name="warehouse_id"/>
                    <field name="total_quantity_adjusted"/>
                    <field name="total_value_adjusted"/>
                    <field name="impact_on_inventory"/>
                    <field name="age_group"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="created_by"/>
                    <field name="approver_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_priority">
                                            <field name="state" widget="label_selection"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_details">
                                            <div>
                                                <strong>Type:</strong> <field name="adjustment_type"/>
                                            </div>
                                            <div>
                                                <strong>Warehouse:</strong> <field name="warehouse_id"/>
                                            </div>
                                            <div>
                                                <strong>Qty Adjusted:</strong> <field name="total_quantity_adjusted"/>
                                            </div>
                                            <div>
                                                <strong>Value Adjusted:</strong> <field name="total_value_adjusted"/>
                                            </div>
                                            <div>
                                                <strong>Impact:</strong> <field name="impact_on_inventory"/>
                                            </div>
                                            <div>
                                                <strong>Age Group:</strong> <field name="age_group"/>
                                            </div>
                                            <div>
                                                <strong>Season:</strong> <field name="season"/>
                                            </div>
                                            <div>
                                                <strong>Brand:</strong> <field name="brand"/>
                                            </div>
                                            <div>
                                                <strong>Color:</strong> <field name="color"/>
                                            </div>
                                            <div>
                                                <strong>Created By:</strong> <field name="created_by"/>
                                            </div>
                                            <div>
                                                <strong>Approver:</strong> <field name="approver_id"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    </data>
</odoo>