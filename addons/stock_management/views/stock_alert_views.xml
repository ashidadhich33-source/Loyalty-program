<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Stock Alert Tree View -->
        <record id="view_stock_alert_tree" model="ir.ui.view">
            <field name="name">stock.alert.tree</field>
            <field name="model">stock.alert</field>
            <field name="arch" type="xml">
                <tree string="Stock Alerts" decoration-danger="priority=='critical'" decoration-warning="priority=='high'" decoration-info="priority=='medium'" decoration-muted="priority=='low'">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="alert_type"/>
                    <field name="priority"/>
                    <field name="status"/>
                    <field name="current_stock"/>
                    <field name="minimum_stock"/>
                    <field name="stock_variance"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="season"/>
                    <field name="days_since_created"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        
        <!-- Stock Alert Form View -->
        <record id="view_stock_alert_form" model="ir.ui.view">
            <field name="name">stock.alert.form</field>
            <field name="model">stock.alert</field>
            <field name="arch" type="xml">
                <form string="Stock Alert">
                    <header>
                        <button name="action_acknowledge" string="Acknowledge" type="object" class="btn-primary" attrs="{'invisible': [('status', '!=', 'active')]}"/>
                        <button name="action_resolve" string="Resolve" type="object" class="btn-success" attrs="{'invisible': [('status', 'not in', ['active', 'acknowledged'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-secondary" attrs="{'invisible': [('status', 'not in', ['active', 'acknowledged'])]}"/>
                        <button name="action_send_notification" string="Send Notification" type="object" class="btn-info" attrs="{'invisible': [('status', '!=', 'active')]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="active,acknowledged,resolved"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_send_notification" type="object" class="oe_stat_button" icon="fa-envelope">
                                <field name="email_sent" widget="boolean_button" options='{"terminology": "email"}'/>
                            </button>
                            <button name="action_send_notification" type="object" class="oe_stat_button" icon="fa-mobile">
                                <field name="sms_sent" widget="boolean_button" options='{"terminology": "sms"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="warehouse_id"/>
                                <field name="location_id"/>
                                <field name="alert_type"/>
                                <field name="priority"/>
                            </group>
                            <group>
                                <field name="current_stock"/>
                                <field name="minimum_stock"/>
                                <field name="maximum_stock"/>
                                <field name="stock_variance"/>
                                <field name="recommended_action"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Details">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                        <group string="Alert Details">
                            <field name="alert_message" nolabel="1"/>
                            <field name="action_notes" nolabel="1"/>
                        </group>
                        <group string="Notifications">
                            <field name="notify_users" widget="many2many_tags"/>
                            <field name="email_sent"/>
                            <field name="sms_sent"/>
                        </group>
                        <group string="Timestamps">
                            <group>
                                <field name="create_date"/>
                                <field name="acknowledge_date"/>
                            </group>
                            <group>
                                <field name="resolve_date"/>
                                <field name="days_since_created"/>
                            </group>
                        </group>
                        <group string="Users">
                            <group>
                                <field name="acknowledged_by"/>
                                <field name="resolved_by"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Stock Alert Search View -->
        <record id="view_stock_alert_search" model="ir.ui.view">
            <field name="name">stock.alert.search</field>
            <field name="model">stock.alert</field>
            <field name="arch" type="xml">
                <search string="Search Stock Alerts">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="alert_type"/>
                    <field name="priority"/>
                    <field name="status"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="season"/>
                    <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                    <filter string="Acknowledged" name="acknowledged" domain="[('status', '=', 'acknowledged')]"/>
                    <filter string="Resolved" name="resolved" domain="[('status', '=', 'resolved')]"/>
                    <filter string="Critical Priority" name="critical" domain="[('priority', '=', 'critical')]"/>
                    <filter string="High Priority" name="high" domain="[('priority', '=', 'high')]"/>
                    <filter string="Low Stock" name="low_stock" domain="[('alert_type', '=', 'low_stock')]"/>
                    <filter string="Out of Stock" name="out_of_stock" domain="[('alert_type', '=', 'out_of_stock')]"/>
                    <filter string="Overstock" name="overstock" domain="[('alert_type', '=', 'overstock')]"/>
                    <filter string="Baby (0-2 years)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4 years)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6 years)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Alert Type" name="group_alert_type" context="{'group_by': 'alert_type'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Created Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Stock Alert Actions -->
        <record id="action_stock_alert" model="ir.actions.act_window">
            <field name="name">Stock Alerts</field>
            <field name="res_model">stock.alert</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first stock alert!
                </p>
                <p>
                    Stock alerts help you monitor inventory levels and take timely action.
                </p>
            </field>
        </record>
        
        <record id="action_stock_alert_active" model="ir.actions.act_window">
            <field name="name">Active Stock Alerts</field>
            <field name="res_model">stock.alert</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('status', '=', 'active')]</field>
            <field name="context">{}</field>
        </record>
        
        <record id="action_stock_alert_critical" model="ir.actions.act_window">
            <field name="name">Critical Stock Alerts</field>
            <field name="res_model">stock.alert</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('priority', '=', 'critical')]</field>
            <field name="context">{}</field>
        </record>
        
        <!-- Stock Alert Kanban View -->
        <record id="view_stock_alert_kanban" model="ir.ui.view">
            <field name="name">stock.alert.kanban</field>
            <field name="model">stock.alert</field>
            <field name="arch" type="xml">
                <kanban string="Stock Alerts" class="o_kanban_small_column">
                    <field name="priority"/>
                    <field name="status"/>
                    <field name="alert_type"/>
                    <field name="product_id"/>
                    <field name="warehouse_id"/>
                    <field name="current_stock"/>
                    <field name="minimum_stock"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <field name="season"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_priority">
                                            <field name="priority" widget="priority"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_details">
                                            <div>
                                                <strong>Product:</strong> <field name="product_id"/>
                                            </div>
                                            <div>
                                                <strong>Warehouse:</strong> <field name="warehouse_id"/>
                                            </div>
                                            <div>
                                                <strong>Type:</strong> <field name="alert_type"/>
                                            </div>
                                            <div>
                                                <strong>Stock:</strong> <field name="current_stock"/> / <field name="minimum_stock"/>
                                            </div>
                                            <div>
                                                <strong>Age Group:</strong> <field name="age_group"/>
                                            </div>
                                            <div>
                                                <strong>Size:</strong> <field name="size"/>
                                            </div>
                                            <div>
                                                <strong>Brand:</strong> <field name="brand"/>
                                            </div>
                                            <div>
                                                <strong>Color:</strong> <field name="color"/>
                                            </div>
                                            <div>
                                                <strong>Season:</strong> <field name="season"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
    </data>
</odoo>