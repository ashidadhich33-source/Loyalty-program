<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Stock Analysis Tree View -->
        <record id="view_stock_analysis_tree" model="ocean.ui.view">
            <field name="name">stock.analysis.tree</field>
            <field name="model">stock.analysis</field>
            <field name="arch" type="xml">
                <tree string="Stock Analysis" create="true" edit="true" delete="true">
                    <field name="name"/>
                    <field name="analysis_type"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="location_id"/>
                    <field name="warehouse_id"/>
                    <field name="total_products"/>
                    <field name="total_value"/>
                    <field name="total_quantity"/>
                    <field name="generated_date"/>
                    <field name="generated_by"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Stock Analysis Form View -->
        <record id="view_stock_analysis_form" model="ocean.ui.view">
            <field name="name">stock.analysis.form</field>
            <field name="model">stock.analysis</field>
            <field name="arch" type="xml">
                <form string="Stock Analysis" create="true" edit="true" delete="true">
                    <header>
                        <button name="action_generate" string="Generate Analysis" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger" attrs="{'invisible': [('state', '=', 'generated')]}"/>
                        <button name="action_view_lines" string="View Analysis Lines" type="object" class="btn-info" attrs="{'invisible': [('state', '!=', 'generated')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,generated,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Analysis Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="analysis_type"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="location_id"/>
                                <field name="warehouse_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="include_zero_stock"/>
                                <field name="include_inactive_products"/>
                                <field name="total_products"/>
                                <field name="total_value"/>
                                <field name="total_quantity"/>
                                <field name="generated_date"/>
                                <field name="generated_by"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Stock Analysis Search View -->
        <record id="view_stock_analysis_search" model="ocean.ui.view">
            <field name="name">stock.analysis.search</field>
            <field name="model">stock.analysis</field>
            <field name="arch" type="xml">
                <search string="Search Stock Analysis">
                    <field name="name"/>
                    <field name="analysis_type"/>
                    <field name="state"/>
                    <field name="location_id"/>
                    <field name="warehouse_id"/>
                    <field name="generated_by"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Generated" name="generated" domain="[('state', '=', 'generated')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Stock Turnover" name="turnover" domain="[('analysis_type', '=', 'turnover')]"/>
                    <filter string="Stock Aging" name="aging" domain="[('analysis_type', '=', 'aging')]"/>
                    <filter string="Seasonal Analysis" name="seasonal" domain="[('analysis_type', '=', 'seasonal')]"/>
                    <filter string="Size-wise Analysis" name="size_wise" domain="[('analysis_type', '=', 'size_wise')]"/>
                    <filter string="Brand-wise Analysis" name="brand_wise" domain="[('analysis_type', '=', 'brand_wise')]"/>
                    <filter string="Color-wise Analysis" name="color_wise" domain="[('analysis_type', '=', 'color_wise')]"/>
                    <filter string="Age Group Analysis" name="age_group" domain="[('analysis_type', '=', 'age_group')]"/>
                    <filter string="ABC Analysis" name="abc" domain="[('analysis_type', '=', 'abc')]"/>
                    <filter string="XYZ Analysis" name="xyz" domain="[('analysis_type', '=', 'xyz')]"/>
                    <filter string="Profitability Analysis" name="profitability" domain="[('analysis_type', '=', 'profitability')]"/>
                    <filter string="Slow Moving Items" name="slow_moving" domain="[('analysis_type', '=', 'slow_moving')]"/>
                    <filter string="Fast Moving Items" name="fast_moving" domain="[('analysis_type', '=', 'fast_moving')]"/>
                    <filter string="Dead Stock Analysis" name="dead_stock" domain="[('analysis_type', '=', 'dead_stock')]"/>
                    <separator/>
                    <filter string="Baby (0-2)" name="age_0_2" domain="[('age_group', '=', '0-2')]"/>
                    <filter string="Toddler (2-4)" name="age_2_4" domain="[('age_group', '=', '2-4')]"/>
                    <filter string="Pre-school (4-6)" name="age_4_6" domain="[('age_group', '=', '4-6')]"/>
                    <filter string="Summer" name="summer" domain="[('season', '=', 'summer')]"/>
                    <filter string="Winter" name="winter" domain="[('season', '=', 'winter')]"/>
                    <filter string="Monsoon" name="monsoon" domain="[('season', '=', 'monsoon')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Analysis Type" name="group_analysis_type" context="{'group_by': 'analysis_type'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                        <filter string="Warehouse" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                        <filter string="Generated By" name="group_generated_by" context="{'group_by': 'generated_by'}"/>
                        <filter string="Age Group" name="group_age_group" context="{'group_by': 'age_group'}"/>
                        <filter string="Size" name="group_size" context="{'group_by': 'size'}"/>
                        <filter string="Season" name="group_season" context="{'group_by': 'season'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Color" name="group_color" context="{'group_by': 'color'}"/>
                        <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Stock Analysis Action -->
        <record id="action_stock_analysis" model="ocean.actions.act_window">
            <field name="name">Stock Analysis</field>
            <field name="res_model">stock.analysis</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_stock_analysis_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first stock analysis!
                </p>
                <p>
                    Stock analysis helps you understand your inventory performance.
                </p>
            </field>
        </record>
        
        <!-- Stock Analysis Line Tree View -->
        <record id="view_stock_analysis_line_tree" model="ocean.ui.view">
            <field name="name">stock.analysis.line.tree</field>
            <field name="model">stock.analysis.line</field>
            <field name="arch" type="xml">
                <tree string="Analysis Lines" create="true" edit="true" delete="true">
                    <field name="analysis_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="value"/>
                    <field name="turnover_ratio"/>
                    <field name="days_in_stock"/>
                    <field name="abc_classification"/>
                    <field name="xyz_classification"/>
                    <field name="sales_quantity"/>
                    <field name="sales_value"/>
                    <field name="profit_margin"/>
                    <field name="age_group"/>
                    <field name="size"/>
                    <field name="season"/>
                    <field name="brand"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>
        
        <!-- Stock Analysis Line Form View -->
        <record id="view_stock_analysis_line_form" model="ocean.ui.view">
            <field name="name">stock.analysis.line.form</field>
            <field name="model">stock.analysis.line</field>
            <field name="arch" type="xml">
                <form string="Analysis Line" create="true" edit="true" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="analysis_id"/>
                                <field name="sequence"/>
                                <field name="product_id"/>
                                <field name="product_template_id"/>
                                <field name="quantity"/>
                                <field name="value"/>
                                <field name="turnover_ratio"/>
                                <field name="days_in_stock"/>
                            </group>
                            <group>
                                <field name="abc_classification"/>
                                <field name="xyz_classification"/>
                                <field name="sales_quantity"/>
                                <field name="sales_value"/>
                                <field name="profit_margin"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group string="Kids Clothing Specific">
                            <group>
                                <field name="age_group"/>
                                <field name="size"/>
                                <field name="season"/>
                            </group>
                            <group>
                                <field name="brand"/>
                                <field name="color"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Stock Analysis Line Action -->
        <record id="action_stock_analysis_line" model="ocean.actions.act_window">
            <field name="name">Analysis Lines</field>
            <field name="res_model">stock.analysis.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    View analysis lines!
                </p>
                <p>
                    Analysis lines show the details of each product analysis.
                </p>
            </field>
        </record>
        
    </data>
</ocean>