<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Default User Groups -->
        <record id="group_kids_clothing_user" model="res.groups">
            <field name="name">Kids Clothing User</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="description">Basic user access to Kids Clothing ERP</field>
            <field name="comment">Users with basic access to the system</field>
        </record>
        
        <record id="group_kids_clothing_manager" model="res.groups">
            <field name="name">Kids Clothing Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="description">Manager access to Kids Clothing ERP</field>
            <field name="comment">Users with manager access to the system</field>
        </record>
        
        <record id="group_kids_clothing_admin" model="res.groups">
            <field name="name">Kids Clothing Administrator</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="description">Administrator access to Kids Clothing ERP</field>
            <field name="comment">Users with administrator access to the system</field>
        </record>
        
        <!-- Default Permissions -->
        <record id="permission_user_read" model="user.permissions">
            <field name="name">User Read</field>
            <field name="code">user_read</field>
            <field name="description">Read access to user records</field>
            <field name="model_name">res.users</field>
            <field name="access_level">read</field>
            <field name="scope">global</field>
            <field name="category">core</field>
            <field name="is_system_permission">True</field>
        </record>
        
        <record id="permission_user_write" model="user.permissions">
            <field name="name">User Write</field>
            <field name="code">user_write</field>
            <field name="description">Write access to user records</field>
            <field name="model_name">res.users</field>
            <field name="access_level">write</field>
            <field name="scope">global</field>
            <field name="category">core</field>
            <field name="is_system_permission">True</field>
        </record>
        
        <record id="permission_user_create" model="user.permissions">
            <field name="name">User Create</field>
            <field name="code">user_create</field>
            <field name="description">Create access to user records</field>
            <field name="model_name">res.users</field>
            <field name="access_level">create</field>
            <field name="scope">global</field>
            <field name="category">core</field>
            <field name="is_system_permission">True</field>
        </record>
        
        <record id="permission_user_delete" model="user.permissions">
            <field name="name">User Delete</field>
            <field name="code">user_delete</field>
            <field name="description">Delete access to user records</field>
            <field name="model_name">res.users</field>
            <field name="access_level">delete</field>
            <field name="scope">global</field>
            <field name="category">core</field>
            <field name="is_system_permission">True</field>
        </record>
        
        <!-- Default Access Rights -->
        <record id="access_right_user_own" model="access.rights">
            <field name="name">User Own Record</field>
            <field name="code">user_own</field>
            <field name="description">Access to own user record</field>
            <field name="model_name">res.users</field>
            <field name="access_type">read</field>
            <field name="scope">user</field>
            <field name="category">core</field>
            <field name="is_system_right">True</field>
        </record>
        
        <record id="access_right_user_company" model="access.rights">
            <field name="name">User Company Records</field>
            <field name="code">user_company</field>
            <field name="description">Access to user records in same company</field>
            <field name="model_name">res.users</field>
            <field name="access_type">read</field>
            <field name="scope">company</field>
            <field name="category">core</field>
            <field name="is_system_right">True</field>
        </record>
        
        <!-- Default User Preferences -->
        <record id="preference_theme" model="user.preferences">
            <field name="name">Theme Preference</field>
            <field name="key">theme</field>
            <field name="description">User theme preference</field>
            <field name="value">kids</field>
            <field name="value_type">string</field>
            <field name="category">ui</field>
            <field name="scope">user</field>
            <field name="default_value">kids</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_language" model="user.preferences">
            <field name="name">Language Preference</field>
            <field name="key">language</field>
            <field name="description">User language preference</field>
            <field name="value">en_US</field>
            <field name="value_type">string</field>
            <field name="category">localization</field>
            <field name="scope">user</field>
            <field name="default_value">en_US</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_timezone" model="user.preferences">
            <field name="name">Timezone Preference</field>
            <field name="key">timezone</field>
            <field name="description">User timezone preference</field>
            <field name="value">Asia/Kolkata</field>
            <field name="value_type">string</field>
            <field name="category">localization</field>
            <field name="scope">user</field>
            <field name="default_value">Asia/Kolkata</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_notifications" model="user.preferences">
            <field name="name">Notifications Enabled</field>
            <field name="key">notifications_enabled</field>
            <field name="description">Enable notifications for user</field>
            <field name="value">true</field>
            <field name="value_type">boolean</field>
            <field name="category">notifications</field>
            <field name="scope">user</field>
            <field name="default_value">true</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_sound" model="user.preferences">
            <field name="name">Sound Enabled</field>
            <field name="key">sound_enabled</field>
            <field name="description">Enable sound notifications</field>
            <field name="value">true</field>
            <field name="value_type">boolean</field>
            <field name="category">notifications</field>
            <field name="scope">user</field>
            <field name="default_value">true</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_animations" model="user.preferences">
            <field name="name">Animations Enabled</field>
            <field name="key">animations_enabled</field>
            <field name="description">Enable UI animations</field>
            <field name="value">true</field>
            <field name="value_type">boolean</field>
            <field name="category">ui</field>
            <field name="scope">user</field>
            <field name="default_value">true</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_touchscreen" model="user.preferences">
            <field name="name">Touchscreen Mode</field>
            <field name="key">touchscreen_mode</field>
            <field name="description">Enable touchscreen mode</field>
            <field name="value">false</field>
            <field name="value_type">boolean</field>
            <field name="category">ui</field>
            <field name="scope">user</field>
            <field name="default_value">false</field>
            <field name="is_system_preference">True</field>
        </record>
        
        <record id="preference_compact" model="user.preferences">
            <field name="name">Compact Mode</field>
            <field name="key">compact_mode</field>
            <field name="description">Enable compact interface mode</field>
            <field name="value">false</field>
            <field name="value_type">boolean</field>
            <field name="category">ui</field>
            <field name="scope">user</field>
            <field name="default_value">false</field>
            <field name="is_system_preference">True</field>
        </record>
        
    </data>
</odoo>