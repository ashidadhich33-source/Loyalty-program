<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Groups Tree View -->
        <record id="view_groups_tree" model="ir.ui.view">
            <field name="name">groups.tree</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
                <tree string="Groups" decoration-muted="not is_active" decoration-info="is_system_group">
                    <field name="name"/>
                    <field name="category"/>
                    <field name="description"/>
                    <field name="parent_id"/>
                    <field name="user_count"/>
                    <field name="is_active"/>
                    <field name="is_system_group"/>
                    <field name="access_level"/>
                    <field name="last_used"/>
                </tree>
            </field>
        </record>
        
        <!-- Groups Form View -->
        <record id="view_groups_form" model="ir.ui.view">
            <field name="name">groups.form</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
                <form string="Group">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="btn-primary" attrs="{'invisible': [('is_active', '=', True)]}"/>
                        <button name="action_deactivate" string="Deactivate" type="object" class="btn-warning" attrs="{'invisible': [('is_active', '=', False)]}"/>
                        <button name="action_duplicate" string="Duplicate" type="object" class="btn-secondary"/>
                        <field name="is_active" widget="statusbar" statusbar_visible="False,True"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Group Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group string="Basic Information">
                                <field name="description"/>
                                <field name="category"/>
                                <field name="parent_id"/>
                                <field name="is_system_group"/>
                            </group>
                            <group string="Access Control">
                                <field name="access_level"/>
                                <field name="ip_restrictions"/>
                                <field name="time_restrictions"/>
                            </group>
                        </group>
                        
                        <group>
                            <group string="Notifications">
                                <field name="notification_enabled"/>
                                <field name="notification_types"/>
                            </group>
                            <group string="Statistics">
                                <field name="user_count"/>
                                <field name="last_used"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Users" name="users">
                                <field name="users" widget="many2many_tags"/>
                            </page>
                            
                            <page string="Permissions" name="permissions">
                                <field name="permission_ids" widget="many2many_tags"/>
                            </page>
                            
                            <page string="Child Groups" name="children">
                                <field name="child_ids" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="category"/>
                                        <field name="description"/>
                                        <field name="user_count"/>
                                        <field name="is_active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Groups Search View -->
        <record id="view_groups_search" model="ir.ui.view">
            <field name="name">groups.search</field>
            <field name="model">res.groups</field>
            <field name="arch" type="xml">
                <search string="Search Groups">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="category"/>
                    <field name="parent_id"/>
                    <filter string="Active Groups" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Inactive Groups" name="inactive" domain="[('is_active', '=', False)]"/>
                    <filter string="System Groups" name="system" domain="[('is_system_group', '=', True)]"/>
                    <filter string="Custom Groups" name="custom" domain="[('is_system_group', '=', False)]"/>
                    <filter string="Core" name="core" domain="[('category', '=', 'core')]"/>
                    <filter string="Sales" name="sales" domain="[('category', '=', 'sales')]"/>
                    <filter string="Inventory" name="inventory" domain="[('category', '=', 'inventory')]"/>
                    <filter string="Accounting" name="accounting" domain="[('category', '=', 'accounting')]"/>
                    <filter string="HR" name="hr" domain="[('category', '=', 'hr')]"/>
                    <filter string="POS" name="pos" domain="[('category', '=', 'pos')]"/>
                    <filter string="Reports" name="reports" domain="[('category', '=', 'reports')]"/>
                    <filter string="Settings" name="settings" domain="[('category', '=', 'settings')]"/>
                    <filter string="Custom" name="custom_category" domain="[('category', '=', 'custom')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                        <filter string="Parent Group" name="group_parent" context="{'group_by': 'parent_id'}"/>
                        <filter string="Access Level" name="group_access_level" context="{'group_by': 'access_level'}"/>
                        <filter string="Created Date" name="group_create_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Groups Action -->
        <record id="action_groups" model="ir.actions.act_window">
            <field name="name">Groups</field>
            <field name="res_model">res.groups</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_groups_tree"/>
            <field name="search_view_id" ref="view_groups_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
        
    </data>
</odoo>