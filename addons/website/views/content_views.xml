<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Website Content Tree View -->
        <record id="view_website_content_tree" model="ir.ui.view">
            <field name="name">website.content.tree</field>
            <field name="model">website.content</field>
            <field name="arch" type="xml">
                <tree string="Website Content" decoration-muted="not is_published" decoration-success="is_published">
                    <field name="name"/>
                    <field name="title"/>
                    <field name="content_type"/>
                    <field name="website_id"/>
                    <field name="page_id"/>
                    <field name="is_active"/>
                    <field name="is_published"/>
                    <field name="sequence"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                    <field name="total_views"/>
                </tree>
            </field>
        </record>
        
        <!-- Website Content Form View -->
        <record id="view_website_content_form" model="ir.ui.view">
            <field name="name">website.content.form</field>
            <field name="model">website.content</field>
            <field name="arch" type="xml">
                <form string="Website Content">
                    <header>
                        <button name="action_publish" string="Publish" type="object" class="btn-primary" states="draft"/>
                        <button name="action_unpublish" string="Unpublish" type="object" class="btn-secondary" states="published"/>
                        <button name="action_preview" string="Preview" type="object" class="btn-info"/>
                        <field name="is_published" widget="statusbar" statusbar_visible="is_published"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Content Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="content_type"/>
                                <field name="website_id"/>
                                <field name="page_id"/>
                                <field name="is_active"/>
                                <field name="is_published"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="display_position"/>
                                <field name="display_style"/>
                                <field name="show_on_desktop"/>
                                <field name="show_on_tablet"/>
                                <field name="show_on_mobile"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Content" name="content">
                                <field name="text_content" widget="html"/>
                            </page>
                            <page string="Media" name="media">
                                <field name="image_url"/>
                                <field name="video_url"/>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <h3>Analytics</h3>
                                <field name="total_views"/>
                                <field name="engagement_rate"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Website Content Action -->
        <record id="action_website_content" model="ir.actions.act_window">
            <field name="name">Website Content</field>
            <field name="res_model">website.content</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <!-- Website Gallery Tree View -->
        <record id="view_website_gallery_tree" model="ir.ui.view">
            <field name="name">website.gallery.tree</field>
            <field name="model">website.gallery</field>
            <field name="arch" type="xml">
                <tree string="Website Galleries" decoration-muted="not is_published" decoration-success="is_published">
                    <field name="name"/>
                    <field name="website_id"/>
                    <field name="is_active"/>
                    <field name="is_published"/>
                    <field name="sequence"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                    <field name="gallery_type"/>
                    <field name="total_views"/>
                </tree>
            </field>
        </record>
        
        <!-- Website Gallery Form View -->
        <record id="view_website_gallery_form" model="ir.ui.view">
            <field name="name">website.gallery.form</field>
            <field name="model">website.gallery</field>
            <field name="arch" type="xml">
                <form string="Website Gallery">
                    <header>
                        <button name="action_publish" string="Publish" type="object" class="btn-primary" states="draft"/>
                        <button name="action_unpublish" string="Unpublish" type="object" class="btn-secondary" states="published"/>
                        <field name="is_published" widget="statusbar" statusbar_visible="is_published"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Gallery Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                                <field name="website_id"/>
                                <field name="is_active"/>
                                <field name="is_published"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="gallery_type"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Images" name="images">
                                <field name="image_ids">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="image_url"/>
                                        <field name="alt_text"/>
                                        <field name="caption"/>
                                        <field name="is_active"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <h3>Analytics</h3>
                                <field name="total_views"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Website Gallery Action -->
        <record id="action_website_gallery" model="ir.actions.act_window">
            <field name="name">Website Galleries</field>
            <field name="res_model">website.gallery</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</ocean>