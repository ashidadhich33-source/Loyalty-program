<?xml version="1.0" encoding="utf-8"?>
<ocean>
    <data>
        
        <!-- Website Form Tree View -->
        <record id="view_website_form_tree" model="ir.ui.view">
            <field name="name">website.form.tree</field>
            <field name="model">website.form</field>
            <field name="arch" type="xml">
                <tree string="Website Forms" decoration-muted="not is_published" decoration-success="is_published">
                    <field name="name"/>
                    <field name="title"/>
                    <field name="form_type"/>
                    <field name="website_id"/>
                    <field name="page_id"/>
                    <field name="is_active"/>
                    <field name="is_published"/>
                    <field name="sequence"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                    <field name="total_submissions"/>
                </tree>
            </field>
        </record>
        
        <!-- Website Form Form View -->
        <record id="view_website_form_form" model="ir.ui.view">
            <field name="name">website.form.form</field>
            <field name="model">website.form</field>
            <field name="arch" type="xml">
                <form string="Website Form">
                    <header>
                        <button name="action_publish" string="Publish" type="object" class="btn-primary" states="draft"/>
                        <button name="action_unpublish" string="Unpublish" type="object" class="btn-secondary" states="published"/>
                        <button name="action_preview" string="Preview" type="object" class="btn-info"/>
                        <button name="action_view_submissions" string="View Submissions" type="object" class="btn-success"/>
                        <field name="is_published" widget="statusbar" statusbar_visible="is_published"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Form Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="title"/>
                                <field name="form_type"/>
                                <field name="website_id"/>
                                <field name="page_id"/>
                                <field name="is_active"/>
                                <field name="is_published"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="action_type"/>
                                <field name="email_to" attrs="{'invisible': [('action_type', '!=', 'email')]}"/>
                                <field name="email_subject" attrs="{'invisible': [('action_type', '!=', 'email')]}"/>
                                <field name="redirect_url" attrs="{'invisible': [('action_type', '!=', 'redirect')]}"/>
                                <field name="success_message"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Form Fields" name="form_fields">
                                <field name="field_ids">
                                    <tree editable="bottom">
                                        <field name="sequence"/>
                                        <field name="name"/>
                                        <field name="label"/>
                                        <field name="field_type"/>
                                        <field name="is_required"/>
                                        <field name="placeholder"/>
                                        <field name="help_text"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <h3>Analytics</h3>
                                <field name="total_submissions"/>
                                <field name="conversion_rate"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Website Form Action -->
        <record id="action_website_form" model="ir.actions.act_window">
            <field name="name">Website Forms</field>
            <field name="res_model">website.form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <!-- Website Form Submission Tree View -->
        <record id="view_website_form_submission_tree" model="ir.ui.view">
            <field name="name">website.form.submission.tree</field>
            <field name="model">website.form.submission</field>
            <field name="arch" type="xml">
                <tree string="Form Submissions" decoration-muted="state=='closed'" decoration-success="state=='replied'" decoration-info="state=='new'">
                    <field name="name"/>
                    <field name="form_id"/>
                    <field name="contact_name"/>
                    <field name="contact_email"/>
                    <field name="contact_phone"/>
                    <field name="state"/>
                    <field name="create_date"/>
                    <field name="age_group_focus"/>
                    <field name="season_specialization"/>
                    <field name="product_category"/>
                </tree>
            </field>
        </record>
        
        <!-- Website Form Submission Form View -->
        <record id="view_website_form_submission_form" model="ir.ui.view">
            <field name="name">website.form.submission.form</field>
            <field name="model">website.form.submission</field>
            <field name="arch" type="xml">
                <form string="Form Submission">
                    <header>
                        <button name="action_process" string="Process" type="object" class="btn-primary" states="new"/>
                        <button name="action_reply" string="Reply" type="object" class="btn-info" states="new,processed"/>
                        <button name="action_close" string="Close" type="object" class="btn-secondary" states="new,processed,replied"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,processed,replied,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Submission Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="form_id"/>
                                <field name="contact_name"/>
                                <field name="contact_email"/>
                                <field name="contact_phone"/>
                            </group>
                            <group>
                                <field name="state"/>
                                <field name="create_date"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <h3>Kids Clothing Specific</h3>
                                <field name="age_group_focus"/>
                                <field name="season_specialization"/>
                                <field name="brand_focus"/>
                                <field name="product_category"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Submission Data" name="submission_data">
                                <field name="submission_data" widget="text"/>
                            </page>
                        </notebook>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Website Form Submission Action -->
        <record id="action_website_form_submission" model="ir.actions.act_window">
            <field name="name">Form Submissions</field>
            <field name="res_model">website.form.submission</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</ocean>