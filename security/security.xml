<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Security Groups -->
        <record id="group_kids_clothing_user" model="res.groups">
            <field name="name">Kids Clothing User</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Can access kids clothing specific features</field>
        </record>

        <record id="group_kids_clothing_manager" model="res.groups">
            <field name="name">Kids Clothing Manager</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Can manage kids clothing operations</field>
        </record>

        <record id="group_kids_clothing_admin" model="res.groups">
            <field name="name">Kids Clothing Administrator</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Full access to kids clothing system</field>
        </record>

        <!-- Record Rules -->
        <record id="rule_res_partner_kids_clothing" model="ir.rule">
            <field name="name">Kids Clothing Partners</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('is_kids_clothing_customer', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="rule_sale_order_kids_clothing" model="ir.rule">
            <field name="name">Kids Clothing Sales Orders</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="domain_force">[('is_kids_clothing_order', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="rule_pos_order_kids_clothing" model="ir.rule">
            <field name="name">Kids Clothing POS Orders</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="domain_force">[('is_kids_clothing_pos', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="rule_product_template_kids_clothing" model="ir.rule">
            <field name="name">Kids Clothing Products</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="domain_force">[('is_kids_clothing', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <!-- Menu Security -->
        <record id="menu_sales_kids_clothing" model="ir.ui.menu">
            <field name="name">Sales</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_pos_kids_clothing" model="ir.ui.menu">
            <field name="name">Point of Sale</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_inventory_kids_clothing" model="ir.ui.menu">
            <field name="name">Inventory</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_purchase_kids_clothing" model="ir.ui.menu">
            <field name="name">Purchase</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_accounting_kids_clothing" model="ir.ui.menu">
            <field name="name">Accounting</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_crm_kids_clothing" model="ir.ui.menu">
            <field name="name">CRM</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_hr_kids_clothing" model="ir.ui.menu">
            <field name="name">Human Resources</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_reports_kids_clothing" model="ir.ui.menu">
            <field name="name">Reports</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_user'))]"/>
        </record>

        <record id="menu_configuration_kids_clothing" model="ir.ui.menu">
            <field name="name">Configuration</field>
            <field name="parent_id" ref="menu_kids_clothing_erp"/>
            <field name="groups_id" eval="[(4, ref('group_kids_clothing_manager'))]"/>
        </record>

    </data>
</odoo>