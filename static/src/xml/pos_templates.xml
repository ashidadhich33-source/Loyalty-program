<?xml version="1.0" encoding="utf-8"?>
<templates>
    <!-- Kids Clothing POS Interface -->
    <t t-name="kids_clothing_erp.pos" t-inherit="point_of_sale.pos" t-inherit-mode="extension">
        <xpath expr="//div[@class='pos']" position="inside">
            <!-- Kids Clothing Specific Header -->
            <div class="kids-clothing-header">
                <h1>Kids Clothing POS</h1>
                <p>Point of Sale for Kids Clothing Store</p>
            </div>
            
            <!-- Customer Information -->
            <div class="customer-info-section">
                <h3>Customer Information</h3>
                <div class="customer-search-container">
                    <input type="text" class="customer-search" placeholder="Search customer..."/>
                    <div class="customer-suggestions"></div>
                </div>
                <div class="customer-details" style="display: none;">
                    <div class="customer-name"></div>
                    <div class="customer-loyalty-points"></div>
                    <div class="customer-preferences"></div>
                </div>
            </div>
            
            <!-- Child Information -->
            <div class="child-info-section">
                <h3>Child Information</h3>
                <div class="child-name-container">
                    <label>Child Name:</label>
                    <input type="text" class="child-name-input" placeholder="Enter child name"/>
                </div>
                <div class="child-age-container">
                    <label>Child Age:</label>
                    <input type="number" class="child-age-input" placeholder="Enter child age" min="0" max="18"/>
                </div>
                <div class="child-size-container">
                    <label>Size Preference:</label>
                    <select class="child-size-select">
                        <option value="">Select Size</option>
                        <option value="xs">XS (2-4 years)</option>
                        <option value="s">S (4-6 years)</option>
                        <option value="m">M (6-8 years)</option>
                        <option value="l">L (8-10 years)</option>
                        <option value="xl">XL (10-12 years)</option>
                    </select>
                </div>
            </div>
            
            <!-- Products Grid -->
            <div class="products-section">
                <h3>Products</h3>
                <div class="products-grid"></div>
            </div>
            
            <!-- Cart -->
            <div class="cart-section">
                <h3>Shopping Cart</h3>
                <div class="cart-items"></div>
                <div class="cart-total">
                    <div class="subtotal">Subtotal: $<span class="subtotal-amount">0.00</span></div>
                    <div class="tax">Tax: $<span class="tax-amount">0.00</span></div>
                    <div class="loyalty-discount">Loyalty Discount: $<span class="loyalty-discount-amount">0.00</span></div>
                    <div class="total">Total: $<span class="total-amount">0.00</span></div>
                </div>
            </div>
            
            <!-- Loyalty Points -->
            <div class="loyalty-section">
                <h3>Loyalty Points</h3>
                <div class="loyalty-points-container">
                    <label>Available Points:</label>
                    <span class="available-points">0</span>
                </div>
                <div class="loyalty-points-usage">
                    <label>Use Points:</label>
                    <input type="number" class="loyalty-points-input" placeholder="Enter points to use" min="0"/>
                </div>
            </div>
            
            <!-- Gift Information -->
            <div class="gift-section">
                <h3>Gift Information</h3>
                <div class="gift-checkbox">
                    <input type="checkbox" class="is-gift-checkbox"/>
                    <label>This is a gift</label>
                </div>
                <div class="gift-details" style="display: none;">
                    <div class="gift-recipient">
                        <label>Gift Recipient:</label>
                        <input type="text" class="gift-recipient-input" placeholder="Enter recipient name"/>
                    </div>
                    <div class="gift-message">
                        <label>Gift Message:</label>
                        <textarea class="gift-message-input" placeholder="Enter gift message"></textarea>
                    </div>
                </div>
            </div>
            
            <!-- Payment -->
            <div class="payment-section">
                <h3>Payment</h3>
                <div class="payment-methods">
                    <button class="payment-btn cash">Cash</button>
                    <button class="payment-btn card">Card</button>
                    <button class="payment-btn loyalty">Loyalty Points</button>
                </div>
            </div>
        </xpath>
    </t>
    
    <!-- Product Card Template -->
    <t t-name="kids_clothing_erp.product_card">
        <div class="product-card" t-att-data-id="product.id">
            <div class="product-image">
                <img t-att-src="product.image_128" t-att-alt="product.name"/>
            </div>
            <div class="product-info">
                <h4 t-esc="product.name"/>
                <p class="price">$<span t-esc="product.list_price"/></p>
                <div class="age-range" t-esc="product.age_range"/>
                <div class="gender" t-esc="product.gender"/>
                <div class="size-variants">
                    <t t-foreach="product.size_variants" t-as="size">
                        <span class="size-variant" t-att-data-size="size.size" t-esc="size.size"/>
                    </t>
                </div>
                <div class="color-variants">
                    <t t-foreach="product.color_variants" t-as="color">
                        <span class="color-variant" t-att-data-color="color.color_name" t-att-data-image-url="color.image" t-esc="color.color_name"/>
                    </t>
                </div>
                <button class="add-to-cart-btn">Add to Cart</button>
            </div>
        </div>
    </t>
    
    <!-- Customer Suggestion Template -->
    <t t-name="kids_clothing_erp.customer_suggestion">
        <div class="customer-suggestion" t-att-data-id="customer.id">
            <div class="customer-name" t-esc="customer.name"/>
            <div class="customer-info">
                <span t-esc="customer.email"/>
                <span t-esc="customer.phone"/>
            </div>
            <div class="customer-loyalty">
                <span class="loyalty-points" t-esc="customer.loyalty_points"/>
                <span class="loyalty-tier" t-esc="customer.loyalty_tier"/>
            </div>
        </div>
    </t>
    
    <!-- Cart Item Template -->
    <t t-name="kids_clothing_erp.cart_item">
        <div class="cart-item" t-att-data-id="item.id">
            <div class="item-image">
                <img t-att-src="item.image" t-att-alt="item.name"/>
            </div>
            <div class="item-details">
                <div class="item-name" t-esc="item.name"/>
                <div class="item-size" t-esc="item.size"/>
                <div class="item-color" t-esc="item.color"/>
                <div class="item-quantity">
                    <button class="quantity-btn minus">-</button>
                    <span class="quantity" t-esc="item.quantity"/>
                    <button class="quantity-btn plus">+</button>
                </div>
            </div>
            <div class="item-price">
                <span class="price">$<span t-esc="item.price"/></span>
                <button class="remove-item-btn">Remove</button>
            </div>
        </div>
    </t>
    
    <!-- Receipt Template -->
    <t t-name="kids_clothing_erp.receipt">
        <div class="pos-receipt">
            <div class="header">
                <h1>Kids Clothing Store</h1>
                <p>123 Main Street, City, State 12345</p>
                <p>Phone: (555) 123-4567</p>
                <p>Email: info@kidsclothing.com</p>
            </div>
            
            <div class="receipt-info">
                <div class="receipt-number">
                    <strong>Receipt #:</strong> <span t-esc="receipt.number"/>
                </div>
                <div class="receipt-date">
                    <strong>Date:</strong> <span t-esc="receipt.date"/>
                </div>
                <div class="receipt-time">
                    <strong>Time:</strong> <span t-esc="receipt.time"/>
                </div>
            </div>
            
            <div class="customer-info">
                <div class="customer-name">
                    <strong>Customer:</strong> <span t-esc="receipt.customer_name"/>
                </div>
                <div class="child-name">
                    <strong>Child:</strong> <span t-esc="receipt.child_name"/>
                </div>
            </div>
            
            <div class="items">
                <div class="items-header">
                    <div class="item-name">Item</div>
                    <div class="item-size">Size</div>
                    <div class="item-qty">Qty</div>
                    <div class="item-price">Price</div>
                </div>
                <t t-foreach="receipt.items" t-as="item">
                    <div class="item">
                        <div class="item-name" t-esc="item.name"/>
                        <div class="item-size" t-esc="item.size"/>
                        <div class="item-qty" t-esc="item.quantity"/>
                        <div class="item-price">$<span t-esc="item.price"/></div>
                    </div>
                </t>
            </div>
            
            <div class="totals">
                <div class="subtotal">
                    <strong>Subtotal:</strong> $<span t-esc="receipt.subtotal"/>
                </div>
                <div class="tax">
                    <strong>Tax:</strong> $<span t-esc="receipt.tax"/>
                </div>
                <div class="loyalty-discount">
                    <strong>Loyalty Discount:</strong> -$<span t-esc="receipt.loyalty_discount"/>
                </div>
                <div class="total">
                    <strong>Total:</strong> $<span t-esc="receipt.total"/>
                </div>
            </div>
            
            <div class="payment-info">
                <div class="payment-method">
                    <strong>Payment Method:</strong> <span t-esc="receipt.payment_method"/>
                </div>
                <div class="amount-paid">
                    <strong>Amount Paid:</strong> $<span t-esc="receipt.amount_paid"/>
                </div>
                <div class="change">
                    <strong>Change:</strong> $<span t-esc="receipt.change"/>
                </div>
            </div>
            
            <div class="loyalty-info">
                <div class="points-earned">
                    <strong>Points Earned:</strong> <span t-esc="receipt.points_earned"/>
                </div>
                <div class="points-used">
                    <strong>Points Used:</strong> <span t-esc="receipt.points_used"/>
                </div>
                <div class="points-balance">
                    <strong>Points Balance:</strong> <span t-esc="receipt.points_balance"/>
                </div>
            </div>
            
            <div class="footer">
                <p>Thank you for shopping with us!</p>
                <p>Visit us again soon!</p>
            </div>
        </div>
    </t>
</templates>