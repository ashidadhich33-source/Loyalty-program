<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Order Form View -->
        <record id="view_sale_order_form_kids_clothing" model="ir.ui.view">
            <field name="name">sale.order.form.kids.clothing</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="is_kids_clothing_order" invisible="1"/>
                    <field name="child_name" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                    <field name="child_age" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                    <field name="special_instructions" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                    <field name="gift_wrapping" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                    <field name="gift_message" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="after">
                    <field name="order_status" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="delivery_date" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                    <field name="delivery_method" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Tree View -->
        <record id="view_sale_order_tree_kids_clothing" model="ir.ui.view">
            <field name="name">sale.order.tree.kids.clothing</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="child_name" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                    <field name="order_status" attrs="{'invisible': [('is_kids_clothing_order', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Line Form View -->
        <record id="view_sale_order_line_form_kids_clothing" model="ir.ui.view">
            <field name="name">sale.order.line.form.kids.clothing</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sale_order_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="child_size" attrs="{'invisible': [('product_id.is_kids_clothing', '=', False)]}"/>
                    <field name="color_preference" attrs="{'invisible': [('product_id.is_kids_clothing', '=', False)]}"/>
                    <field name="special_requirements" attrs="{'invisible': [('product_id.is_kids_clothing', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Sale Order Actions -->
        <record id="action_sale_order" model="ir.actions.act_window">
            <field name="name">Sales Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_kids_clothing': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new sales order
                </p>
                <p>
                    Sales orders are the main documents for managing your sales process.
                    They contain the products and services you sell to your customers.
                </p>
            </field>
        </record>

        <record id="action_quotation" model="ir.actions.act_window">
            <field name="name">Quotations</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'draft')]</field>
            <field name="context">{'search_default_kids_clothing': 1}</field>
        </record>

        <!-- Partner Form View -->
        <record id="view_partner_form_kids_clothing" model="ir.ui.view">
            <field name="name">res.partner.form.kids.clothing</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_kids_clothing_customer"/>
                    <field name="child_age" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="preferred_brand" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="size_preference" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="clothing_style" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='website']" position="after">
                    <field name="loyalty_points" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="loyalty_tier" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="total_purchases" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="last_purchase_date" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Partner Tree View -->
        <record id="view_partner_tree_kids_clothing" model="ir.ui.view">
            <field name="name">res.partner.tree.kids.clothing</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="is_kids_clothing_customer"/>
                    <field name="loyalty_tier" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                    <field name="total_purchases" attrs="{'invisible': [('is_kids_clothing_customer', '=', False)]}"/>
                </xpath>
            </field>
        </record>

        <!-- Partner Actions -->
        <record id="action_partner" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_company', '=', False)]</field>
            <field name="context">{'search_default_kids_clothing_customer': 1}</field>
        </record>

        <record id="action_supplier" model="ir.actions.act_window">
            <field name="name">Suppliers</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_company', '=', True), ('supplier_rank', '>', 0)]</field>
        </record>

    </data>
</odoo>